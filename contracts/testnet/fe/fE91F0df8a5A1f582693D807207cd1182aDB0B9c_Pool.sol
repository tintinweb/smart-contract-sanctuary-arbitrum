    uint public constant SCALER = 1e18;

    address public WETH_ADDRESS;

    /// @notice The synth token used to pass on to vault as fee
    address public feeToken;

    struct Synth {
        bool isActive;
        bool isDisabled;
        uint256 mintFee;
