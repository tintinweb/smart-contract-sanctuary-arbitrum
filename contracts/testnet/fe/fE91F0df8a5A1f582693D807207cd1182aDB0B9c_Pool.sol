        uint amountUSD;
        uint debt;
        address[] tokens;
        uint[] prices;
    }

    struct Vars_Liquidate {
        AccountLiquidity liq;
        Collateral collateral;
        uint ltv;
        address[] tokens;
        uint[] prices;
        uint amountUSD;
        uint debtUSD;
        uint amountOut;
        uint penalty;
        uint refundOut;
    }

    uint256[50] private __gap;
}

