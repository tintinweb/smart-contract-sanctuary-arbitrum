import "@arbitrum/nitro-contracts/src/bridge/Inbox.sol";
import "@arbitrum/nitro-contracts/src/bridge/Outbox.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Metadata.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "../arbitrum/AssetControllerL2.sol";

contract AssetLockerL1 is Ownable {
    address public l2Target;
    IInbox public inbox;
    uint256 public fee = 0.001 ether;

    event RetryableTicketCreated(uint256 indexed ticketId);

    constructor(address _l2Target, address _inbox) {
        l2Target = _l2Target;
        inbox = IInbox(_inbox);
    }

    function setFee(uint256 _newFee) external onlyOwner {
        fee = _newFee;
    }

    function getL2Target() public view returns (address) {
        return l2Target;
    }

    function updateL2Target(address _l2Target) public onlyOwner {
        l2Target = _l2Target;
    }

    function deposit(
        address tokenAddress,
        uint256 tokenId,
        uint256 maxSubmissionCost,
        uint256 maxGas,
        uint256 gasPriceBid
    ) public payable {
        IERC721Metadata ERC721Contract = IERC721Metadata(tokenAddress);
        require(
            ERC721Contract.ownerOf(tokenId) == msg.sender,
            "You do not own this token."
        );
        // TODO:Need to call the source ERC721 contract's setApprovalForAll from front-end first
        require(
            ERC721Contract.isApprovedForAll(msg.sender, address(this)),
            "Please approve your token first."
        );
        require(
            msg.value >= fee,
            "Not enough ETH : check fee."
        );

        ERC721Contract.transferFrom(msg.sender, address(this), tokenId);
        _sendMessageToL2(
            tokenAddress,
            tokenId,
            ERC721Contract.name(),
            ERC721Contract.symbol(),
            ERC721Contract.tokenURI(tokenId),
            maxSubmissionCost,
            maxGas,
            gasPriceBid
        );
    }

    /// @notice only l2Target can update greeting
    function receiveMessageFromL2(
        address l1NftContractAddress,
        uint256 tokenId,
        address withdrawer
    ) public {
        IBridge bridge = inbox.bridge();
        // this prevents reentrancies on L2 to L1 txs
        require(msg.sender == address(bridge), "NOT_BRIDGE");
        IOutbox outbox = IOutbox(bridge.activeOutbox());
        address l2Sender = outbox.l2ToL1Sender();
        require(l2Sender == l2Target, "Greeting only updateable by L2");

        _withdraw(l1NftContractAddress, tokenId, withdrawer);
    }

    // TODO:Maybe we can check the counterpart contract is exist or not by front-end logic ?
    // So that we only need to send (contractName, contractSymbol, baseURI) to L2 when counterpart contract isn't exist.
    function _sendMessageToL2(
        address l1NftContractAddress,
        uint256 tokenId,
        string memory contractName,
        string memory contractSymbol,
        string memory tokenURI,
        uint256 maxSubmissionCost,
        uint256 maxGas,
        uint256 gasPriceBid
    ) private returns (uint256) {
        bytes memory data = abi.encodeWithSelector(
            AssetControllerL2.receiveMessageFromL1.selector,
            l1NftContractAddress,
            tokenId,
            msg.sender,
            contractName,
            contractSymbol,
            tokenURI
        );
        uint256 ticketID = inbox.createRetryableTicket{value: msg.value-fee}(
            l2Target,
            0,
            maxSubmissionCost,
            msg.sender,
            msg.sender,
            maxGas,
            gasPriceBid,
            data
        );

        emit RetryableTicketCreated(ticketID);
        return ticketID;
    }

    function _withdraw(
        address tokenAddress,
        uint256 tokenId,
        address withdrawer
    ) private {
        IERC721 ERC721Contract = IERC721(tokenAddress);
        ERC721Contract.safeTransferFrom(address(this), withdrawer, tokenId);
    }
}