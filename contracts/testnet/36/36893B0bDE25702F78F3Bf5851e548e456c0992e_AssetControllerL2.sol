import "@arbitrum/nitro-contracts/src/precompiles/ArbSys.sol";
import "@arbitrum/nitro-contracts/src/libraries/AddressAliasHelper.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "../ethereum/AssetLockerL1.sol";
import "../ERC721Shadow.sol";

contract AssetControllerL2 is Ownable {
    ArbSys constant arbsys = ArbSys(address(100));
    uint256 public fee = 0.001 ether;
    address public l1Target;
    mapping(address => address) public l1ToL2ContractPairs;
    mapping(address => address) public l2ToL1ContractPairs;

    event L2ToL1TxCreated(uint256 indexed withdrawalId);
    event L1ToL2TxRedeemed(
        address l1NftContractAddress,
        uint256 tokenId,
        address tokenOwner
    );

    constructor(address _l1Target) {
        l1Target = _l1Target;
    }

    /**
     * @notice Get the address of L1 target contract(asset locker).
     */
    function getL1Target() public view returns (address) {
        return l1Target;
    }

    /**
     * @notice Update the counterpart contract address of L1 (asset locker).
     *
     * @param _l1Target The counterpart contract address of L1
     */
    function updateL1Target(address _l1Target) public onlyOwner {
        l1Target = _l1Target;
    }

    /**
     * @notice Update the fee for L2.
     *
     * @param _newFee New fee value for L2
     */
    function setFee(uint256 _newFee) external onlyOwner {
        fee = _newFee;
    }

    /**
     * @notice Entry function to trigger the bridge mechanism from L2 to L1.
     *
     * @param tokenId    Token id of the ERC721 contract.
     * @param withdrawer Address of the token owner.
     */
    function bridgeToL1(uint256 tokenId, address withdrawer) public {
        require(
            mappingContractExistOnL1(msg.sender),
            "Only shadow contract can trigger this function."
        );

        _sendMessageToL1(l2ToL1ContractPairs[msg.sender], tokenId, withdrawer);
    }

    /**
     * @notice Send message to L1 and trigger the withdraw mechanism of L1 asset locker.
     *
     * @param l1NftContractAddress Address of L1 target ERC721 contract.
     * @param tokenId              Token id of the ERC721 contract.
     * @param withdrawer           Address of the token owner.
     */
    function _sendMessageToL1(
        address l1NftContractAddress,
        uint256 tokenId,
        address withdrawer
    ) private {
        bytes memory data = abi.encodeWithSelector(
            AssetLockerL1.receiveMessageFromL2.selector,
            l1NftContractAddress,
            tokenId,
            withdrawer
        );

        uint256 withdrawalId = arbsys.sendTxToL1(l1Target, data);

        emit L2ToL1TxCreated(withdrawalId);
    }

    /**
     * @notice Entry function for L2 ERC721 contract and token generating. Trigger by L1 asset locker.
     *         Play as a contract factory when the L2 ERC721 counterpart contract isn't exist.
     *         When L2 ERC721 counterpart contract is exist, mint a new token with corresponding
     *         token id in L1 original ERC721 contract.
     *
     * @param l1NftContractAddress Address of the L1 ERC721 original contract.
     * @param tokenId              Token id of the ERC721 contract.
     * @param tokenOwner           Address of the token owner.
     * @param contractName         Contract name of the L1 ERC721 original contract.
     * @param tokenSymbol          Token Symbol of the L1 ERC721 original contract.
     * @param tokenURI             TokenURI of the L1 ERC721 original contract.
     */
    function receiveMessageFromL1(
        address l1NftContractAddress,
        uint256 tokenId,
        address tokenOwner,
        string calldata contractName,
        string calldata tokenSymbol,
        string calldata tokenURI
    ) public {
        // To check if message came from L1, we check that the sender is the L1 contract's L2 alias.
        require(
            msg.sender == AddressAliasHelper.applyL1ToL2Alias(l1Target),
            "receive function only updateable by L1"
        );
        if (mappingContractExistOnL2(l1NftContractAddress)) {
            _mint(
                l1ToL2ContractPairs[l1NftContractAddress],
                tokenOwner,
                tokenId,
                tokenURI
            );
        } else {
            _createMappingContract(
                l1NftContractAddress,
                contractName,
                tokenSymbol,
                tokenURI
            );
            _mint(
                l1ToL2ContractPairs[l1NftContractAddress],
                tokenOwner,
                tokenId,
                tokenURI
            );
        }

        emit L1ToL2TxRedeemed(l1NftContractAddress, tokenId, tokenOwner);
    }

    /**
     * @notice Mint the corresponding NFT token on L2.
     *
     * @param shadowContractAddress Address of the corresponding ERC721 contract on L2.
     * @param tokenOwner            Address of the token owner.
     * @param tokenId               Token id of the ERC721 contract.
     */
    function _mint(
        address shadowContractAddress,
        address tokenOwner,
        uint256 tokenId,
        string calldata tokenURI
    ) private {
        ERC721Shadow shadowContract = ERC721Shadow(shadowContractAddress);
        shadowContract.mint(tokenOwner, tokenId, tokenURI);
    }

    /**
     * @notice Create a new ERC721 contract as a L1 ERC721 corresponding contract.
     *         Store the paired ERC721 contract address into map container.
     *
     * @param l1NftContractAddress Address of the L1 ERC721 original contract.
     * @param contractName         Contract name of the L1 ERC721 original contract for corresponding L2 ERC721 contract.
     * @param tokenSymbol          Token Symbol of the L1 ERC721 original contract for corresponding L2 ERC721 contract.
     * @param tokenURI             TokenURI of the L1 ERC721 original contract for corresponding L2 ERC721 contract.
     */
    function _createMappingContract(
        address l1NftContractAddress,
        string calldata contractName,
        string calldata tokenSymbol,
        string calldata tokenURI
    ) private {
        ERC721Shadow shadowContract = new ERC721Shadow(
            contractName,
            tokenSymbol,
            tokenURI
        );
        l1ToL2ContractPairs[l1NftContractAddress] = address(shadowContract);
        l2ToL1ContractPairs[address(shadowContract)] = l1NftContractAddress;
    }

    function mappingContractExistOnL2(address OriginalL1ContractAddress)
        public
        view
        returns (bool)
    {
        if (l1ToL2ContractPairs[OriginalL1ContractAddress] == address(0))
            return false;
        else return true;
    }

    function mappingContractExistOnL1(address shadowL2ContractAddress)
        public
        view
        returns (bool)
    {
        if (l2ToL1ContractPairs[shadowL2ContractAddress] == address(0))
            return false;
        else return true;
    }
}

