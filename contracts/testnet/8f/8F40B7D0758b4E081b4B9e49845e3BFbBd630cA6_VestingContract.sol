import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract VestingContract is Pausable, Ownable {
    IERC20 public token;
    uint256 public vestingDuration = 365 days;
    uint256 public rewardRate = 10; // 10% per year

    struct VestingSchedule {
        uint256 amount;
        uint256 start;
    }

    mapping(address => VestingSchedule) public vestingSchedules;

    event VestingStarted(
        address indexed beneficiary,
        uint256 amount,
        uint256 start
    );

    constructor(address _token) Ownable(msg.sender) {
        token = IERC20(_token);
    }

    function createVestingSchedule(
        address beneficiary,
        uint256 amount
    ) external onlyOwner whenNotPaused {
        require(
            vestingSchedules[beneficiary].start == 0,
            "Vesting schedule already exists"
        );
        token.transfer(address(this), amount);
        vestingSchedules[beneficiary] = VestingSchedule({
            amount: amount,
            start: block.timestamp
        });

        emit VestingStarted(beneficiary, amount, block.timestamp);
    }

    function claimVestedTokens() external whenNotPaused {
        VestingSchedule storage schedule = vestingSchedules[msg.sender];
        require(schedule.start > 0, "No vesting schedule for the sender");
        require(
            block.timestamp >= schedule.start + vestingDuration,
            "Vesting period not over"
        );

        uint256 timeElapsed = block.timestamp - schedule.start;
        uint256 vestedAmount = (schedule.amount * rewardRate * timeElapsed) /
            (365 days * 100);

        schedule.amount -= vestedAmount;
        schedule.start = block.timestamp;

        require(vestedAmount > 0, "No tokens to claim");
        require(token.transfer(msg.sender, vestedAmount), "Transfer failed");
    }

    function pauseVesting() external onlyOwner {
        _pause();
    }

    function unpauseVesting() external onlyOwner {
        _unpause();
    }
}