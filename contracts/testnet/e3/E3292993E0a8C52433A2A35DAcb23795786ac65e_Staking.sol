import {Ownable2Step} from "@openzeppelin/contracts/access/Ownable2Step.sol";
import {
    ERC165Storage
} from "@openzeppelin/contracts/utils/introspection/ERC165Storage.sol";
import {IStakingOptions} from "./interfaces/IStakingOptions.sol";

abstract contract StakingOptions is Ownable2Step, ERC165Storage {
    enum OptionType {
        Instant,
        Period
    }

    enum OptionStatus {
        Open,
        Close
    }

    struct Option {
        OptionType typee;
        OptionStatus status;
        uint128 apy;
        uint256 duration;
        uint256 freezingTime;
    }

    uint256 private _optionsCount;
    mapping(uint256 index => Option option) private _options;

    event AppendedOption(uint256 indexed optionIndex, Option option);
    event UpdatedOption(uint256 indexed optionIndex, Option option);

    modifier validOption(uint256 optionIndex) {
        require(
            _optionsCount > optionIndex,
            "StakingOptions: the staking option index out of range"
        );
        _;
    }

    constructor() {
        _registerInterface(type(IStakingOptions).interfaceId);
    }

    function getOptionsCount() external view returns (uint256) {
        return _optionsCount;
    }

    function getOptions() external view returns (Option[] memory) {
        Option[] memory stakingOptions = new Option[](_optionsCount);
        for (uint256 i = 0; i < _optionsCount; i++) {
            stakingOptions[i] = _options[i];
        }
        return stakingOptions;
    }

    function getOption(
        uint256 optionIndex
    ) external view validOption(optionIndex) returns (Option memory) {
        return _options[optionIndex];
    }

    function appendOption(Option memory option) external onlyOwner {
        _appendOption(option);
    }

    function openOption(
        uint256 optionIndex
    ) external validOption(optionIndex) onlyOwner {
        Option memory option = _options[optionIndex];
        option.status = OptionStatus.Open;
        _updateStakingOption(optionIndex, option);
    }

    function closeOption(
        uint256 optionIndex
    ) external validOption(optionIndex) onlyOwner {
        Option memory option = _options[optionIndex];
        option.status = OptionStatus.Close;
        _updateStakingOption(optionIndex, option);
    }

    function _getOption(
        uint256 optionIndex
    ) internal view returns (Option memory) {
        return _options[optionIndex];
    }

    function _appendOption(Option memory option) internal {
        uint256 optionIndex = _optionsCount;
        _setStakingOption(optionIndex, option);
        _optionsCount++;
        emit AppendedOption(optionIndex, option);
    }

    function _updateStakingOption(
        uint256 optionIndex,
        Option memory option
    ) internal {
        _setStakingOption(optionIndex, option);
        emit UpdatedOption(optionIndex, option);
    }

    function _setStakingOption(
        uint256 optionIndex,
        Option memory option
    ) private {
        if (option.typee == OptionType.Instant) {
            require(
                option.duration == 0,
                "StakingOptions: the duration for the Instant option type should be 0"
            );
        } else if (option.typee == OptionType.Period) {
            require(
                option.duration > 0,
                "StakingOptions: the duration for the Period option type should be more than 0"
            );
        }

        require(
            option.apy > 0,
            "StakingOptions: the apy should be more than 0"
        );

        _options[optionIndex] = option;
    }
}

