pragma solidity =0.8.19;

import {
    ReentrancyGuard
} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {StakingConfig} from "./StakingConfig.sol";
import {StakingCalculator} from "./StakingCalculator.sol";
import {StakingTokens} from "./StakingTokens.sol";
import {StakingOptions} from "./StakingOptions.sol";
import {StakingAccounts} from "./StakingAccounts.sol";
import {StakingPausable} from "./StakingPausable.sol";
import {IAFFCoin} from "../AFFCoin/interfaces/IAFFCoin.sol";
import {IStaking} from "./interfaces/IStaking.sol";

contract Staking is
    ReentrancyGuard,
    StakingConfig,
    StakingCalculator,
    StakingTokens,
    StakingOptions,
    StakingAccounts,
    StakingPausable
{
    event Deposit(address indexed sender, uint256 amount);
    event Withdraw(address indexed receiver, uint256 amount);
    event WithdrawalRequest(
        address indexed sender,
        uint256 indexed accountIndex
    );

    constructor(address token) {
        _registerInterface(type(IStaking).interfaceId);

        _setConfigToken(token);
        _setConfigMinDepositAmount(1 * (10 ** IAFFCoin(token).decimals())); // 1 AFFCO

        _appendOption(
            Option({
                typee: OptionType.Instant,
                status: OptionStatus.Open,
                apy: 6,
                duration: 0,
                freezingTime: 0
            })
        ); // Instant - 6%

        _appendOption(
            Option({
                typee: OptionType.Period,
                status: OptionStatus.Open,
                apy: 12,
                duration: 31,
                freezingTime: 7
            })
        ); // 1 month - 12%

        _appendOption(
            Option({
                typee: OptionType.Period,
                status: OptionStatus.Open,
                apy: 24,
                duration: 93,
                freezingTime: 7
            })
        ); // 3 months - 24%

        _appendOption(
            Option({
                typee: OptionType.Period,
                status: OptionStatus.Open,
                apy: 36,
                duration: 186,
                freezingTime: 7
            })
        ); // 6 months - 36%

        _appendOption(
            Option({
                typee: OptionType.Period,
                status: OptionStatus.Open,
                apy: 48,
                duration: 365,
                freezingTime: 7
            })
        ); // 12 months - 48%
    }

    function deposit(
        uint256 amount,
        uint256 optionIndex
    ) external nonReentrant whenNotPaused validOption(optionIndex) {
        Option memory option = _getOption(optionIndex);
        require(
            option.status == OptionStatus.Open,
            "Staking: the staking option is not active now"
        );

        IAFFCoin token = IAFFCoin(_getConfigToken());
        token.transferFrom(msg.sender, address(this), amount);
        (, , uint256 feeAmount) = token.feesCalculator(amount);
        uint256 depositAmount = amount - feeAmount;
        require(
            depositAmount >= _getConfigMinDepositAmount(),
            "Staking: the amount less than minimum deposit"
        );

        bytes32 id = keccak256(
            abi.encodePacked(
                msg.sender,
                _getAccountsCount(msg.sender),
                block.timestamp
            )
        );

        _burnTokens(depositAmount);

        _appendAccount(
            msg.sender,
            Account({
                id: id,
                optionIndex: optionIndex,
                depositAmount: depositAmount,
                isWithdrawalRequest: false,
                createdAt: block.timestamp,
                updatedAt: block.timestamp,
                lockedAt: block.timestamp + option.duration
            })
        );

        emit Deposit(msg.sender, depositAmount);
    }

    function withdrawalRequestForPeriod(
        uint256 accountIndex
    )
        external
        nonReentrant
        whenNotPaused
        validAccountPeriod(msg.sender, accountIndex)
    {
        Account memory account = _getAccount(msg.sender, accountIndex);
        require(
            !account.isWithdrawalRequest,
            "Staking: the withdrawal request has already been made"
        );
        require(
            account.lockedAt < block.timestamp,
            "Staking: locking time has not yet expired"
        );

        Option memory option = _getOption(account.optionIndex);
        account.isWithdrawalRequest = true;
        account.lockedAt = block.timestamp + option.freezingTime;
        _updateAccount(msg.sender, accountIndex, account);

        emit WithdrawalRequest(msg.sender, accountIndex);
    }

    function withdrawAllForPeriod(
        uint256 accountIndex
    )
        external
        nonReentrant
        whenNotPaused
        validAccountPeriod(msg.sender, accountIndex)
    {
        Account memory account = _getAccount(msg.sender, accountIndex);
        require(
            account.isWithdrawalRequest,
            "Staking: no withdrawal request was made"
        );
        require(
            account.lockedAt < block.timestamp,
            "Staking: freezing time has not yet expired"
        );

        _withdrawAll(msg.sender, accountIndex);
    }

    function withdrawForInstant(
        uint256 accountIndex,
        uint256 amount
    )
        external
        nonReentrant
        whenNotPaused
        validAccountInstant(msg.sender, accountIndex)
    {
        Account memory account = _getAccount(msg.sender, accountIndex);
        require(
            account.lockedAt < block.timestamp,
            "Staking: locking time has not yet expired"
        );

        _withdraw(msg.sender, accountIndex, amount);
    }

    function withdrawAllForInstant(
        uint256 accountIndex
    )
        external
        nonReentrant
        whenNotPaused
        validAccountInstant(msg.sender, accountIndex)
    {
        Account memory account = _getAccount(msg.sender, accountIndex);
        require(
            account.lockedAt < block.timestamp,
            "Staking: locking time has not yet expired"
        );

        _withdrawAll(msg.sender, accountIndex);
    }

    function _withdraw(
        address accountOwner,
        uint256 accountIndex,
        uint256 amount
    ) private {
        uint256 totalAmount = _getAccountTotalAmount(
            accountOwner,
            accountIndex
        );
        require(totalAmount >= amount, "Staking: insufficient balance");

        if (totalAmount - amount > _getConfigMinDepositAmount()) {
            Account memory account = _getAccount(msg.sender, accountIndex);
            Option memory option = _getOption(account.optionIndex);

            account.depositAmount = totalAmount - amount;
            account.updatedAt = block.timestamp;
            account.lockedAt = block.timestamp + option.duration;
            _updateAccount(msg.sender, accountIndex, account);

            _mintTokens(address(this), amount);
            _transferTokens(msg.sender, amount);
            _transferPromoterFeeTokens(msg.sender, amount);

            emit Withdraw(accountOwner, amount);
        } else {
            _removeAccount(msg.sender, accountIndex);
            _mintTokens(address(this), totalAmount);
            _transferTokens(msg.sender, totalAmount);
            _transferPromoterFeeTokens(msg.sender, totalAmount);

            emit Withdraw(accountOwner, totalAmount);
        }
    }

    function _withdrawAll(address accountOwner, uint256 accountIndex) private {
        uint256 totalAmount = _getAccountTotalAmount(
            accountOwner,
            accountIndex
        );
        _removeAccount(msg.sender, accountIndex);
        _mintTokens(address(this), totalAmount);
        _transferTokens(msg.sender, totalAmount);
        _transferPromoterFeeTokens(msg.sender, totalAmount);

        emit Withdraw(accountOwner, totalAmount);
    }
}

