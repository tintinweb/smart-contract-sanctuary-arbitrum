    function deployPool(Types.Pool calldata _pool, Types.Sign calldata _sign)
        external
        returns (address addr)
    {
        if (msg.sender != _sign.signer) revert InvalidSignature();
        (, bytes memory code, bytes32 salt) = getPool(_pool, _sign.signer);
        addr = Create2.deploy(0, salt, code);
        ITarget(addr).initialize(_sign, _pool);

        emit DeployedPool(
            addr,
            _sign.signer,
            _pool.kind,
            _pool.stakeToken,
            _pool.rewardToken,
            _pool.nonce,
            block.chainid
        );
    }

    function getPool(Types.Pool calldata _pool, address _signer)
        public
        view
        returns (
            address deployAddress,
            bytes memory code,
            bytes32 salt
        )
    {
        if (_pool.kind == Types.PoolKind.Flexible) {
            code = type(PoolFlexible).creationCode;
        } else if (_pool.kind == Types.PoolKind.NonFlexible) {
            code = type(PoolNonFlexible).creationCode;
        } else {
            revert InvalidPoolKind();
        }
        bytes32 codeHash = keccak256(code);
        salt = keccak256(
            abi.encodePacked(
                _signer,
                _pool.stakeToken,
                _pool.rewardToken,
                _pool.nonce
            )
        );
        deployAddress = Create2.computeAddress(salt, codeHash);
    }
}

