        } else {
            if (gs().usdcReserve > 0) {
                uint256 expectedMagic = IUniswapV2Router02(gs().sushiswapRouter).getAmountsOut(gs().usdcReserve, path)[
                    1
                ];
                expectedMagic = (expectedMagic * (gs().bpsDenominator - gs().slippageInBPS)) / gs().bpsDenominator;
