    /**
     * @notice Deposit a specified amount of the principle token to purchase a bond.
     * @param _amount uint - Amount of principle token to deposit.
     * @param _maxPrice uint - Maximum acceptable price for slippage protection.
     * @param _depositor address - Address of the depositor.
     * @return uint - Amount of OHM to be paid out, with 18 decimals.
     */
    function deposit(
        uint _amount,
        uint _maxPrice,
        address _depositor
    ) external returns (uint) {
        require(_depositor != address(0), "Invalid address");

        decayDebt();
        require(totalDebt <= terms.maxDebt, "Max capacity reached");

        uint priceInUSD = bondPriceInUSD();
        uint nativePrice = bondPrice();

        require(
            _maxPrice >= nativePrice,
            "Slippage limit: more than max price"
        );

        uint value = ITreasury(treasury).valueOf(principle, _amount);
        uint payout = payoutFor(value);

        require(payout >= 10000000, "Bond too small");
        require(payout <= maxPayout(), "Bond too large");

        uint fee = (payout * terms.fee) / 10000;
        uint profit = value - payout - fee;

        IERC20(principle).safeTransferFrom(msg.sender, address(this), _amount);
        IERC20(principle).approve(address(treasury), _amount);
        ITreasury(treasury).deposit(_amount, principle, profit);

        if (fee != 0) {
            IERC20(OHM).safeTransfer(DAO, fee);
        }

        totalDebt = totalDebt + value;

        bondInfo[_depositor] = Bond({
            payout: bondInfo[_depositor].payout + payout,
            vesting: terms.vestingTerm,
            lastBlock: block.timestamp, // Using timestamp instead of block number
            pricePaid: priceInUSD
        });

        emit BondCreated(
            _amount,
            payout,
            block.timestamp + terms.vestingTerm, // Using timestamp instead of block number
            priceInUSD
        );
        emit BondPriceChanged(bondPriceInUSD(), bondPrice(), debtRatio());

        return payout;
    }

    /**
     * @notice redeem bond for user
     * @param _recipient address
     * @param _stake bool
     * @return uint
     */
    function redeem(address _recipient, bool _stake) external returns (uint) {
        Bond memory info = bondInfo[_recipient];
        uint percentVested = percentVestedFor(_recipient);

        if (percentVested >= 10000) {
            delete bondInfo[_recipient];
            emit BondRedeemed(_recipient, info.payout, 0);
            return stakeOrSend(_recipient, _stake, info.payout);
        } else {
            uint payout = (info.payout * percentVested) / 10000;

            bondInfo[_recipient] = Bond({
                payout: info.payout - payout,
                vesting: info.vesting - (block.timestamp - info.lastBlock), // Using timestamp instead of block number
                lastBlock: block.timestamp, // Using timestamp instead of block number
                pricePaid: info.pricePaid
            });

            emit BondRedeemed(_recipient, payout, bondInfo[_recipient].payout);
            return stakeOrSend(_recipient, _stake, payout);
        }
    }

