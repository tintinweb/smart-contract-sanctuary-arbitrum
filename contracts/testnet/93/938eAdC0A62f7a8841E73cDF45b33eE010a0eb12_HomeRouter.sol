  constructor(
    address _stargateRouter,
    address _endpoint,
    address _oToken,
    address _asset,
    uint256 _stargatePoolId
  ) NonblockingLzApp(_endpoint) {
    stargateRouter = IStargateRouter(_stargateRouter);
    oToken = IoToken(_oToken);
    asset = ERC20(_asset);
    stargatePoolId = _stargatePoolId;
    _registerInterface(type(IHomeRouter).interfaceId);
    _giveAllowances(_stargateRouter, _oToken, _asset);
  }

  /*//////////////////////////////////////////////////////////////
                                MODIFIERS
  //////////////////////////////////////////////////////////////*/
  modifier onlyToken() {
    require(msg.sender == address(oToken), "router: notAuthorized");
