  ) internal override {
    // LZApp already does the check for trusted remote lookup l28 LzApp.sol)
    uint256 mode;
    uint256 nonce;
    uint256 amount;
    //TODO: remove those two lines
    emit DebugBytes(true);
    _testNonce = _nonce + 1;
    // (mode, nonce, amount) = abi.decode(_payload, (uint256, uint256, uint256));
    // emit Debug(amount, "nonBlocking");
    // // Mode 0 = deposit
    // if (mode == 0) {
    //   oToken.depositCallback(nonce, amount);

    //   // Mode 1 = compound
    // } else if (mode == 1) {
    //   oToken.updateChainDebt(_srcChainId, amount);
    // }
    // Not a bool to allow for more modes if needed (ex: rebalancing)
  }

  // Send message
  // TODO: improve this and move it to a lib
  function communicateMessage(
    bytes memory _payload,
    uint16 _chainId,
    bytes memory _params
  ) internal returns (bool) {
    _lzSend(_chainId, _payload, payable(tx.origin), address(0x0), _params);
    emit Debug(0, "communicate");
    return (true);
  }

  function sgReceive(
    uint16 _chainId, // the remote chainId sending the tokens
    bytes memory _srcAddress, // the remote router sending the tokens
    uint256 _nonce,
    address _token, // the token contract on the local chain
    uint256 _amountLD, // the qty of tokens received contract tokens (sg/pool.sol l329)
    bytes memory _payload // Data receivoooor
  ) external payable {
    require(
      msg.sender == address(stargateRouter),
      "router: not stargateRouter"
    );
    bytes memory distRouter = trustedRemoteLookup[_chainId];

    require(
      // _srcAddress.length == 20 &&
      keccak256(_srcAddress) == keccak256(distRouter),
      "router: distant router does not match"
    );
    require(address(asset) == _token, "router: incorrect token");
    uint256 nonce;
    uint256 amountWithdrawn;
    (nonce, amountWithdrawn) = abi.decode(_payload, (uint256, uint256));
    emit Debug(ERC20(_token).balanceOf(address(this)), "sgReceive");
    oToken.withdrawCallback(nonce, _amountLD, amountWithdrawn);
  }

  /*//////////////////////////////////////////////////////////////
                              UTILS
    //////////////////////////////////////////////////////////////*/
  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override
    returns (bool)
  {
    return
      interfaceId == type(IHomeRouter).interfaceId ||
      super.supportsInterface(interfaceId);
  }

  function getToken() external view returns (address) {
    return address(oToken);
  }

  // We choose where to invest in
  function chooseStratDeposit(uint256 _amount) public view returns (address) {
    // TODO: how should we use the loss data? check yearn
    // TODO: make sure at least one pool has a maxDeposit equal to max(uint256)
    for (uint256 i = 0; i < strategyInvestmentOrder.length; i++) {
      Strategy memory strategy = strategyInvestmentOrder[i];
      uint256 investableAmount = amountLeftToInvestInStrategy(strategy);
      if (amountLeftToInvestInStrategy(strategy) >= _amount) {
        return (strategy.entryPoint);
      }
    }
  }

  function chooseStratWithdraw(uint256 _amount)
    public
    view
    returns (HeuristicData[] memory stratList)
  {
    // TODO: how should we use the loss data? check yearn
    // We initialize a memory array to save some gas (costs 6 gas per slot, it's ok)
    HeuristicData[] memory memData = new HeuristicData[](
      strategyInvestmentOrder.length
    );

    // We loop over the strategies to see if one has enough cash to do a one-shot withdraw
    for (uint256 i = strategyInvestmentOrder.length; i > 0; i--) {
      Strategy memory strategy = strategyInvestmentOrder[i - 1];
      uint256 debtRemaining = debtData[strategy.entryPoint].debt;

      if (debtRemaining >= _amount) {
        stratList[0] = HeuristicData(strategy.entryPoint, _amount);
        return (stratList);
      } else {
        // saves an hot-load SLOAD down the line (100 gas)
        memData[strategyInvestmentOrder.length - 1] = HeuristicData(
          strategy.entryPoint,
          debtRemaining
        );
      }
    }
    // We get here if no pool has enough debt to do a one-shot withdraw
    // The loop is reversed because of how memData is stored!
    for (uint256 i = 0; i < memData.length; i++) {
      if (memData[i].amount > 0 && _amount > 0) {
        uint256 amountToWithdraw = Math.min(memData[i].amount, _amount);
        // Little check to prevent reverts
        _amount = amountToWithdraw >= _amount ? 0 : _amount - amountToWithdraw;
        stratList[i] = HeuristicData(memData[i].entryPoint, amountToWithdraw);
      }
    }
  }

  function amountLeftToInvestInStrategy(Strategy memory _strategy)
    public
    view
    returns (uint256 amountLeftToInvest)
  {
    // Saves an SLOAD if the result is != 0
    uint256 debt = debtData[_strategy.entryPoint].debt;
    if (_strategy.maxDeposit >= debt) {
      amountLeftToInvest = 0;
    } else {
      amountLeftToInvest = _strategy.maxDeposit - debt;
    }
  }

  function estimateMessagingCost(
    uint16 _chainId, // Remote chain id - check LZ docs
    bytes memory _payload, // TODO: Change this
    uint256 _callGasCost, // in wei (opcode cost)
    uint256 _dustAmount // in ether (in the remote chain coin unit)
  ) public view returns (uint256 messagingCost) {
    IStargateRouter.lzTxObj memory _lzParams = IStargateRouter.lzTxObj(
      _callGasCost,
      _dustAmount,
      trustedRemoteLookup[_chainId]
    ); // remote router
    (messagingCost, ) = stargateRouter.quoteLayerZeroFee(
      _chainId, // chain ID
      1, // SWAP_REMOTE function type
      trustedRemoteLookup[_chainId], // idem bytes
      _payload, // idem
      _lzParams
    );
  }

  function verifyGasFee(
    uint16 _chainId,
    bytes memory _toAddress,
    bytes memory _payload,
    uint256 _msgValue,
    uint256 _minCallGasCost,
    uint256 _minDustAmount
  ) internal view returns (bool enough) {
    IStargateRouter.lzTxObj memory _lzParams = IStargateRouter.lzTxObj(
      _minCallGasCost,
      _minDustAmount,
      _toAddress
    ); // remote router
    // We use layerZero as it's an upper-bound -can be refined later on if needed
    uint256 gasEstimation;
    (gasEstimation, ) = stargateRouter.quoteLayerZeroFee(
      _chainId, // chain ID
      1, // SWAP_REMOTE function type
      abi.encode(_toAddress), // idem
      _payload, // idem
      _lzParams
    );
    enough = _msgValue >= gasEstimation;
  }

  /*//////////////////////////////////////////////////////////////
                              SETTERS
    //////////////////////////////////////////////////////////////*/

  function _giveAllowances(
    address _stargateRouter,
    address _token,
    address _asset
  ) internal {
    ERC20(_asset).safeIncreaseAllowance(_stargateRouter, type(uint256).max);
    ERC20(_asset).safeIncreaseAllowance(_token, type(uint256).max);
  }

  // Todo: update this
  // function setMinCallGasCost(uint256 _minCallGasCost) external onlyOwner {
