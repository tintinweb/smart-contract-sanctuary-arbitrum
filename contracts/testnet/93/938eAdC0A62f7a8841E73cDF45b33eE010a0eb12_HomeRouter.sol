  }

  /*//////////////////////////////////////////////////////////////
                        DEPOSIT/WITHDRAWAL LOGIC
    //////////////////////////////////////////////////////////////*/
  function processHomeDeposit(uint256 _amount, uint256 _nonce)
    external
    onlyToken
    returns (uint256)
  {
    //HomeRouter transfer from oToken to itself
    ERC20(asset).safeTransferFrom(address(msg.sender), address(this), _amount);

    // Decide which strat to chose according to the amount
    address strategy_address = chooseStratDeposit(_amount);

    // Approves the Vault to Transfer
    // TODO: add unlimited approve to the strategy when adding it
    ERC20(asset).approve(strategy_address, _amount);
    // TransferFrom asset to the Vault, Vault then needs to invest the funds
    // TODO: add an unlimited approval when adding the strat
    uint256 amountDeposited = IStrategy(strategy_address).deposit(_amount);

    // Accounting
    debtData[strategy_address].debt += amountDeposited;

    // Return callback
    oToken.depositCallback(_nonce, amountDeposited);
  }

  // This is the function called by the token if we deposit to deposit & send tokens
  function processExternalDeposit(
    uint256 _depositNonce,
    uint256 _amount,
    uint16 _chainId,
    uint256 _destPoolId,
    GasData calldata _gasData
  ) external payable onlyToken {
    // // Remember that most of the fee will be refunded in case of over estimation
    // TODO: add this for withdraw and compound
    require(
      verifyGasFee(
        _chainId,
        trustedRemoteLookup[_chainId],
        abi.encode(_depositNonce, _amount),
        msg.value,
        minCallGasCost.deposit,
        // TODO: add function to estimate it using chainlink and base cost
        minDustAmount.deposit[_chainId]
      ),
      "homerouter: not enough ether"
    );

    // HomeRouter transfer from oToken to itself
    require(
      ERC20(asset).balanceOf(address(this)) >= _amount,
      "homerouter: not enough tokens"
    );
    emit Debug(_gasData.callGasCost, "here1");
    emit Debug(_gasData.dustAmount, "here2");
    emit Debug(msg.value, "here3");
    stargateRouter.swap{value: msg.value}(
      _chainId, // destination chain Id
      stargatePoolId, // local pool Id (ex: USDC is 1)
      _destPoolId, // remote pool Id
      payable(tx.origin), // refund address for extra gas
      _amount, // quantity to swap
      0, // the min qty you would accept on the destination
      IStargateRouter.lzTxObj(
        _gasData.callGasCost,
        _gasData.dustAmount,
        trustedRemoteLookup[_chainId] // remote router
      ), // params for gas forwarding
      trustedRemoteLookup[_chainId], // receiver of the tokens
      abi.encode(_depositNonce, _amount) // data for the destination router
    );
    emit StargateDeposit(_amount, _chainId, _depositNonce);
  }

  function processWithdrawAssets(
    uint16 _chainId,
    uint256 _nonce,
    uint256 _amount,
    uint256 callGasCost,
    uint256 dustAmount
  ) external payable onlyToken returns (bool) {
    bytes memory payload = abi.encode(_nonce, _amount);
    bytes memory params = abi.encodePacked(
      uint16(2),
      callGasCost,
      dustAmount,
      trustedRemoteLookup[_chainId]
    );
    return (communicateMessage(payload, _chainId, params));
  }

