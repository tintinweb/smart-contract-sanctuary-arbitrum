import {ArcBase} from "./utils/ArcBase.sol";
import {IArcCollector} from "./interfaces/IArcCollector.sol";

/**
 * 
 */
contract ChainlinkReceiver is ArcBase, CCIPReceiver 
{
    IArcCollector arcCollector;
    mapping(uint64 => mapping(address => bool)) public senders;
    
    event MessageReceived(bytes32 messageId, uint64 sourceChainSelector, address sender, string action, address to, string token, uint256 amount);

    constructor(address _arcCollector, address _router) CCIPReceiver(_router)
    {
        require(_arcCollector != address(0), 'Arc Collector cannot be zero address');
        arcCollector = IArcCollector(_arcCollector);
    }
    
    function setArcCollector(address _arcCollector) external onlyOwner
    {
        require(_arcCollector != address(0), 'Arc Collector cannot be zero address');
        arcCollector = IArcCollector(_arcCollector);
    }
    
    function enableSender(uint64 sourceChainSelector, address sender) external onlyOwner
    {
        require(!senders[sourceChainSelector][sender], 'Sender for source chain is enabled');
        senders[sourceChainSelector][sender] = true;
    }
    
    function disableSender(uint64 sourceChainSelector, address sender) external onlyOwner
    {
        require(senders[sourceChainSelector][sender], 'Sender for source chain is disabled');
        senders[sourceChainSelector][sender] = false;
    }

    function _ccipReceive(Client.Any2EVMMessage memory message) internal override
    {
        bytes32 messageId = message.messageId;
        uint64 sourceChainSelector = message.sourceChainSelector;
        address sender = abi.decode(message.sender, (address));
        require(senders[sourceChainSelector][sender], 'Unsupported source chain/sender');
        
        (string memory action, address to, string memory token, uint256 amount) = abi.decode(message.data, (string, address, string, uint256));

        arcCollector.receiveAction(action, to, token, amount);

        emit MessageReceived(messageId, sourceChainSelector, sender, action, to, token, amount);
    }

    receive() external payable {}
}

