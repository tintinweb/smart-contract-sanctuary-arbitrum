            interfaceId == type(ERC20Burnable).interfaceId ||
            interfaceId == type(ERC20Capped).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    // Token functions
    function mint(address account, uint256 amount) external onlyRole(MINTER_ROLE) {
        _mint(account, amount);
    }

    function transfer(address to, uint256 amount) public override returns (bool) {
        super.transfer(to, amount);
        _feesLogic(msg.sender, amount);

        return true;
    }

    function transferFrom(address from, address to, uint256 amount) public override returns (bool) {
        super.transferFrom(from, to, amount);
        _feesLogic(from, amount);

        return true;
    }

    function transferInit(address to, uint256 amount, address promoter, string memory memo) external returns (bool) {
        registerNewAffiliate(promoter, memo);
        transfer(to, amount);

        return true;
    }

    function _mint(address account, uint256 amount) internal override(ERC20, ERC20Capped) {
        super._mint(account, amount);
    }

    function _feesLogic(address from, uint256 amount) private {
        (, uint256 promoterFeeAmount, uint256 sumFeeAmount) = feesCalculator(amount);

        super.burn(sumFeeAmount);

        if (isRegisteredAffiliate(from)) {
            _mint(_referrals[from], promoterFeeAmount);
            emit TransferPromoterFee(_referrals[from], from, promoterFeeAmount);
        }
    }

    // Referral functions
    function isRegisteredAffiliate(address affiliate) public view returns (bool) {
        return _referrals[affiliate] != address(0);
    }

    function getAffiliatePromoter(address affiliate) public view returns (address) {
        return _referrals[affiliate];
    }

    function registerNewAffiliate(address promoter, string memory memo) public {
        require(promoter != address(0), "AFFCoin: the promoter address should not be zero");
        require(promoter != msg.sender, "AFFCoin: you cannot be your own promoter");
        require(!isRegisteredAffiliate(msg.sender), "AFFCoin: the affiliate address already registered");
        require(bytes(memo).length <= MAX_MEMO_LENGTH, "AFFCoin: the memo length is too long");

        _referrals[msg.sender] = promoter;

        emit RegisterNewAffiliate(promoter, msg.sender, memo);
    }

    // Configuration functions
    function getConfig() external view returns (Config memory) {
        return _config;
    }

    function getConfigBurnFeePercentage() external view returns (uint128) {
        return _config.burnFeePercentage;
    }

    function getConfigPromoterFeePercentage() external view returns (uint128) {
        return _config.promoterFeePercentage;
    }

    function setConfig(Config memory config) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setConfigBurnFeePercentage(config.burnFeePercentage);
        _setConfigPromoterFeePercentage(config.promoterFeePercentage);

        emit UpdatedConfig(msg.sender, _config);
    }

    function setConfigBurnFeePercentage(uint128 burnFeePercentage) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setConfigBurnFeePercentage(burnFeePercentage);

        emit UpdatedConfig(msg.sender, _config);
    }

    function setConfigPromoterFeePercentage(uint128 promoterFeePercentage) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setConfigPromoterFeePercentage(promoterFeePercentage);

        emit UpdatedConfig(msg.sender, _config);
    }

    function _setConfigBurnFeePercentage(uint128 burnFeePercentage) private {
        require(
            burnFeePercentage <= maxFeePercentageDecimals(),
            "AFFCoin: burn fee percentage exceeds the permissible values"
        );
        _config.burnFeePercentage = burnFeePercentage;
    }

    function _setConfigPromoterFeePercentage(uint128 promoterFeePercentage) private {
        require(
            promoterFeePercentage <= maxFeePercentageDecimals(),
            "AFFCoin: promoter fee percentage exceeds the permissible values"
        );
        _config.promoterFeePercentage = promoterFeePercentage;
    }

    // Utilty functions
    function feesCalculator(
        uint256 amount
    ) public view returns (uint256 burnFeeAmount, uint256 promoterFeeAmount, uint256 sumFeeAmount) {
        burnFeeAmount = (amount * _config.burnFeePercentage) / maxFeePercentageDecimals();
        promoterFeeAmount = (amount * _config.promoterFeePercentage) / maxFeePercentageDecimals();
        sumFeeAmount = burnFeeAmount + promoterFeeAmount;
    }

    function maxFeePercentageDecimals() public pure returns (uint256) {
        return 100 * (10 ** FEE_PERCENTAGE_DECIMALS);
    }
}