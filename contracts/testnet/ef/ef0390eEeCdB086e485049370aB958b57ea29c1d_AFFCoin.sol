    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    uint256 public constant FEE_PERCENTAGE_DECIMALS = 4;
    uint256 public constant MAX_MEMO_LENGTH = 200;

    struct Config {
        uint128 burnFeePercentage;
        uint128 promoterFeePercentage;
    }

    Config private _config;

    mapping(address affiliate => address promoter) private _referrals;

    event UpdatedConfig(address indexed updater, Config config);
    event RegisterNewAffiliate(address indexed promoter, address indexed affiliate, string memo);
    event TransferPromoterFee(address indexed promoter, address indexed affiliate, uint256 amount);

    // Name AFFCoin
    // Symbol AFFCO
    // Total supply 1 million
    // 1 day is initial delay in access control default admin rules
    // Deployer has DEFAULT_ADMIN_ROLE role in access control default admin rules
    constructor()
        ERC20("AFFCoin", "AFFCO")
        ERC20Capped(100_000_000_000000000000000000)
        AccessControlDefaultAdminRules(1 days, msg.sender)
    {
        _setConfigBurnFeePercentage(1000); // 0.1%
        _setConfigPromoterFeePercentage(2000); // 0.2%
    }

    function supportsInterface(bytes4 interfaceId) public view override returns (bool) {
        return
