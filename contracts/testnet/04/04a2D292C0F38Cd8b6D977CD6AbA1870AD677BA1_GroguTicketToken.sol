    function _baseURI() internal view override returns (string memory) {
        return _baseTokenURI;
    }

    /**
     * @notice Method calculates whether a purchase is possible and if so,
     * returns the purchase amount with referral rewards, if any
     * @dev For success works:
     * - the sales round must be correct
     * - there should be enough tokens in the round to sell
     * @param saleRound enum
     * SalesRound: {
     *  First - 1 first round
     *  Second - 2 second round
     * }
     * @param tokensToIssue purchase amount
     * @param refRewardAmount all referral rewards in transaction
     * @return amount the number to be added to the roundSold
     */
    function _availableToIssue(
        SalesRound saleRound,
        uint256 tokensToIssue,
        uint256 refRewardAmount
    ) internal view returns (uint256 amount) {
        Sales[2] memory sale = _salesRounds;
        uint256 tokensToIssueWithRefReward = tokensToIssue + refRewardAmount;
        if (saleRound == SalesRound.First) {
            uint256 possibleToIssue = sale[0].roundLimit - sale[0].roundSold;
            if (possibleToIssue > tokensToIssueWithRefReward) {
                return tokensToIssueWithRefReward;
            } else {
                revert NotEnoughTokensInRound(tokensToIssueWithRefReward, possibleToIssue);
            }
        } else if (saleRound == SalesRound.Second) {
            uint256 possibleToIssue = sale[1].roundLimit - sale[1].roundSold;
            if (possibleToIssue > tokensToIssueWithRefReward) {
                return tokensToIssueWithRefReward;
            } else {
                revert NotEnoughTokensInRound(tokensToIssueWithRefReward, possibleToIssue);
            }
        }
    }

    /**
     * @notice Method to execute the logic of methods {safeMintFirstRound} and {batchSafeMintFirstRound}
     */
    function _createTicketForFirstRound(
        MintParamsForFirstRound calldata params
    ) private onlyNotZeroAmount(params.tokensToIssue) returns (uint256 tokenId) {
        tokenId = _nextTokenId++;
        _safeMint(params.to, tokenId);
        _setTokenURI(tokenId, params.uri);

        _updatePresaleRound(SalesRound.First, params.to, params.tokensToIssue, address(0));
        _tokenIdToAmount[tokenId] = params.tokensToIssue;
        emit TicketIssuedFirstRound(params);
    }

    /**
     * @notice Method to execute the logic of methods {safeMintSecondRound}
     */
    function _createTicketForSecondRound(
        MintParamsForSecondRound calldata params
    )
        private
        onlyNotZeroAmount(params.tokensToIssue)
        onlyNotZeroAmount(params.paymentTokenAmount)
        returns (uint256 tokenId)
    {
        tokenId = _nextTokenId++;
        _safeMint(params.to, tokenId);
        _setTokenURI(tokenId, params.uri);

        _executePaymentAndUpdateRound(
            params.to,
            params.tokensToIssue,
            params.paymentTokenAmount,
            params.paymentTokenAddress,
            params.refferer
        );
        emit TicketIssuedSecondRound(params);
    }

    /**
     * @notice Method for making payment in the second round
     */
    function _executePaymentAndUpdateRound(
        address buyer,
        uint256 tokensToIssue,
        uint256 paymentTokenAmount,
        address paymentTokenAddress,
        address refferer
    ) private {
        if (paymentTokenAddress != address(0)) {
            _updatePresaleRound(SalesRound.Second, buyer, tokensToIssue, refferer);
            IERC20(paymentTokenAddress).safeTransferFrom(msg.sender, address(this), paymentTokenAmount);
        } else {
            if (msg.value != paymentTokenAmount) {
                revert InvalidMsgValue(msg.value, paymentTokenAmount);
            }
            _updatePresaleRound(SalesRound.Second, buyer, tokensToIssue, refferer);
        }
    }

    /**
     * @notice Method to update the sales data in a particular round
     */
    function _updatePresaleRound(
        SalesRound numberOfSaleRound,
        address buyer,
        uint256 tokensToIssue,
        address refferer
    ) private {
        Sales storage saleRound = _salesRounds[uint256(numberOfSaleRound)];

        if (numberOfSaleRound == SalesRound.First) {
            uint256 amountToIssue = _availableToIssue(numberOfSaleRound, tokensToIssue, 0);
            saleRound.roundSold += amountToIssue;
        } else if (numberOfSaleRound == SalesRound.Second) {
            if (refferer != address(0)) {
                uint256 refRewardAmount = _setRefferer(buyer, refferer, tokensToIssue);
                uint256 amountToIssue = _availableToIssue(numberOfSaleRound, tokensToIssue, refRewardAmount);
                saleRound.roundSold += amountToIssue;
            } else {
                uint256 amountToIssue = _availableToIssue(numberOfSaleRound, tokensToIssue, 0);
                saleRound.roundSold += amountToIssue;
            }
        }
    }

    /**
     * @notice A new method hook from the oppenzeppelin 5.0 version
     * that replaces the {_beforeTokenTransfer} and {_afterTokenTransfer}
     */
    function _update(
        address to,
        uint256 tokenId,
        address auth
    ) internal override(ERC721, ERC721Enumerable, ERC721Pausable) returns (address) {
        address from = _ownerOf(tokenId);
        if (from != address(0) && to != address(0)) {
            revert TicketIsNotTransferable();
        }
        return super._update(to, tokenId, auth);
    }

    /**
     * @dev See {IERC721ERC721Enumerable}.
     */
    function _increaseBalance(address account, uint128 value) internal override(ERC721, ERC721Enumerable) {
        super._increaseBalance(account, value);
    }

    /**
     * @notice A modifier to check for a zero amount
     */
    modifier onlyNotZeroAmount(uint256 amount) {
        if (amount == 0) {
            revert InvalidAmount(amount);
        }
        _;
    }
