                        "MintParamsForSecondRound(address to,string uri,uint256 tokensToIssue,uint256 paymentTokenAmount,address paymentTokenAddress,address refferer)"
                    ),
                    params.to,
                    params.uri,
                    params.tokensToIssue,
                    params.paymentTokenAmount,
                    params.paymentTokenAddress,
                    params.refferer
                )
            )
        );
        address signer = ECDSA.recover(digest, operatorSignature);
        _checkRole(OPERATOR_ROLE, signer);
        tokenId = _createTicketForSecondRound(params);
    }

    /**
     * @dev See {IGroguTicketToken}
     */
    function punchTickets(address user) external onlyRole(TICKET_ISSUER) returns (uint256 amountToIssue) {
        uint256 balance = balanceOf(user);
        if (balance == 0) {
            revert UserHasNoTickets(user);
        }

        for (uint256 i; i < balance; ) {
            uint256 tokenId = tokenOfOwnerByIndex(user, i);
            amountToIssue += _tokenIdToAmount[tokenId];
            delete _tokenIdToAmount[tokenId];
            _burn(tokenId);
            unchecked {
                ++i;
            }
        }
        amountToIssue += getUserRefferalData(user).rewards;
        _resetRewards(user);
        emit TicketsPunched(user, amountToIssue);
    }

    /**
     * @dev See {IGroguTicketToken}
     */
    function withdrawalEarnings(address token, uint256 amount) external onlyRole(DEFAULT_ADMIN_ROLE) returns (bool) {
        if (token != address(0)) {
            IERC20(token).safeTransfer(msg.sender, amount);
            return true;
        } else {
            (bool success, ) = payable(msg.sender).call{value: amount}("");
            if (!success) {
                revert NotEnoughETH(amount, address(this).balance);
            }
            return success;
        }
