    bytes32 internal constant ETH_CALL_RESPONSE_TYPEHASH = keccak256(
        "EthCallResponse(uint32 chainId,uint64 blockNumber,address fromAddress,address toAddress,bytes toCalldata,bytes result)"
    );

    /// @notice Gets the hash of an EthCallResponse to be signed.
    function hashEthCallResponse(bytes memory _data) internal pure returns (bytes32) {
        return ECDSA.toEthSignedMessageHash(abi.encodePacked(ETH_CALL_RESPONSE_TYPEHASH, _data));
    }

