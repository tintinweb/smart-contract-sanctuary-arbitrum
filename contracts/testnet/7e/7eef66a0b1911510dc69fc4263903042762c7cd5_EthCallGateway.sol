/// @title EthCallGateway
/// @author Succinct Labs
/// @notice This contract handles cross-chain EthCall requests and responses.
/// @dev There are 2 possible ways to process an EthCall:
///      1) On-chain: The user calls requestEthCall(), which is then handled in
///         processFromOnChain().
///      2) Off-chain: The user sends an EthCall over RPC, which is then handled
///         in processFromOffChain().
///
///      Only in (1) will the callback information be stored on-chain at the nonce. Otherwise, the
///      these paths behave identically.
contract EthCallGateway is IEthCallGateway, TimelockedUpgradeable {
    using EthCallResponseLib for bytes;

    /// @notice A reference to the Operator registry contract.
    /// @dev During verifySufficientSignatures()
    address public registryHandler;
    /// @notice A unique identifier for an on-chain EthCall.
    /// @dev Incremented for each requestEthCall(), and used as duplicate protection in
    ///      processFromOnChain().
    uint256 public nonce;
    /// @notice nonce => EthCallResponseCallback
    /// @dev Used to store the callback information for on-chain EthCalls.
    mapping(uint256 => EthCallResponseCallback) public nonceToCallback;
    /// @notice The current EthCallResponse being processed.
    /// @dev Callbacks can use this to get contextual information about the request result.
    EthCallResponse private currResponse;
    /// @dev This empty reserved space to add new variables without shifting down storage.
    ///      See: https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps
    uint256[50] private __gap;

    event EthCallRequested( // TODO make this indexed
        uint256 nonce,
        uint32 chainId,
        uint64 blockNumber,
        address fromAddress,
        address toAddress,
        bytes toCalldata,
        address callbackAddress,
        bytes4 callbackSelector,
        bytes callbackExtraData
    );

    error OperatorAlreadySigned(address signer);
    error InsufficientOperatorShares(uint256 signedShares, uint256 totalShares);
    error RequestNotFound(uint256 nonce);
    error RequestMismatch(bytes32 expectedId, bytes32 actualId);
    error CallbackFailed(address callbackAddress);

    function initialize(address _registryHandler, address _timelock, address _guardian)
        external
        initializer
    {
        registryHandler = _registryHandler;
        __TimelockedUpgradeable_init(_timelock, _guardian);
    }

    /// @notice Request for an EthCall and store the callback information on-chain.
    function requestEthCall(
        uint32 _chainId,
        uint64 _blockNumber,
        address _fromAddress,
        address _toAddress,
        bytes calldata _toCalldata,
        bytes4 _callbackSelector,
        bytes calldata _callbackExtraData
    ) external returns (bytes32, uint256) {
        EthCall memory ethCall = EthCall({
            chainId: _chainId,
            blockNumber: _blockNumber,
            fromAddress: _fromAddress,
            toAddress: _toAddress,
            toCalldata: _toCalldata
        });
        return requestEthCall(ethCall, _callbackSelector, _callbackExtraData);
    }

    /// @notice Request for an EthCall and store the callback information on-chain.
    function requestEthCall(
        EthCall memory _ethCall,
        bytes4 _callbackSelector,
        bytes memory _callbackExtraData
    ) public returns (bytes32, uint256) {
        unchecked {
            ++nonce;
        }

        bytes32 ethCallHash = getHash(_ethCall);
        nonceToCallback[nonce] =
            EthCallResponseCallback(ethCallHash, msg.sender, _callbackSelector, _callbackExtraData);

        emit EthCallRequested(
            nonce,
            _ethCall.chainId,
            _ethCall.blockNumber,
            _ethCall.fromAddress,
            _ethCall.toAddress,
            _ethCall.toCalldata,
            msg.sender,
            _callbackSelector,
            _callbackExtraData
        );

        return (ethCallHash, nonce);
    }

    /// @notice The entry-point for verifying an EthCall and sending it to a callback contract.
    /// @dev Uses the EthCall request saved at `nonce` to retrieve the callback information.
    function processFromOnChain(
        bytes calldata _responseBytes,
        bytes[] calldata _signatures,
        uint256 _nonce
    ) external {
        EthCallResponseCallback memory callback = nonceToCallback[_nonce];
        delete nonceToCallback[_nonce];

        EthCallResponse memory response = _responseBytes.toStruct();
        if (callback.ethCallHash == bytes32(0)) {
            revert RequestNotFound(_nonce);
        }
        if (callback.ethCallHash != getHash(response)) {
            revert RequestMismatch(callback.ethCallHash, getHash(response));
        }

        _verifySufficientSignatures(_responseBytes, _signatures);
        _processCallback(
            callback.callbackAddress,
            callback.callbackSelector,
            response.result,
            callback.callbackExtraData
        );
    }

    /// @notice The entry-point for verifying an EthCall and sending it to a callback contract.
    function processFromOffChain(
        bytes calldata _responseBytes,
        bytes[] calldata _signatures,
        address _callbackAddress,
        bytes4 _callbackSelector,
        bytes calldata _callbackExtraData
    ) external {
        _verifySufficientSignatures(_responseBytes, _signatures);

        EthCallResponse memory response = _responseBytes.toStruct();
        currResponse = response;
        _processCallback(_callbackAddress, _callbackSelector, response.result, _callbackExtraData);
        delete currResponse;
    }

    function encodeEthCallResponse(
        uint32 _chainId,
        uint64 _blockNumber,
        address _fromAddress,
        address _toAddress,
        bytes calldata _toCallata,
        bytes calldata _result
    ) external pure returns (bytes memory) {
        return EthCallResponseLib.encode(
            _chainId, _blockNumber, _fromAddress, _toAddress, _toCallata, _result
        );
    }

    /// @notice Get the hash of an EthCall.
    function getHash(EthCall memory _ethCall) public pure returns (bytes32) {
        return keccak256(
            abi.encodePacked(
                _ethCall.chainId,
                _ethCall.blockNumber,
                _ethCall.fromAddress,
                _ethCall.toAddress,
                _ethCall.toCalldata
            )
        );
    }

    /// @notice Get the hash of an EthCallResponse, which is the same as the hash of the EthCall
    ///         portion of the response.
    function getHash(EthCallResponse memory _response) public pure returns (bytes32) {
        return keccak256(
            abi.encodePacked(
                _response.chainId,
                _response.blockNumber,
                _response.fromAddress,
                _response.toAddress,
                _response.toCalldata
            )
        );
    }

    function currentResponse() external view returns (EthCallResponse memory) {
        return currResponse;
    }

    function _verifySufficientSignatures(
        bytes calldata _responseBytes,
        bytes[] calldata _signatures
    ) private view {
        bytes32 payloadHash = SignatureUtils.hashEthCallResponse(_responseBytes);
        uint256 signedShares = 0;
        address[] memory signedOperators = new address[](_signatures.length);
        for (uint256 i = 0; i < _signatures.length; i++) {
            // Identical to SignatureUtils.recoverSigner() except
            // we don't revert due to just one invalid signature.
            (address signer, ECDSA.RecoverError err) = ECDSA.tryRecover(payloadHash, _signatures[i]);
            if (err != ECDSA.RecoverError.NoError) {
                continue;
            }

            if (_isInArray(signedOperators, signer)) {
                revert OperatorAlreadySigned(signer);
            }
            signedOperators[i] = signer;

            // A signer that does not exist or is frozen in the RegistryHandler will have 0
            // countable shares.
            uint256 shares = IRegistry(registryHandler).getShares(signer, uint32(block.chainid));
            signedShares += shares;
        }

        // If a >= 2/3 representation of the total shares has signed, then we don't revert
        uint256 totalShares = IRegistry(registryHandler).totalSharesPerChain(uint32(block.chainid));
        bool sufficientShares = (3 * signedShares >= 2 * totalShares);
        if (!sufficientShares) {
            revert InsufficientOperatorShares(signedShares, totalShares);
        }
    }

    function _isInArray(address[] memory _arr, address _element) private pure returns (bool) {
        for (uint256 i = 0; i < _arr.length; i++) {
            if (_arr[i] == _element) {
                return true;
            }
        }
        return false;
    }

    function _processCallback(
        address _callbackAddress,
        bytes4 _callbackSelector,
        bytes memory _responseResult,
        bytes memory _callbackExtraData
    ) private {
        // Setting the callback address to 0x0 indicates that no callback should be executed.
        if (_callbackAddress == address(0)) {
            return;
        }

        bytes memory callbackData =
            abi.encodeWithSelector(_callbackSelector, _responseResult, _callbackExtraData);
        (bool success,) = _callbackAddress.call(callbackData);
        if (!success) {
            revert CallbackFailed(_callbackAddress);
        }
    }
}

