pragma solidity ^0.8.9;

import { BookToken } from "./BookToken.sol";
import { BookTokenProxy } from "./BookTokenProxy.sol";

contract ProxyContractFactory {
    event DeployedLogic(address addr);
    event DeployedProxy(address addr);

    function deploy(address _admin) external {
        address _logic = deployLogic(1313131313);
        deployProxy(7979797979, _logic, _admin);
    }

    function deployLogic(uint _salt) internal returns (address addr) {
        bytes memory bytecode = type(BookToken).creationCode;
        assembly {
            addr := create2(0, add(bytecode, 0x20), mload(bytecode), _salt)
            if iszero(extcodesize(addr)) {
                revert(0, 0)
            }
        }
        emit DeployedLogic(addr);
    }

    function deployProxy(uint _salt, address _logic, address _admin) internal {
        bytes memory createcode = type(BookTokenProxy).creationCode;
        bytes memory bytecode = abi.encodePacked(createcode, abi.encode(_logic, _admin));
        address addr;
        assembly {
            addr := create2(0, add(bytecode, 0x20), mload(bytecode), _salt)
            if iszero(extcodesize(addr)) {
                revert(0, 0)
            }
        }
        emit DeployedProxy(addr);
    }
}

