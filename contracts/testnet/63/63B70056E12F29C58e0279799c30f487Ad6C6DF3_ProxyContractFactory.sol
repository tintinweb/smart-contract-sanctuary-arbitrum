    constructor (
        address logic,
        address _admin,
        uint256 _initialMint,
        uint256 _vestingStart,
        address _vestAdmin
    ) TransparentUpgradeableProxy(logic, _admin, generateData(
        _initialMint,
        _vestingStart,
