        _moveAsset(msg.sender, address(this), asset_);

        // Time to divide and transfer assets out
        for (uint256 i = 0; i < shares.length;) {
            uint256 toSend = asset_.amount * shares[i].bps / BPS_DIVIDER;

            if (toSend > 0 && shares[i].recipient != address(0)) {
                _moveAsset(address(this), shares[i].recipient, IBrightPoolLedger.Asset(asset_.token, toSend));
            }
            unchecked {
                ++i;
