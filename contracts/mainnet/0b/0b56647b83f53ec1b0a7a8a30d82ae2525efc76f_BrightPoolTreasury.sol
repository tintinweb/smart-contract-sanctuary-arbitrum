    constructor(address owner_, address admin_, address warden_, Share[] memory shares_)
        LedgerOwner(owner_, admin_, warden_)
    {
        _setShares(shares_);
    }

    /**
     * @dev Setting new shares configuration
     *
     * @param shares_ New shares configuration to be set
     */
