        _setShares(shares_);
    }

    /**
     * @dev The method to set a new affiliate of update existing one
     *
     * @param affiliate_ The affiliate configuration to be set
     */
    function setAffiliate(Affiliate memory affiliate_) external onlyOwner {
        if (affiliate_.id == 0 || affiliate_.bps == 0) revert ZeroValue();
        if (affiliate_.bps > BPS_DIVIDER) revert TooBig();

        bool hadThisIndex = (affiliates[affiliate_.id].bps > 0);
        affiliates[affiliate_.id] = affiliate_;

        if (hadThisIndex) {
            uint256 len = affiliateList.length;
            for (uint256 i = 0; i < len;) {
                if (affiliateList[i].id == affiliate_.id) {
                    affiliateList[i] = affiliate_;
                    break;
                }
                unchecked {
                    ++i;
                }
            }
        } else {
            affiliateList.push(affiliate_);
        }

        emit AffiliateSet(affiliate_.id, affiliate_.bps, affiliate_.bri);
    }

    /**
     * @dev Listing all current affiliates
     */
    function allAffiliates() external view returns (Affiliate[] memory) {
        return affiliateList;
    }

    /**
     * @dev The method to remove already set affiliate
     *
     * @param id_ THe id of the affiliate to remove
