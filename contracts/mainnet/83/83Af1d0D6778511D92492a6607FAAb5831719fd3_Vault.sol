        uint amount
    ) external hasRole(Roles.VAULT_MANAGER) {
        ERC20Upgradeable(tokenAddress).safeTransfer(recipient, amount);
    }

    function _authorizeUpgrade(
        address newImplementation
    ) internal override hasRole(Roles.UPGRADER_ROLE) {}
