contract Vault is
    Initializable,
    UUPSUpgradeable,
    ERC721EnumerableUpgradeable,
    SystemComponentInitializable,
    SecurityBaseInitializable,
    PausableInitializable,
    ReentrancyGuardUpgradeable
{
    /// -----------------------------------------------------------------------
    /// Library usage
    /// -----------------------------------------------------------------------
    using FixedPointMathLib for uint256;
    using SafeERC20Upgradeable for ERC20Upgradeable;

    struct LpTokenDetails {
        uint depositRate; // conversion rate when made deposit
        uint depositAmount;
        uint createdAt;
        int pnl; // profit or loss made, for record purpose
    }

    event TokensLentToMP(address sender, uint amount);
    event PropertySoldToMP(
        address propertyToken,
        uint amountOfTokens,
        uint repayAmount
    );
    event ProfitNotified(
        uint profitNotified,
        uint adminPerformanceFeesCollected
    );
    event LossNotified(uint amount);
    event FeesUpdated(uint newFees);
    event AdminPerformanceFeesUpdated(uint newFees);
    event AdminPerformanceFeesWithdrawn(address to, uint amountWithdrawn);
    event Deposit(
        uint assets,
        uint depositRate,
        uint lpTokenId,
        address caller
    );
    event Withdraw(
        uint lpTokenId,
        uint assetsReceived,
        int pnl,
        address caller
    );
    event RentBooked(string[] symbols, uint[] rentBooked);

    /// @notice Representation of 100%. Equals t0 10000 that means 100 = 1%
    uint256 public constant PERCENTAGE_BASED_POINT = 10000; // 100 %

    uint256 public constant TIME_SCALING_FACTOR = 8; // 8 decimals

    /// @notice percentage of fees to be deducted when SecondaryMarketplace is borrowing
    uint256 public fees; // e.g 500 = 5%

    uint public nftCounter;

    mapping(uint tokenId => LpTokenDetails lpTokenDetails)
        public lpTokenIdToDetails;

    /// @notice how much shares user will get against 1 asset currently
    uint public currentConversionRatePerAsset;

    // Underlying ERC20 tokens related stuff
    /// @notice address of underlying erc20 token
    ERC20Upgradeable public asset;
    /// @notice keeps track how many underlying tokens are deposited in this vault
    uint private _totalVirtualSharesSupply;

    /// @notice keeps track how many virtual lps are in circulation
    uint private _totalAssets;

    uint8 private _decimals;

    ///@notice  The duration (in seconds) that users must keep their deposits in the vault to be eligible to fully realize the rewards.
    ///         If a user tries to realize rewards before this period elapses, they will receive a reduced reward amount.
    uint public fullRewardDuration;

    /// @notice x% of `fees`
    uint public adminPerformanceFeesPercentage; // e.g 500 = 5%

    /// @dev fees in collected only in profit case.
    uint public adminPerformanceFeesCollected;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(
        ISystemRegistry _systemRegistry,
        uint _fullRewardDuration,
        address underlyingToken,
        string calldata collectionName,
        string calldata collectionSymbol
    ) external initializer {
        __ERC721_init(collectionName, collectionSymbol);
        __ERC721Enumerable_init();
        __UUPSUpgradeable_init();
        __ReentrancyGuard_init();
        _SystemComponent_init(_systemRegistry);
        _SecurityBaseInitializable_init(
            address(_systemRegistry.accessController())
        );
        _PauseableInitializable_init(_systemRegistry);
        asset = ERC20Upgradeable(underlyingToken);
        _decimals = asset.decimals();
        currentConversionRatePerAsset = 10 ** decimals();
        fullRewardDuration = _fullRewardDuration;
        fees = 500; // 5%
        adminPerformanceFeesPercentage = fees;
    }

    /**
     * @param assets number of underlying token to deposit
     * @param receiver reciever of the Lp-NFT
     * @return Token id of Lp-NFT
     */

    // @todo add re-entrancy guards whereever possible
    function deposit(
        uint256 assets,
        address receiver
    ) public nonReentrant returns (uint256) {
        require(assets > 0, "Zero amount");
        asset.safeTransferFrom(msg.sender, address(this), assets);
        _totalVirtualSharesSupply += _getVirtualSharesToMint(assets);
        _totalAssets += assets;
        uint lpTokenId = _mintNFT(
            receiver,
            currentConversionRatePerAsset,
            assets,
            block.timestamp
        );
        emit Deposit(
            assets,
            currentConversionRatePerAsset,
            lpTokenId,
            msg.sender
        );
        return lpTokenId;
    }

    /**
     * @notice to burn Lp-NFT withdraw underlying
     * @param lpTokenId Token id of LP-NFT
     * @param receiver receiver of underlying
     */
    function withdraw(
        uint lpTokenId,
        address receiver
    ) public nonReentrant returns (uint) {
        require(
            _isApprovedOrOwner(msg.sender, lpTokenId),
            "Vault: !owner or !approved"
        );
        _burn(lpTokenId);
        (uint assetsToGive, int pnl) = previewWithdraw(lpTokenId);
        _totalAssets -= assetsToGive;
        LpTokenDetails memory lpTokenDetails = lpTokenIdToDetails[lpTokenId];
        int coversionRateDiff = int(currentConversionRatePerAsset) -
            int(lpTokenDetails.depositRate);
        uint sharesToBurn = _getVirtualSharesToBurn(
            assetsToGive,
            // lpTokenIdToDetails[lpTokenId].depositAmount, // @todo verify what to pass here
            coversionRateDiff,
            lpTokenDetails.createdAt
        );
        _totalVirtualSharesSupply -= sharesToBurn;
        lpTokenIdToDetails[lpTokenId].pnl = pnl;
        asset.safeTransfer(receiver, assetsToGive);
        emit Withdraw(lpTokenId, assetsToGive, pnl, msg.sender);
        return assetsToGive;
    }

    function previewWithdraw(
        uint lpTokenId
    ) public view returns (uint assetsUserWillReceive, int pnl) {
        LpTokenDetails memory lpTokenDetails = lpTokenIdToDetails[lpTokenId];
        pnl = _getPNLAccrued(lpTokenId);
        assetsUserWillReceive = uint(int(lpTokenDetails.depositAmount) + pnl);
    }

    function _getPNLAccrued(uint _lpTokenId) internal view returns (int) {
        LpTokenDetails memory lpTokenDetails = lpTokenIdToDetails[_lpTokenId];
        require(lpTokenDetails.createdAt != 0, "Invalid lp token id");
        int conversionRateDiff = int(currentConversionRatePerAsset) -
            int(lpTokenDetails.depositRate);
        if (conversionRateDiff == 0) return 0; // @todo check this if it is needed or not
        uint depositAmount = lpTokenDetails.depositAmount;
        int timeFactor = int(getTimeFactor(lpTokenDetails.createdAt));
        int scalingFactor = int256(10 ** (decimals() + TIME_SCALING_FACTOR));
        return
            (
                (int(depositAmount) *
                    conversionRateDiff *
                    (
                        conversionRateDiff > 0 // true : profit , false : loss or breakeven
                            ? timeFactor // consider time factor when is in profit
                            : int(10 ** TIME_SCALING_FACTOR) // do not consider time factor and immediately realize loss in loss case
                    ))
            ) / scalingFactor;
    }

    /**
     * @notice Transfers token after deducting fees to marketplace
     * @param propertyToken property that the vault is buying(kind of)
     * @param noOfPropertyToken no of property tokens the vault is paying for
     * @param amountToBorrow value of `noOfPropertyToken` in vault `asset` currency
     * @return actualBorrowedAmount actual amount paid by vault after deducting fees
     */

    function borrow(
        address propertyToken,
        uint noOfPropertyToken,
        uint256 amountToBorrow,
        address recipient
    )
        external
        hasRole(Roles.MARKETPLACE_BORROWER_ROLE)
        nonReentrant
        returns (uint actualBorrowedAmount)
    {
        ERC20Upgradeable(propertyToken).safeTransferFrom(
            msg.sender,
            address(this),
            noOfPropertyToken
        );
        actualBorrowedAmount =
            amountToBorrow -
            ((amountToBorrow * fees) / PERCENTAGE_BASED_POINT);
        asset.safeTransfer(recipient, actualBorrowedAmount);

        emit TokensLentToMP(msg.sender, amountToBorrow);
    }

    /**
     * @notice Transfers property token to Marketplace and receives amount lent to MarketplaceBorrower
     * @param _propertyToken address of WLegal Token
     * @param _amountOfTokens amount ot tokens MarketplaceBorrower wants to buy for Marketplace.sol
     * @param  _recipient address of property token receiver
     * @param _repayAmount amount repaid by Marketplace to buy back the property tokens
     * @param _propertyBasecurrency base Currency of the property
     */

    function buyPropertyTokens(
        address _propertyToken,
        uint256 _amountOfTokens,
        address _recipient,
        uint _repayAmount,
        address _propertyBasecurrency
    ) external hasRole(Roles.MARKETPLACE_BORROWER_ROLE) nonReentrant {
        // @todo change modifier name to onlySecondaryMp
        // _notifyRentAsRewardToGauge(_propertyToken); // @todo update this stuff
        ERC20Upgradeable(_propertyBasecurrency).safeTransferFrom(
            msg.sender,
            address(this),
            _repayAmount
        );
        ERC20Upgradeable(_propertyToken).safeTransfer(
            _recipient,
            _amountOfTokens
        );

        emit PropertySoldToMP(_propertyToken, _amountOfTokens, _repayAmount);
    }

    /**
     * @notice Updates fees
     * @param _newFees percentage of fee ; 100 is 1%
     */
    function updateFees(
        uint256 _newFees
    ) external hasRole(Roles.VAULT_MANAGER) {
        // fees can't be more than 10%
        if (_newFees > 1000) {
            revert("INVALID_FEE_PERCENTAGE");
        }
        fees = _newFees;

        emit FeesUpdated(_newFees);
    }

    /**
     * @notice Updates Admin performance fees
     * @param _newFees percentage of fee ; 100 is 1%
     */
    function updateAdminPerformanceFees(
        uint256 _newFees
    ) external hasRole(Roles.VAULT_MANAGER) {
        adminPerformanceFeesPercentage = _newFees;
        emit AdminPerformanceFeesUpdated(_newFees);
    }

    /**
     * @notice withdraw admin performance fees
     * @param _to receiver of fees
     */
    function withdrawAdminPerformanceFees(
        address _to
    ) external hasRole(Roles.VAULT_MANAGER) {
        uint adminPerformanceFeesCollectedCached = adminPerformanceFeesCollected;
        delete adminPerformanceFeesCollected;
        asset.safeTransfer(_to, adminPerformanceFeesCollectedCached);
        emit AdminPerformanceFeesWithdrawn(
            _to,
            adminPerformanceFeesCollectedCached
        );
    }

    // // @todo to be removed for production, this is for testing only
