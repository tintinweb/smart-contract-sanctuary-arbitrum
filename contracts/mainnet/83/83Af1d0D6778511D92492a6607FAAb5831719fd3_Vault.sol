    function _updateConversionRate() internal {
        uint256 supply = totalVirtualSharesSupply(); // Saves an extra SLOAD if totalSupply is non-zero.
        uint newRate = supply == 0
            ? 10 ** decimals()
            : uint256(10 ** decimals()).mulDivUp(totalAssets(), supply);
        // @todo decrease totalSupply when withdrawing
        // currentConversionRatePerAsset =
        //     ((oldCachedConversionRatePerAsset * (pnlCount - 1)) + newRate) /
        //     pnlCount;
        currentConversionRatePerAsset = newRate;
    }

    /// @notice when loss occurs
    function nofityLoss(
        uint256 _amount
    ) external hasRole(Roles.MARKETPLACE_BORROWER_ROLE) {
        _totalAssets -= _amount;
        _updateConversionRate();
        emit LossNotified(_amount);
    }

    /// @notice when profit occurs
    function notifyProfit(
        uint256 _amount
    ) public hasRole(Roles.MARKETPLACE_BORROWER_ROLE) {
        _notifyProfitInternal(_amount);
    }

    function _notifyProfitInternal(uint _amount) internal {
        uint profitAfterFees = _deductAdminPerformanceFees(_amount);
        _totalAssets += profitAfterFees;
        _updateConversionRate();
        emit ProfitNotified(profitAfterFees, _amount - profitAfterFees);
    }

    function bookRent(
        string[] memory symbols
    ) external returns (uint[] memory) {
        uint arrLength = symbols.length;
        uint[] memory rentBooked = new uint[](arrLength);
        string[] memory singleSymbol = new string[](1);
        address rentDistributor = address(systemRegistry.rentDistributor());
        uint totalRent;
        for (uint i; i < arrLength; i++) {
            singleSymbol[0] = symbols[i];
            uint lockNftTokenId = systemRegistry.rentShare().harvestRent(
                singleSymbol,
                address(this)
            );
            IERC721(address(systemRegistry.lockNft())).approve(
                address(systemRegistry.rentDistributor()),
                lockNftTokenId
            );
            // @todo do this tx with systemRegistry Style,
            // rn, not doing because systemRegistry do not have interface updated
            totalRent += rentBooked[i] = IRentDistributor(rentDistributor)
                .redeemRentForVault(lockNftTokenId);
        }
        _notifyProfitInternal(totalRent);
        emit RentBooked(symbols, rentBooked);
        return rentBooked;
    }

    function _deductAdminPerformanceFees(uint _amount) internal returns (uint) {
        uint adminPerformanceFees = (_amount * adminPerformanceFeesPercentage) /
            PERCENTAGE_BASED_POINT;
        adminPerformanceFeesCollected += adminPerformanceFees;
        return _amount - adminPerformanceFees;
    }

    /// @return returns tokenId of minted token
    function _mintNFT(
        address to,
        uint depositRate,
        uint depositAmount,
        uint createdAt
    ) internal returns (uint) {
        uint tokenId = ++nftCounter;
        _safeMint(to, tokenId);
        lpTokenIdToDetails[tokenId] = LpTokenDetails({
            depositRate: depositRate,
            depositAmount: depositAmount,
            createdAt: createdAt,
            pnl: 0
        });
        return tokenId;
    }

    function getTimeFactor(uint createdAt) internal view returns (uint) {
        uint fullRewardDuration_ = fullRewardDuration; // caching
        uint timeElapsed = block.timestamp - createdAt;
        timeElapsed = timeElapsed >= fullRewardDuration_
            ? fullRewardDuration_
            : timeElapsed;
        return (timeElapsed * 10 ** TIME_SCALING_FACTOR) / fullRewardDuration_;
    }

    /// @notice returns amount of virtual shares that will be assigned to user on deposit
    function _getVirtualSharesToMint(
        uint256 assets
    ) internal view returns (uint256) {
        // @todo check this stuff
        // for auditor : ignore round down issue in conversion rate
        return
            totalVirtualSharesSupply() == 0
                ? assets
                : assets.mulDivDown(
                    currentConversionRatePerAsset,
                    10 ** decimals()
                );
    }

    function _getVirtualSharesToBurn(
        uint _assets,
        int _conversionRateDifference,
        uint _createdAt
    ) internal view returns (uint) {
        uint scalingFactor = 10 ** (decimals() + TIME_SCALING_FACTOR);
        // @todo check for over/underflow
        return
            uint(
                int(_assets) -
                    (int(
                        int(_assets) *
                            _conversionRateDifference *
                            int(getTimeFactor(_createdAt))
                    ) / int(scalingFactor))
            );
    }

    function totalVirtualSharesSupply() public view returns (uint) {
        return _totalVirtualSharesSupply;
    }

    function totalAssets() public view returns (uint) {
        return _totalAssets;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    // @todo to be removed for production
    function rescueTokens(
