// Note that this pool has no minter key of ZSHARE (rewards).
// Instead, the governance will call ZSHARE distributeReward method and send reward to this pool at the beginning.
contract ZshareUserPool is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 reward;
    }

    mapping(uint256 => UserInfo) public userInfo; // How many tokens the user has provided.
    address public genesisMaster; // Main genesis address.
    address public token;

    // these variables are for Uni-V3
    address public manager; // NFT Manager address of Uni-V3
    mapping(uint256 => uint256) public tokenId;
    int24 public tickLower;
    int24 public tickUpper;
    int24 public tickCenter;
    address public token0;
    address public token1;
    IWETH public WETH;
    bool public initialized;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);

    receive() external payable {
    }

    function init(address _owner, address _token) public {
        require(initialized == false, "already initialized");
        initialized = true;
        owners[_owner] = true;
        token = _token;
        genesisMaster = msg.sender;
        manager = 0xC36442b4a4522E871399CD717aBDD847Ab11FE88;
        WETH = IWETH(INonfungiblePositionManager(manager).WETH9());
        WETH.approve(manager, uint256(-1));
        IERC20(token).approve(manager, uint256(-1));
        (token0, token1) = token < address(WETH) ? (token, address(WETH)) : (address(WETH), token);
        // 0.0011 = 1.0001^-68127
        // 0.001 = 1.0001^-69081
        // 0.0009 = 1.0001^-70134
        (tickLower, tickUpper) = token0 == token ? (int24(-70134), int24(-68127)) : (int24(68127), int24(70134));
        tickCenter = token0 == token ? int24(-69081) : int24(69081);
        emit OwnerUpdated(_owner, true);
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        UserInfo storage user = userInfo[_pid];
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(_pid);
        if(pool.isLP) {
            if(tokenId[_pid] == 0)
                user.amount = 0;
            else
                (,,,,,,,user.amount,,,,) = INonfungiblePositionManager(manager).positions(tokenId[_pid]);
        }
        else
            user.amount = IERC20(pool.token).balanceOf(address(this));
        IMaster(genesisMaster).updatePool(_pid);
    }

    // Deposit LP tokens.
    function deposit(uint256 _pid, uint256 _amountOrTokenId) public onlyOwner {
        address _sender = msg.sender;
        UserInfo storage user = userInfo[_pid];
        updatePool(_pid);
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(_pid);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accZsharePerShare).div(1e18).sub(user.rewardDebt);
            user.reward += _pending;
        }
        require(_pid != 0, "this is Zombie LP pool");
        if (_amountOrTokenId > 0) {
            if(pool.isLP) {
                require(tokenId[_pid] == 0, "only 1 deposit is allowed");
                (,,address t0,address t1,,int24 curTickLower,int24 curTickUpper,uint128 liquidity,,,,) = INonfungiblePositionManager(manager).positions(_amountOrTokenId);
                address poolAddress = IUniswapV3Factory(INonfungiblePositionManager(manager).factory()).getPool(t0, t1, 500);
                require(poolAddress == pool.token, "invalid LP");
                (,int24 tick,,,,,) = IUniswapV3Pool(poolAddress).slot0();
                require(tick >= curTickLower && tick <= curTickUpper, "liquidity should be in using");
                INonfungiblePositionManager(manager).transferFrom(msg.sender, address(this), _amountOrTokenId);
                user.amount = liquidity;
                tokenId[_pid] = _amountOrTokenId;
            }
            else {
                IERC20(pool.token).safeTransferFrom(_sender, address(this), _amountOrTokenId);
                uint256 fee = _amountOrTokenId.mul(pool.depositFee).div(1000);
                IERC20(pool.token).safeTransfer(genesisMaster, fee);
            }
        }
        updatePool(_pid);
        user.rewardDebt = user.amount.mul(pool.accZsharePerShare).div(1e18);
        emit Deposit(_sender, 0, _amountOrTokenId);
    }

    // Withdraw LP tokens.
    function withdraw(uint256 _pid, uint256 _amountOrTokenId) public onlyOwner {
        address _sender = msg.sender;
        UserInfo storage user = userInfo[_pid];
        updatePool(_pid);
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(_pid);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accZsharePerShare).div(1e18).sub(user.rewardDebt);
            user.reward += _pending;
        }
        if(pool.isLP) {
            INonfungiblePositionManager(manager).transferFrom(address(this), msg.sender, tokenId[_pid]);
            tokenId[_pid] = 0;
        }
        else {
            if (_amountOrTokenId > 0) {
                IERC20(pool.token).safeTransfer(_sender, _amountOrTokenId);
            }
        }
        updatePool(_pid);
        user.rewardDebt = user.amount.mul(pool.accZsharePerShare).div(1e18);
        emit Withdraw(_sender, _pid, _amountOrTokenId);
    }

    function updateReweard(uint256 _pid) public {
        require(msg.sender == genesisMaster, "caller is not genesis");
        UserInfo storage user = userInfo[_pid];
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(_pid);
        user.reward = 0;
        user.rewardDebt = user.amount.mul(pool.accZsharePerShare).div(1e18);
    }

    function ZapIn() public payable onlyOwner {
        UserInfo storage user = userInfo[0];
        updatePool(0);
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(0);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accZsharePerShare).div(1e18).sub(user.rewardDebt);
            user.reward += _pending;
        }
        address poolAddress = IUniswapV3Factory(INonfungiblePositionManager(manager).factory()).getPool(token, address(WETH), 500);
        (,int24 tick,,,,,) = IUniswapV3Pool(poolAddress).slot0();
        // in case of token price is lower than peg price
        require((token0 == token && tick > tickLower) || (token1 == token && tick < tickUpper), "don't add liquidity under peg");
        // in case of token price is near of peg price (0.9 ~ 1.1 peg)
        if(tickLower < tick && tick < tickUpper) {
            removeLiquidity();
            addWETHLiquidity(tick);
        }
        else {
            if(tokenId[0] == 0)
                addWETHLiquidity(tick);
            else
                increaseWETHLiquidity();
        }
        updatePool(0);
        user.rewardDebt = user.amount.mul(pool.accZsharePerShare).div(1e18);
    }

    function ZapOut(uint128 amount) public onlyOwner {
        UserInfo storage user = userInfo[0];
        updatePool(0);
        IMaster.PoolInfo memory pool = IMaster(genesisMaster).poolInfo(0);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accZsharePerShare).div(1e18).sub(user.rewardDebt);
            user.reward += _pending;
        }
        require(amount <= 10000, "exceeds 100 percent");
        decreaseWETHLiquidity(amount);
        drain();
        updatePool(0);
        user.rewardDebt = user.amount.mul(pool.accZsharePerShare).div(1e18);
    }

    function addWETHLiquidity(int24 tick) private {
        int24 newTickLower = tickLower;
        int24 newTickUpper = tickUpper;
        // in case of token price is near of peg price (0.9 ~ 1.1 peg)
        if(tickLower < tick && tick < tickUpper)
            (newTickLower, newTickUpper) = token0 == token ? (tickLower, tick) : (tick, tickUpper);
        newTickLower = newTickLower - newTickLower % 10;
        newTickUpper = newTickUpper - newTickUpper % 10;
        if(newTickLower < tick && tick < newTickUpper)
            (newTickLower, newTickUpper) = token0 == token ? (newTickLower, newTickUpper - 10) : (newTickLower + 10, newTickUpper);
        if(tokenId[0] != 0) {
            (,,,,,int24 oldTickLower,int24 oldTickUpper,,,,,) = INonfungiblePositionManager(manager).positions(tokenId[0]);
            if(newTickLower == oldTickLower && newTickUpper == oldTickUpper){
                increaseWETHLiquidity();
                return;
            }
        }
        WETH.deposit{value: msg.value}();
        uint256 wethBalance = WETH.balanceOf(address(this));
        if(wethBalance == 0)
            return;
        (uint256 amount0, uint256 amount1) = token0 == address(WETH) ?( wethBalance, uint256(0)) : (uint256(0), wethBalance);
        (tokenId[0],,,) = INonfungiblePositionManager(manager).mint(INonfungiblePositionManager.MintParams({ 
            token0: token0,
            token1: token1,
            fee: 500,
            tickLower: newTickLower,
            tickUpper: newTickUpper,
            amount0Desired: amount0,
            amount1Desired: amount1,
            amount0Min: 0,
            amount1Min: 0,
            recipient: address(this),
            deadline: block.timestamp
        }));
    }

    function increaseWETHLiquidity() private {
        WETH.deposit{value: msg.value}();
        uint256 wethBalance = WETH.balanceOf(address(this));
        if(wethBalance == 0)
            return;
        (uint256 amount0, uint256 amount1) = token0 == address(WETH) ?( wethBalance, uint256(0)) : (uint256(0), wethBalance);
        INonfungiblePositionManager(manager).increaseLiquidity(INonfungiblePositionManager.IncreaseLiquidityParams({
            tokenId: tokenId[0],
            amount0Desired: amount0,
            amount1Desired: amount1,
            amount0Min: 0,
            amount1Min: 0,
            deadline: block.timestamp
        }));
    }

    function decreaseWETHLiquidity(uint128 amount) private {
        if(tokenId[0] == 0) return;
        (,,,,,,,uint128 liquidity,,,,) = INonfungiblePositionManager(manager).positions(tokenId[0]);
        if(liquidity == 0) return;
        INonfungiblePositionManager(manager).decreaseLiquidity(INonfungiblePositionManager.DecreaseLiquidityParams({
            tokenId: tokenId[0],
            liquidity: liquidity * amount / 10000,
            amount0Min: 0,
            amount1Min: 0,
            deadline: block.timestamp
        }));
        INonfungiblePositionManager(manager).collect(INonfungiblePositionManager.CollectParams({
            tokenId: tokenId[0],
            recipient: address(this),
            amount0Max: uint128(-1),
            amount1Max: uint128(-1)
        }));
    }

    function drain() private {
        WETH.withdraw(WETH.balanceOf(address(this)));
        TransferHelper.safeTransferETH(msg.sender, address(this).balance);
        IERC20(token).transfer(msg.sender, IERC20(token).balanceOf(address(this)));
    }

    function removeLiquidity() private {
        if(tokenId[0] == 0) return;
        (,,,,,,,uint128 liquidity,,,,) = INonfungiblePositionManager(manager).positions(tokenId[0]);
        if(liquidity == 0) return;
        INonfungiblePositionManager(manager).decreaseLiquidity(INonfungiblePositionManager.DecreaseLiquidityParams({
            tokenId: tokenId[0],
            liquidity: liquidity,
            amount0Min: 0,
            amount1Min: 0,
            deadline: block.timestamp
        }));
        INonfungiblePositionManager(manager).collect(INonfungiblePositionManager.CollectParams({
            tokenId: tokenId[0],
            recipient: address(this),
            amount0Max: uint128(-1),
            amount1Max: uint128(-1)
        }));
