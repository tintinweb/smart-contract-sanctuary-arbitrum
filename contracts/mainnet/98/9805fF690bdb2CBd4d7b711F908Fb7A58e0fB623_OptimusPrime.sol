if(token != address(usdt) && token != address(usdc)){
revert TokenNotAccepted(token); 
}
require(amount <= IERC20(token).balanceOf(address(this)), "Amount is higher than balance"); 
IERC20(token).transfer(msg.sender, amount);
}



