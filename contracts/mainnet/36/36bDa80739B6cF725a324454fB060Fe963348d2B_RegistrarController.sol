    uint256 public constant FIVE_DIGIT_VOUCHER = 2;

    uint256 public constant THREE_DIGIT_VOUCHER_VALUE = 500 * (10**18);
    uint256 public constant FOUR_DIGIT_VOUCHER_VALUE = 100 * (10**18);
