    function burn(uint256 amount) public override onlyRole(MAINTAINER_ROLE) {
        super.burn(amount);
    }

    /**
     * @dev Overrides the internal _update function to check if the sender and recipient addresses are blocked.
     * @param from The address from which tokens are transferred.
     * @param to The address to which tokens are transferred.
     * @param value The amount of tokens to transfer.
     * @dev The sender and recipient addresses must not be blocked.
     */
    function _update(
        address from,
        address to,
        uint256 value
    )
        internal
        override(ERC20Upgradeable, ERC20PausableUpgradeable)
        notBlocked(from)
        notBlocked(to)
    {
        super._update(from, to, value);
    }

    /**
     * @dev Adds a user to the blocklist.
     * @param user The address of the user to block.
     * @dev Only users with the MAINTAINER_ROLE can call this function.
     */
    function addToBlocklist(address user) external onlyRole(MAINTAINER_ROLE) {
        blocklist[user] = true;
    }

    /**
     * @dev Removes a user from the blocklist.
     * @param user The address of the user to unblock.
     * @dev Only users with the MAINTAINER_ROLE can call this function.
     */
    function removeFromBlocklist(address user) external onlyRole(MAINTAINER_ROLE) {
        blocklist[user] = false;
    }

    // transfer with autorization
    function transferWithAuthorization(
        address from,
        address to,
        uint256 value,
        uint256 validAfter,
        uint256 validBefore,
        bytes calldata signature
    ) external {
        _transferWithAuthorization(
            from,
            to,
            value,
            validAfter,
            validBefore,
            signature
        );
    }

    // _transferWithAuthorization
    function _transferWithAuthorization(
        address from,
        address to,
        uint256 value,
        uint256 validAfter,
        uint256 validBefore,
        bytes calldata signature
    ) internal {
        if (block.timestamp < validAfter) revert AudscAuthNotYetValidError();
        if (block.timestamp > validBefore) revert AudscAuthExpiredError();

        uint256 nonce = _useNonce(from);
        bytes32 structHash = keccak256(
            abi.encode(
                TRANSFER_WITH_AUTHORIZATION_TYPEHASH,
                from,
                to,
                value,
                validAfter,
                validBefore,
                nonce
            )
        );

        address signer = ECDSA.recover(_hashTypedDataV4(structHash), signature);
        if (signer != from) {
            revert ERC2612InvalidSigner(signer, from);
        }

        _transfer(from, to, value);
    }
