            uint256 prevBalance = IERC20(currentReward).balanceOf(msg.sender);

            address[] memory rewardsToCollect = new address[](1);
            rewardsToCollect[0] = currentReward;
            _claimRewardsOnBehalf(msg.sender, msg.sender, rewardsToCollect);

