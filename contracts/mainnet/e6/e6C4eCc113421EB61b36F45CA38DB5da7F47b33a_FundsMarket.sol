    enum OrderType {
        BUY,
        SELL
    }

    bytes32 public constant WHITELIST_ROLE = keccak256("WHITELIST_ROLE");
    mapping(bytes32 => mapping(uint256 => uint256)) public orders;

    event CreateOrder(
        address indexed token,
        address seller,
        address recipient,
        uint256 amount,
        uint256 price,
        OrderType orderType
    );

    event ReturnTokensFromOrder(
        address indexed token,
        address tokenRecipient,
        address seller,
        address recipient,
        uint256 amount,
        uint256 price,
        OrderType orderType
    );

    event BuyTokens(
        address indexed token,
        address buyer,
        address seller,
        address recipient,
        uint256 amount,
        uint256 price
    );

    event SellTokens(
        address indexed token,
        address buyer,
        address seller,
        address recipient,
        uint256 amount,
        uint256 price
    );

    modifier onlyAdmin() {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, _msgSender()),
            "Marketplace: function only for admin"
        );
        _;
    }

    modifier onlyInWhitelist() {
        require(
            hasRole(WHITELIST_ROLE, _msgSender()),
            "Marketplace: function only for whitelisted"
        );
        _;
    }

    modifier checkPrice(uint256 price) {
        require(price > 0, "Marketplace: price must be more 0");
        _;
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function __Marketplace_init(address owner) external initializer {
        __AccessControl_init_unchained();
        __ReentrancyGuard_init_unchained();
        __Marketplace_init_unchained(owner);
    }

    function __Marketplace_init_unchained(
        address owner
    ) internal onlyInitializing {
        _grantRole(DEFAULT_ADMIN_ROLE, owner);
        _grantRole(WHITELIST_ROLE, owner);
    }

    function createOrder(
        address token,
        address recipient,
        uint256 amount,
        uint256 price,
        OrderType orderType
    ) external payable nonReentrant checkPrice(price) onlyInWhitelist {
        if (orderType == OrderType.SELL) {
            IERC20(token).safeTransferFrom(_msgSender(), address(this), amount);
        } else {
            require(
                msg.value >= amount * price,
                "Marketplace: insufficient funds"
            );
        }

        bytes32 orderHash = keccak256(
            abi.encodePacked(token, orderType, _msgSender(), recipient)
        );
        orders[orderHash][price] += amount;

        emit CreateOrder(
            token,
            _msgSender(),
            recipient,
            amount,
            price,
            orderType
        );
    }

    function returnTokensFromOrder(
        address token,
        address tokenRecipient,
        address recipient,
        uint256 amount,
        uint256 price,
        OrderType orderType
    ) external nonReentrant {
        bytes32 orderHash = keccak256(
            abi.encodePacked(token, orderType, _msgSender(), recipient)
        );
        uint256 balance = orders[orderHash][price];
        require(
            balance >= amount,
            "Marketplace: return amount exceeds balance"
        );
        unchecked {
            orders[orderHash][price] -= amount;
        }
        IERC20(token).safeTransfer(tokenRecipient, amount);
        emit ReturnTokensFromOrder(
            token,
            tokenRecipient,
            _msgSender(),
            recipient,
            amount,
            price,
            orderType
        );
    }

    function buyTokens(
        address token,
        address seller,
        address recipient,
        uint256 amount,
        uint256 price
    ) external payable nonReentrant {
        uint256 totalPrice = amount * price;

        require(msg.value >= totalPrice, "Marketplace: insufficient funds");

        bytes32 orderHash = keccak256(
            abi.encodePacked(token, OrderType.SELL, seller, recipient)
        );
        uint256 balance = orders[orderHash][price];

        require(balance >= amount, "Marketplace: buy amount exceeds balance");

        unchecked {
            orders[orderHash][price] -= amount;
        }

        (bool flag, ) = recipient.call{ value: totalPrice }("");
        require(flag, "Marketplace: fail while calling method");

        IERC20(token).safeTransfer(_msgSender(), amount);

        emit BuyTokens(token, _msgSender(), seller, recipient, amount, price);
    }

    function sellTokens(
        address token,
        address buyer,
        address recipient,
        uint256 amount,
        uint256 price
    ) external nonReentrant {
        uint256 totalPrice = amount * price;

        require(
            IERC20(token).balanceOf(_msgSender()) >= totalPrice,
            "Marketplace: insufficient funds"
        );

        bytes32 orderHash = keccak256(
            abi.encodePacked(token, OrderType.BUY, buyer, recipient)
        );
        uint256 balance = orders[orderHash][price];

        require(balance >= amount, "Marketplace: buy amount exceeds balance");

        unchecked {
            orders[orderHash][price] -= amount;
        }

        IERC20(token).transferFrom(_msgSender(), recipient, amount);

        (bool flag, ) = _msgSender().call{ value: totalPrice }("");
        require(flag, "Marketplace: fail while calling method");

        emit SellTokens(token, _msgSender(), buyer, recipient, amount, price);
    }

    uint256[42] private __gap;
}