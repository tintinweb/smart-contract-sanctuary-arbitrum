        mul_input[2] = input[0];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[1] * input[0]
        mul_input[0] = uint256(4152285628446522073273782391490533177077964215610232165208480581336839677544); // vk.K[2].X
        mul_input[1] = uint256(199950413679655040035647611994364088526756724432458255993013105367963539943); // vk.K[2].Y
        mul_input[2] = input[1];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[2] * input[1]
        mul_input[0] = uint256(16063027758603973453681525857149032107083325233443346073607745815967180164966); // vk.K[3].X
        mul_input[1] = uint256(6718981187943261732356856351231240365669413505660328726404380427455739469663); // vk.K[3].Y
        mul_input[2] = input[2];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[3] * input[2]
        mul_input[0] = uint256(10520370704863636771408804379063773472585226081622021926119118053499918856541); // vk.K[4].X
        mul_input[1] = uint256(7540943732140057515333919989859778421820912582740810073101063186069241347417); // vk.K[4].Y
        mul_input[2] = input[3];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[4] * input[3]
        mul_input[0] = uint256(14414982269488140774171690007017418317418112424461204169334233395402594236653); // vk.K[5].X
        mul_input[1] = uint256(16407803436615266209217605118821599990898121503782535226197496417483801614677); // vk.K[5].Y
        mul_input[2] = input[4];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[5] * input[4]
        mul_input[0] = uint256(16131902946469623316229088234370204469058589692236107693397153958698970677376); // vk.K[6].X
        mul_input[1] = uint256(16892324355177432003071496762639668443451407609538372159846796647033005569613); // vk.K[6].Y
        mul_input[2] = input[5];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[6] * input[5]
        mul_input[0] = uint256(7013592486202524132837574668797155306307763317802089029781262468641420694356); // vk.K[7].X
        mul_input[1] = uint256(8588176183244230130258821784209026523746995632748979190619026933669303655862); // vk.K[7].Y
        mul_input[2] = input[6];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[7] * input[6]
        mul_input[0] = uint256(15414226374993924019773776421989840527700599910254747408781956629889305784530); // vk.K[8].X
        mul_input[1] = uint256(6393821823633729797664636513729520114295731077287320048918768297351011462116); // vk.K[8].Y
        mul_input[2] = input[7];
        accumulate(mul_input, q, add_input, vk_x); // vk_x += vk.K[8] * input[7]
        mul_input[0] = uint256(3635727457065657580791321294945429667212259082774742239786639235622738406630); // vk.K[9].X
