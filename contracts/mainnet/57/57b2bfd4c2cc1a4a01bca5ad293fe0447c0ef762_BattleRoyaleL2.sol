    uint256 fee = protocolFee;
    if (fee >= msg.value) {
      revert NotEnoughEth();
    }
    if (!supportedCollections[_collection]) {
      revert NotSupportedCollection();
    }

    if (ERC721(_collection).ownerOf(_nftId) != msg.sender) {
      revert NFTNotOwned();
    }
