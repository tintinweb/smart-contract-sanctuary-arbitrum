pragma solidity ^0.8.20;

import "@openzeppelin/contracts-upgradeable/token/ERC1155/ERC1155Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Strings.sol";



contract ABTToken is Initializable, ERC1155Upgradeable, OwnableUpgradeable, ReentrancyGuard {


    uint256 public constant MAX_SUPPLY = 1;
    uint256 private _nextTokenId;
    uint256 private _totalPayments;
    address private immutable _signer;
    address private _paymentReceiver;
    uint256 public _price;
    string private _baseURI; 
    string private _baseJSON = "erc1155Collection.json"; 
    IERC20Upgradeable private _usdc;
    mapping(address => bool) public hasMinted;
    mapping(address => bool) public hasPaid;

    event Mint(address indexed to, uint256 tokenId);
    event PaymentReceived(address indexed from, uint256 amount);

    constructor(address signer, address usdcAddress, address paymentReceiver) {
        _signer = signer;
        _usdc = IERC20Upgradeable(usdcAddress);
        _paymentReceiver = paymentReceiver;
    }

    function initialize(address initialOwner, string memory uri,uint256 price) public initializer {
        __ERC1155_init(uri);
        __Ownable_init(initialOwner);
        _baseURI = uri;
        _price = price;
    }

    function safeMint(address to, string memory data, bytes calldata signature) public onlyOwner nonReentrant {
        require(_nextTokenId < MAX_SUPPLY, "Max supply reached");
        require(!hasMinted[to], "Address already minted a token");
        require(hasPaid[to], "Address has not made payment");
        
        address signer = recoverSigner(to, data, signature);
        require(signer == _signer, "Invalid signature");

        uint256 tokenId = _nextTokenId;
        _nextTokenId += 1;
        _mint(to, tokenId, 1, "");
        _setURI(string.concat(_baseURI,_baseJSON));
        hasMinted[to] = true;

        emit Mint(to, tokenId);
    }

    function setURI(string memory newuri) public onlyOwner {
        _setURI(newuri);
    }

  

    function getTokenURI(uint256 tokenId) public view returns (string memory) {
        require(_checkExists(tokenId), "ERC1155Metadata: URI query for nonexistent token");
        return uri(tokenId);
    }

    function _checkExists(uint256 tokenId) internal view returns (bool) {
        return balanceOf(_msgSender(), tokenId) > 0;
    }

    function recoverSigner(address to, string memory data, bytes memory _signature) public pure returns (address) {
        bytes32 dataHash = keccak256(abi.encodePacked(to, data));
        bytes32 prefixedHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", dataHash));

        require(_signature.length == 65, "Invalid signature length");

        bytes32 r;
        bytes32 s;
        uint8 v;

        assembly {
            r := mload(add(_signature, 0x20))
            s := mload(add(_signature, 0x40))
            v := byte(0, mload(add(_signature, 0x60)))
        }

        if (v < 27) v += 27;
        return ecrecover(prefixedHash, v, r, s);
        
    }

    function receivePayment(address from, uint256 amount, string memory data, bytes calldata signature) public nonReentrant {
        require(_totalPayments < MAX_SUPPLY, "Max supply reached");
        require(!hasPaid[from], "Address has already made payment");

        address signer = recoverSigner(from, data, signature);
        require(signer == _signer, "Invalid signature");

        require(amount == _price, "amount invalid");
        require(_usdc.transferFrom(from, _paymentReceiver, amount), "USDC transfer failed");

        hasPaid[from] = true;
        _totalPayments +=1;
        emit PaymentReceived(from, amount);
    }
}

