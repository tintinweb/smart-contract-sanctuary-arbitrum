import {ERC20} from "solady/tokens/ERC20.sol";
import {Ownable} from "solady/auth/Ownable.sol";
import {Initializable} from "solady/utils/Initializable.sol";

contract Nonce is ERC20, Ownable, Initializable {
    constructor() initializer {}

    function initialize(address owner) public initializer {
        _initializeNonce(owner);
    }

    function _initializeNonce(address owner) internal {
        _initializeOwner(owner);
    }

    function name() public view virtual override returns (string memory) {
        return "Nonce SBT";
    }

    function symbol() public view virtual override returns (string memory) {
        return "NONCE";
    }

    function mint(uint256 amount, address to) public onlyOwner {
        _mint(to, amount);
    }

    function mintMany(uint256 amount, address[] memory to) public onlyOwner {
        for (uint256 i = 0; i < to.length; i++) {
            _mint(to[i], amount);
        }
    }

    function transfer(address, uint256) public pure override returns (bool) {
        revert("Token: transfer is disabled");
    }

    function transferFrom(address, address, uint256) public pure override returns (bool) {
        revert("Token: transferFrom is disabled");
    }
}

