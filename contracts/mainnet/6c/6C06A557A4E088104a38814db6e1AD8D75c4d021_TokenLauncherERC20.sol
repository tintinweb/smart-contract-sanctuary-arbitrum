contract TokenLauncherERC20 is ITokenLauncherERC20, Ownable {
    /// @notice Price in USD. This includes decimals for the chosen stablecoin.
    uint256 public erc20TokenPrice = 100 * 1e6;
    /// @notice Price in USD. This includes decimals for the chosen stablecoin.
    uint256 public erc20TransferFeeAddonPrice = 0;
    /// @notice Price in USD. This includes decimals for the chosen stablecoin.
    uint256 public erc20BurnFeeAddonPrice = 0;
    /// @notice Price in USD. This includes decimals for the chosen stablecoin.
    uint256 public erc20BuybackFeeAddonPrice = 0;
    /// @notice Price in USD. This includes decimals for the chosen stablecoin.
    uint256 public erc20ReflectionFeeAddonPrice = 0;

    event BuyBackHandlerUpdated(address indexed oldBuybackHandler, address indexed newBuybackHandler);
    event TokenLiquidityCreated(
        address indexed user,
        address sourceTokenAddress,
        address pairTokenAddress,
        address routerAddress,
        uint256 amountSourceToken,
        uint256 amountPairedToken
    );

    event TokenPriceUpdated(uint256 indexed oldPrice, uint256 newPrice, TokenType indexed tokenType);
    event Erc20TransferFeeAddOnPriceUpdated(uint256 indexed oldPrice, uint256 newPrice);
    event Erc20BurnFeeAddOnPriceUpdated(uint256 indexed oldPrice, uint256 newPrice);
    event Erc20BuybackFeeAddOnPriceUpdated(uint256 indexed oldPrice, uint256 newPrice);
    event Erc20ReflectionFeeAddOnPriceUpdated(uint256 indexed oldPrice, uint256 newPrice);

    struct FacetAddresses {
        address diamondCutFacet;
        address ownershipFacet;
        address erc20Facet;
        address erc721Facet;
        address erc1155Facet;
        address accessControlFacet;
    }

    struct AddOns {
        bool erc20TransferFee;
        bool erc20BurnFee;
        bool erc20Reflection;
        bool erc20Buyback;
    }

    function initErc20Launcher(address _liquidityPoolFactory, address _buybackHandler, FacetAddresses memory _facets) public onlyOwner {
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();
        require(ds.init == false, "TokenLauncherERC20: already initialized");

        ds.liquidityPoolFactory = _liquidityPoolFactory;
        ds.diamondCutFacet = _facets.diamondCutFacet;
        ds.ownershipFacet = _facets.ownershipFacet;
        ds.erc20Facet = _facets.erc20Facet;
        ds.erc721Facet = _facets.erc721Facet;
        ds.erc1155Facet = _facets.erc1155Facet;
        ds.accessControlFacet = _facets.accessControlFacet;
        ds.buybackHandler = _buybackHandler;

        ds.init = true;
    }

    // TODO: Add on whitelisted discount feature
    function getPriceErc20(AddOns memory addOns) public view returns (uint256) {
        uint256 price = erc20TokenPrice;
        price += _getAddOnsPrice(addOns);

        return erc20TokenPrice;
    }

    function liquidityPoolFactory() external view override returns (address) {
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();
        return ds.liquidityPoolFactory;
    }

    function setErc20Price(uint256 newPrice) external onlyOwner {
        uint256 oldPrice = erc20TokenPrice;
        erc20TokenPrice = newPrice;

        emit TokenPriceUpdated(oldPrice, newPrice, TokenType.ERC20);
    }

    function setErc20TransferFeeAddonPrice(uint256 newPrice) external onlyOwner {
        uint256 oldPrice = erc20TransferFeeAddonPrice;
        erc20TransferFeeAddonPrice = newPrice;

        emit Erc20TransferFeeAddOnPriceUpdated(oldPrice, newPrice);
    }

    function setErc20BurnFeeAddonPrice(uint256 newPrice) external onlyOwner {
        uint256 oldPrice = erc20BurnFeeAddonPrice;
        erc20BurnFeeAddonPrice = newPrice;

        emit Erc20BurnFeeAddOnPriceUpdated(oldPrice, newPrice);
    }

    function setErc20BuybackAddonPrice(uint256 newPrice) external onlyOwner {
        uint256 oldPrice = erc20BuybackFeeAddonPrice;
        erc20BuybackFeeAddonPrice = newPrice;

        emit Erc20BuybackFeeAddOnPriceUpdated(oldPrice, newPrice);
    }

    function setErc20ReflectionAddonPrice(uint256 newPrice) external onlyOwner {
        uint256 oldPrice = erc20ReflectionFeeAddonPrice;
        erc20ReflectionFeeAddonPrice = newPrice;

        emit Erc20ReflectionFeeAddOnPriceUpdated(oldPrice, newPrice);
    }

    function _getAddOnsPrice(AddOns memory addOns) private view returns (uint256) {
        uint256 price = 0;
        if (addOns.erc20BurnFee) {
            price += erc20BurnFeeAddonPrice;
        }
        if (addOns.erc20Buyback) {
            price += erc20BuybackFeeAddonPrice;
        }
        if (addOns.erc20Reflection) {
            price += erc20ReflectionFeeAddonPrice;
        }
        if (addOns.erc20TransferFee) {
            price += erc20TransferFeeAddonPrice;
        }
        return price;
    }

    // solhint-disable-next-line function-max-lines
    function createErc20(CreateErc20Input memory _input) external payable override returns (address) {
        // First let's calculate the price
        uint256 usdPrice = getPriceErc20(
            AddOns({
                erc20TransferFee: _input.fees.transferFee.percentage > 0,
                erc20BurnFee: _input.fees.burn.percentage > 0,
                erc20Reflection: _input.fees.reflection.percentage > 0,
                erc20Buyback: _input.fees.buyback.percentage > 0
            })
        );

        LibBaseTokenLauncherStorage.BaseTokenLauncherStorage storage bds = LibBaseTokenLauncherStorage.diamondStorage();
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();

        // Now let's process the payment
        ITokenLauncherPaymentModule.ProcessPaymentInput memory paymentInput = ITokenLauncherPaymentModule.ProcessPaymentInput(
            msg.sender,
            _input.referrer,
            usdPrice,
            ITokenLauncherCommon.PaymentMethod(uint256(_input.paymentMethod))
        );
        ITokenLauncherPaymentModule.ProcessPaymentOutput memory paymentOutput = ITokenLauncherPaymentModule(
            ITokenLauncherStore(bds.tokenLauncherStore).paymentModule()
        ).processPayment{ value: msg.value }(paymentInput);
        // Set the buyback handler
        _input.buybackHandler = ds.buybackHandler;
        _input.tokenStore = bds.tokenLauncherStore;

        // Create the new ERC20 Token
        address token = address(new Diamond(address(this), ds.diamondCutFacet));

        IDiamondCut.FacetCut[] memory cut = new IDiamondCut.FacetCut[](1);
        // Ownership Facet
        cut[0] = IDiamondCut.FacetCut({
            facetAddress: ds.ownershipFacet,
            action: IDiamondCut.FacetCutAction.Add,
            functionSelectors: LibDiamondHelpers.getOwnableSelectors()
        });
        IDiamondCut(token).diamondCut(cut, address(0), "");

        // // ERC20 Facet
        cut[0] = IDiamondCut.FacetCut({
            facetAddress: ds.erc20Facet,
            action: IDiamondCut.FacetCutAction.Add,
            functionSelectors: IDiamondFacet(ds.erc20Facet).getFunctionSelectors()
        });
        IDiamondCut(token).diamondCut(cut, ds.erc20Facet, abi.encodeWithSelector(ITokenFiERC20Init.init.selector, _input));

        // TODO: Explore whether Access control should be its own facet or not
        // Access Control Facet
        cut[0] = IDiamondCut.FacetCut({
            facetAddress: ds.accessControlFacet,
            action: IDiamondCut.FacetCutAction.Add,
            functionSelectors: LibDiamondHelpers.getAccessControlSelectors()
        });
        IDiamondCut(token).diamondCut(cut, address(0), "");

        // TODO: To remove this as user can increase buyback percentage at any time
        // Add buyback facet
        if (_input.fees.buyback.percentage > 0) {
            // Grant buyback role to the token address
            // Buyback handler cannot be a facet under the token as Uniswap LP Pair does not allow for transferings tokens back to the token itself.
            IAccessControl(ds.buybackHandler).grantRole(LibTokenFiERC20Storage.BUYBACK_CALLER_ROLE, token);
            // cut[0] = IDiamondCut.FacetCut({ facetAddress: buybackFacet, action: IDiamondCut.FacetCutAction.Add });
            // IDiamondCut(token).diamondCut(cut, address(0), "");
        }

        // ITokenFiERC20Diamond(token).transferOwnership(_input.owner);
        ITokenFiERC20Diamond(token).addExemptAddress(ds.liquidityPoolFactory);

        // Log new token into store
        ITokenLauncherStore.CreateTokenInput memory storeInput = ITokenLauncherStore.CreateTokenInput({
            tokenAddress: token,
            owner: _input.owner,
            referrer: _input.referrer,
            usdTotalAmount: usdPrice,
            treasuryUsdShare: paymentOutput.feeCollected,
            referrerUsdShare: paymentOutput.referrerSharePaid,
            usdBurned: paymentOutput.usdBurned,
            flokiBurned: paymentOutput.flokiBurned,
            tokenType: ITokenLauncherCommon.TokenType.ERC20
        });
        ITokenLauncherStore(bds.tokenLauncherStore).addToken(storeInput);

        return token;
    }

    function createV2LiquidityPool(ITokenLauncherLiquidityPoolFactory.CreateV2Input memory input) external payable {
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();

        // First check the allowance of the source token
        ITokenFiERC20Diamond token = ITokenFiERC20Diamond(input.liquidityPoolDetails.sourceToken);

        uint256 allowedAmount = token.allowance(input.owner, ds.liquidityPoolFactory);
        require(allowedAmount >= input.liquidityPoolDetails.amountSourceToken, "TokenLauncherERC20: Not enough allowance");

        LibBaseTokenLauncherStorage.BaseTokenLauncherStorage storage bds = LibBaseTokenLauncherStorage.diamondStorage();

        // Create LP
        ITokenLauncherLiquidityPoolFactory lpFactory = ITokenLauncherLiquidityPoolFactory(ds.liquidityPoolFactory);
        ITokenLauncherLiquidityPoolFactory.CreateV2Output memory lpOutput = lpFactory.createV2LiquidityPool{ value: msg.value }(input);
        // if the source token is a tokenfi token, we need to add the new LP to the exchange pool
        if (ITokenLauncherStore(bds.tokenLauncherStore).tokenOwner(input.liquidityPoolDetails.sourceToken) != address(0)) {
            if (!token.isExchangePool(lpOutput.liquidityPoolToken)) {
                token.addExchangePool(lpOutput.liquidityPoolToken);
            }
            if (token.isReflectionToken() && !token.isExcludedFromReflectionRewards(lpOutput.liquidityPoolToken)) {
                token.excludeAccount(lpOutput.liquidityPoolToken);
            }

            updateBuyBackDetails(input.buybackDetails, address(token));
        }
        // Log into store
        ITokenLauncherStore.RegisterLiquidityPoolInput memory lpInput = ITokenLauncherStore.RegisterLiquidityPoolInput({
            tokenAddress: address(token),
            liquidityPoolToken: lpOutput.liquidityPoolToken
        });

        ITokenLauncherStore(bds.tokenLauncherStore).registerLiquidityPool(lpInput);

        emit TokenLiquidityCreated(
            msg.sender,
            input.liquidityPoolDetails.sourceToken,
            input.liquidityPoolDetails.pairedToken,
            input.liquidityPoolDetails.routerAddress,
            input.liquidityPoolDetails.amountSourceToken,
            input.liquidityPoolDetails.amountPairedToken
        );
    }

    function updateBuyBackHandler(address _newBuybackHandler) external onlyOwner {
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();
        address oldBuyBackHandler = ds.buybackHandler;
        ds.buybackHandler = _newBuybackHandler;
        emit BuyBackHandlerUpdated(oldBuyBackHandler, _newBuybackHandler);
    }

    function updateBuyBackDetails(ITokenLauncherLiquidityPoolFactory.BuyBackDetails memory buyBackDetails, address _token) public {
        LibBaseTokenLauncherStorage.BaseTokenLauncherStorage storage bds = LibBaseTokenLauncherStorage.diamondStorage();
        // TODO: Use library call instead of direct contract call
        address owner = ITokenLauncherStore(bds.tokenLauncherStore).tokenOwner(_token);
        require(owner == msg.sender || owner == tx.origin, "TokenLauncher: Only Owner");

        TokenFiERC20(_token).setBuybackDetails(buyBackDetails);
    }

    function buybackHandler() external view override returns (address) {
        LibTokenLauncherErc20Storage.TokenLauncherErc20Storage storage ds = LibTokenLauncherErc20Storage.diamondStorage();
        return ds.buybackHandler;
    }

    function addDiscountNFTs(address[] memory newDiscountNFTs) external onlyOwner {
        LibTokenLauncherPricingModule._addDiscountNFTs(newDiscountNFTs);
    }

    function removeDiscountNFTs(address discountNftToRemove) external onlyOwner {
        LibTokenLauncherPricingModule._removeDiscountNFTs(discountNftToRemove);
    }
}

