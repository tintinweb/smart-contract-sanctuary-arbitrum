pragma solidity 0.8.23;

import { LibBaseTokenLauncherStorage } from "../../libraries/BaseTokenLauncherStorage.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";

library LibTokenLauncherPricingModule {
    /**
     * @dev add discount nfts to the list by admin
     */
    function _addDiscountNFTs(address[] memory newDiscountNFTs) internal {
        LibBaseTokenLauncherStorage.BaseTokenLauncherStorage storage bds = LibBaseTokenLauncherStorage.diamondStorage();

        for (uint256 i = 0; i < newDiscountNFTs.length; i++) {
            require(bds.isDiscountNFT[newDiscountNFTs[i]] == false, "TokenLauncherPricingModuleV1::addDiscountNFTs::DUPLICATE: Discount NFT already added.");
            require(newDiscountNFTs[i] != address(0), "TokenLauncherPricingModuleV1::addDiscountNFTs::ZERO: Discount NFT cannot be zero address.");
            require(
                IERC721(newDiscountNFTs[i]).supportsInterface(type(IERC721).interfaceId),
                "TokenLauncherPricingModuleV1::addDiscountNFTs::INVALID: Discount NFT must implement ERC721."
            );
            bds.isDiscountNFT[newDiscountNFTs[i]] = true;
            bds.discountNFTs.push(IERC721(newDiscountNFTs[i]));
        }
    }

    /**
     * @dev remove the discount nfts from the list by admin
     */
    function _removeDiscountNFTs(address discountNftToRemove) internal {
        LibBaseTokenLauncherStorage.BaseTokenLauncherStorage storage bds = LibBaseTokenLauncherStorage.diamondStorage();
        bool found = false;
        for (uint256 i = 0; i < bds.discountNFTs.length; i++) {
            if (address(bds.discountNFTs[i]) == discountNftToRemove) {
                found = true;
                bds.isDiscountNFT[discountNftToRemove] = false;
                bds.discountNFTs[i] = bds.discountNFTs[bds.discountNFTs.length - 1];
                bds.discountNFTs.pop();
                break;
            }
        }
        require(found, "TokenLauncherPricingModuleV1::removeDiscountNFTs::NOT_FOUND: Discount NFT not found.");
    }
