    mapping(address => ClaimableRToken) public claimableRToken;

    uint public constant MIN_DELAY_BLOCK = 240; //60*60=3600 3600/15=240 The most EVMs are faster than 240 blocks per hour so this limit should not be reached for waiting 1 hour to claim BUT it protect against wrong timestamps from miners.
    uint public constant MIN_DELAY_TIME = 3600; // 1 hour

    address public rToken;
    address public cToken;

    event WithdrawalMone(uint amount, uint blockNr, uint BlockTime);
    event WithdrawalCollateral(uint amount, uint blockNr, uint BlockTime);

    modifier onlyToken() {
        require(msg.sender == rToken, "Lock: Only the token can call this function.");
        _;
    }

    constructor(address _rToken, address _cToken) payable {
