        require(_cToken != address(0), "Lock: _cToken can not be zero address..");

        rToken =_rToken;
        cToken =_cToken;
    }
    

    function lockRTokenForUser(address user, uint amount) external onlyToken {
        claimableRToken[user].askBlock = block.number;
        claimableRToken[user].askTime = block.timestamp;
        claimableRToken[user].askAmount += amount;
    }


    function claimMone() external {
        (address caller, uint blockNr, uint blockTs) = _getVars();

        require(claimableRToken[caller].askAmount > 0, "Lock: Nothing to claim.");
        require(
            claimableRToken[caller].askBlock + MIN_DELAY_BLOCK <= blockNr &&
            claimableRToken[caller].askTime + MIN_DELAY_TIME <= blockTs,
            "Lock: Not waited long enough."
        );
        uint temp = claimableRToken[caller].askAmount;
        claimableRToken[caller].askAmount = 0;
        IERC20(rToken).safeTransfer(caller, temp);

        emit WithdrawalMone(temp, blockNr, blockTs);
    }


