     */
    function _executeFees(bool isActive) internal {
        uint total = IERC20(rToken).balanceOf(address(this));

        if (pairs.length != 0 && isActive) {
            uint templiqRatio = total * liqRatio / DENOMINATOR;
            uint tempProjectRatio = total - templiqRatio;

