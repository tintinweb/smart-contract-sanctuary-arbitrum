        claimableCollateral[user].askBlock = block.number;
        claimableCollateral[user].askTime = block.timestamp;
        claimableCollateral[user].askAmount += amount;
    }


    function claimCollateral() external {
        (address caller, uint blockNr, uint blockTs) = _getVars();

        require(claimableCollateral[caller].askAmount > 0, "Lock: Nothing to claim.");
        require(
            claimableCollateral[caller].askBlock + MIN_DELAY_BLOCK <= blockNr &&
            claimableCollateral[caller].askTime + MIN_DELAY_TIME <= blockTs,
            "Lock: Still delayed"
        );
        uint amount = claimableCollateral[caller].askAmount;
        claimableCollateral[caller].askAmount = 0;
        IERC20(cToken).safeTransfer(caller, amount);

        emit WithdrawalMone(amount, blockNr, blockTs);
    }


    function _getVars() internal view returns(address caller, uint blockNr, uint blockTs) {
        caller = msg.sender;
        blockNr = block.number;
        blockTs = block.timestamp;
    }
}