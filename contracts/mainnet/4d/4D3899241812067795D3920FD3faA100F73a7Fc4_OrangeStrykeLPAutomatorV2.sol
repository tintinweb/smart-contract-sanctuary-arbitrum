                uint80,
                int256 quotePriceUsd_,
                uint256,
                uint256 lastUpdateQuote_,
                uint80
            ) {
                quotePriceUsd = quotePriceUsd_;
                lastUpdateQuote = lastUpdateQuote_;
            } catch {
                revert FeedNotAvailable();
            }
