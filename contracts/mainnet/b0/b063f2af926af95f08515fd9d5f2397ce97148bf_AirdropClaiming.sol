/// @title Airdrop Claiming
/// @author ArenaX Labs Inc.
/// @notice Smart contract that is responsible for claiming Neuron tokens
contract AirdropClaiming {

    /*//////////////////////////////////////////////////////////////
                                EVENTS
    //////////////////////////////////////////////////////////////*/

    /// @notice Event emitted when tokens are claimed.
    event TokensClaimed(address user, uint256 amount);

    /*//////////////////////////////////////////////////////////////
                                STRUCTS
    //////////////////////////////////////////////////////////////*/
    
    /// @notice Struct for aggregate claiming stats
    struct ClaimingStats {
        uint256 numClaimers;
        uint256 totalClaimed;
    }

    /*//////////////////////////////////////////////////////////////
                            STATE VARIABLES
    //////////////////////////////////////////////////////////////*/

    /// @notice Whether or not claiming is open
    bool public claimingOpen = false;

    /// @notice The owner of the smart contract.
    address public ownerAddress;

    /// @notice The neuron smart contract address.
    address public neuronAddress;

    /*//////////////////////////////////////////////////////////////
                            CONTRACT INSTANCES
    //////////////////////////////////////////////////////////////*/ 

    /// @notice The neuron contract instance.
    Neuron _neuronInstance;

    /*//////////////////////////////////////////////////////////////
                                MAPPINGS
    //////////////////////////////////////////////////////////////*/

    /// @notice Mapping of address to admin status.
    mapping(address => bool) public isAdmin;

    /// @notice Airdrop kind to merkle tree root.
    mapping(string => bytes32) public airdropToMerkleRoot;

    /// @notice Mapping of claimed status.
    mapping(bytes32 => mapping(address => bool)) public rootClaimedAirdropBool;

    /// @notice Mapping of amount claimed.
    mapping(bytes32 => mapping(address => uint256)) public rootClaimedAirdropAmount;    

    /// @notice Airdrop kind to aggregate stats.
    mapping(string => ClaimingStats) public aggregateClaimed;

    /*//////////////////////////////////////////////////////////////
                               CONSTRUCTOR
    //////////////////////////////////////////////////////////////*/

    /// @notice Sets the initial important addresses.
    /// @param ownerAddress_ The address of the owner for this smart contract
    /// then proceed to distribute them
    constructor(address ownerAddress_) {
        ownerAddress = ownerAddress_;
        isAdmin[ownerAddress] = true;
    }

    /*//////////////////////////////////////////////////////////////
                            EXTERNAL FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    /// @notice Instantiates the neuron contract.
    /// @dev Only the owner address is authorized to call this function.
    /// @param neuronAddress_ The address of the Neuron contract.
    function instantiateNeuronContract(address neuronAddress_) external {
        require(msg.sender == ownerAddress);
        neuronAddress = neuronAddress_;
        _neuronInstance = Neuron(neuronAddress_);
    }

    /// @notice Transfers ownership from one address to another.
    /// @dev Only the owner address is authorized to call this function.
    /// @param newOwnerAddress The address of the new owner
    function transferOwnership(address newOwnerAddress) external {
        require(msg.sender == ownerAddress);
        isAdmin[ownerAddress] = false;
        ownerAddress = newOwnerAddress;
        isAdmin[newOwnerAddress] = true;
    }

    /// @notice Changes the status of claiming
    /// @dev Only admins are authorized to call this function.
    /// @param open Whether claiming is open or not.
    function setClaimingStatus(bool open) external {
        require(isAdmin[msg.sender]);
        require(claimingOpen != open, "Nothing to change");
        claimingOpen = open;
    }

    /// @notice Sets root of the merkle tree.
    /// @dev Only admins are authorized to call this function.
    /// @param airDropKind airdrop type.
    /// @param root Root of the merkle tree.
    function setMerkleRoot(string memory airDropKind, bytes32 root) external {
        require(isAdmin[msg.sender]);
        airdropToMerkleRoot[airDropKind] = root;
    }

    /// @notice Adjusts admin access for a user.
    /// @dev Only the owner address is authorized to call this function.
    /// @param adminAddress The address of the admin.
    /// @param access Whether the address has admin access or not.
    function adjustAdminAccess(address adminAddress, bool access) external {
        require(msg.sender == ownerAddress);
        require(isAdmin[adminAddress] != access, "Nothing to change");
        isAdmin[adminAddress] = access;
    }  

    /// @notice Claims the specified amount of tokens from the treasury address to the caller's address.
    /// @param airdropKind The kind of airdrop to be claimed
    /// @param proof The proof of the claimee
    /// @param amount The amount to be claimed
    function claim( 
        string memory airdropKind,
        bytes32[] memory proof,
        uint256 amount
    ) 
        external 
    {
        require(claimingOpen, "Claiming is not open");
        require(!rootClaimedAirdropBool[airdropToMerkleRoot[airdropKind]][msg.sender], "Already claimed airdrop");
        _verify(proof, msg.sender, amount, airdropKind);
        rootClaimedAirdropBool[airdropToMerkleRoot[airdropKind]][msg.sender] = true;
        rootClaimedAirdropAmount[airdropToMerkleRoot[airdropKind]][msg.sender] += amount;
        aggregateClaimed[airdropKind].numClaimers += 1;
        aggregateClaimed[airdropKind].totalClaimed += amount;
        bool success = _neuronInstance.transfer(msg.sender, amount);
        if (success) {
            emit TokensClaimed(msg.sender, amount);
        }
    }

    /*//////////////////////////////////////////////////////////////
                            PRIVATE FUNCTIONS
    //////////////////////////////////////////////////////////////*/    

    function _verify(
        bytes32[] memory proof,
        address addr,
        uint256 amount,
        string memory airdropKind
    ) 
        private
        view 
    {
        bytes32 leaf = keccak256(bytes.concat(keccak256(abi.encode(addr, amount))));
        require(MerkleProof.verify(proof, airdropToMerkleRoot[airdropKind], leaf), "Invalid proof");
    }
 
}

