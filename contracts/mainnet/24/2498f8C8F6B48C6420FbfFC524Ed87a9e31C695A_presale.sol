            _amountSpend,
            _amountRecieve, 
            1,
            1,
            address(this),
            block.timestamp
        ); 
    }

    //j createCustomLp
    function createCustomLp (uint256 _amountRecieveTkn, uint256 _amountSpendTkn) public onlyOwner {
        spendToken.approve(address(UniswapV2Router02), _amountSpendTkn);
        recieveToken.approve(address(UniswapV2Router02), _amountRecieveTkn);
        UniswapV2Router02.addLiquidity(
            address(spendToken),
            address(recieveToken),
            _amountSpendTkn,
            _amountRecieveTkn, 
            1,
            1,
            address(this),
            block.timestamp
        ); 
    }


    // activate redemption
    function activateRedemption () public onlyOwner {
        require (!privatePresaleActive, "presale must have ended");
        redemptionStarted = true;
    }

    // stop redemption 
    function stopRedemption () public onlyOwner {
        redemptionStarted = false; 
    }

    // recover tokens
    function recoverERC20(address tokenAddress, uint256 tokenAmount) public onlyOwner {
        IERC20(tokenAddress).transfer(owner(), tokenAmount);
    }

    // start private presale
    function startPresale () public onlyOwner {
        privatePresaleActive = true;
    }

    // stop private presale 
    function pausePresale () public onlyOwner {
        privatePresaleActive = false;
    }

