  IDaoHallController public controller;
  uint256 public feeRate = 250;
  address public feeReceiver;
  address public signer;

  constructor(IDaoHallController _controller, address _feeReceiver, address _signer, address _lzEndpoint) 
      LayerZeroWrapper(_lzEndpoint) EIP712("DaoHallRegistrar", "1"){
    controller = _controller;
    feeReceiver = _feeReceiver;
    signer = _signer;
  }

  function buySubnode(string calldata label, bytes32 parentNode, address parentOwner, address resolver, uint256 data, bytes32 r, bytes32 s) external payable {
    bytes32 node = _makeNode(parentNode, keccak256(bytes(label)));
    _validateSign(node, parentOwner, data, r, s);

    uint64 expiry = uint64(data >> 160);
    if(block.timestamp > expiry){
      revert DataExpired();
    }

    // check availability
    _checkAvailability(node);

    if(msg.value > 0){
      _processFee(msg.value, parentOwner);
    }

    controller.setSubnodeRecord(parentNode, label, msg.sender, resolver, uint64(data >> 64), uint32(data >> 128), uint64(data));   
  }

  function extendSubnode(string memory label, bytes32 parentNode, address parentOwner, uint256 data, bytes32 r, bytes32 s) external payable {
    // check for subnode
    bytes32 node = _makeNode(parentNode, keccak256(bytes(label)));
    _validateSign(node, parentOwner, data, r, s);

    uint64 expiry = uint64(data >> 160);
    if(block.timestamp > expiry){
      revert DataExpired();
    }

    if(msg.value > 0){
      _processFee(msg.value, parentOwner);
    }

    controller.setSubnodeExpiry(parentNode, label, uint64(data));
  }

  function _validateSign(bytes32 node, address parentOwner, uint256 data, bytes32 r, bytes32 s) internal {
    bytes32 hash = keccak256(abi.encode(SIGN_HASH, node, parentOwner, uint248(data), msg.sender, msg.value));
    bytes32 digest = keccak256(abi.encodePacked("\x19\x01",  _domainSeparatorV4(), hash));
    if(ecrecover(digest, uint8(data >> 248), r, s) != signer){
      revert InvalidSign();
    }
  }

  function _checkAvailability(bytes32 node) internal view {
    (address owner, uint64 expiry) = controller.getNodeData(node);
    if(owner != address(0) && expiry >= block.timestamp){
      revert SubnodeNotAvailable(node);
    }
  }

  function _processFee(uint256 price, address owner) internal {
    uint256 fee = price * feeRate / 10000;
    uint256 amount = price - fee;
    Address.sendValue(payable(owner), amount);
    Address.sendValue(payable(feeReceiver), fee);
  }

  function _makeNode(bytes32 node, bytes32 labelhash) private pure returns (bytes32){
    return keccak256(abi.encodePacked(node, labelhash));
  }

  function _l2Node(bytes32 labelhash) private pure returns (bytes32){
    return _makeNode(ETH_NODE, labelhash);
  }

  function setFeeReceiver(address _feeReceiver) external onlyOwner {
    feeReceiver = _feeReceiver;
  }

  function setSigner(address _signer) external onlyOwner {
    signer = _signer;
  }

  function setFeeRate(uint256 _feeRate) external onlyOwner {
    feeRate = _feeRate;
  }

  function withdraw(uint256 amount, address receiver) external onlyOwner {
    Address.sendValue(payable(receiver), amount);
  }

  // LZ traverse
  uint gasForDestinationLzReceive = 350000;
  function setGasForDestinationLzReceive(uint newVal) external onlyOwner {
    gasForDestinationLzReceive = newVal;
  }

  function _getTraveseType(bytes memory payload) public pure returns (uint256) {
    bytes32 converted;
    assembly {
      converted := mload(add(payload, 32))
    }
    return uint256(converted);
  }

  function _traversePayload(uint16 chainId, bytes memory payload) internal {        
    uint16 version = 1;
    bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive);

    (uint messageFee, ) = lzEstimateGas(chainId, payload, adapterParams);        
    require(msg.value >= messageFee, "Not enough value for traverse");

    _endpoint.send{value: msg.value}(chainId, trustedRemoteLookup[chainId], payload, payable(msg.sender), address(0x0), adapterParams);
  }

  function _estimateFeeForTraverse(uint16 chainId, bytes memory payload) public view returns (uint256) {
    uint16 version = 1;
    bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive);
    (uint messageFee, ) = lzEstimateGas(chainId, payload, adapterParams);        
    return messageFee;        
  }

  uint256 constant public TRAVERSE_TOKEN = 1;
  event TokenTraversed(bytes32 node, uint16 chainId);

  /**
    * Trasverse a token to another chain
    */
  function _getTokenPayload(bytes32 parentNode, string memory label, address resolver, uint64 ttl) private view returns (bytes memory){  
    bytes32 subnode = _makeNode(parentNode, keccak256(bytes(label)));
    (address owner, uint64 expiry) = controller.getNodeData(subnode);

    return abi.encode(TRAVERSE_TOKEN, parentNode, label, owner, resolver, ttl, expiry);
  }

  function traverseToken(uint16 chainId, bytes32 parentNode, string calldata label, address resolver, uint64 ttl) external payable {
    require(trustedRemoteLookup[chainId].length > 0, "Chain not available");

    // only owner can traverse
    bytes32 subnode = _makeNode(parentNode, keccak256(bytes(label)));
    (address owner, ) = controller.getNodeData(subnode);
    require(owner == msg.sender, "NotOwner");

    // burn token
    controller.setSubnodeRecord(parentNode, label, address(0), address(0), 0, 0, 0);  

    _traversePayload(chainId, _getTokenPayload(parentNode, label, resolver, ttl));        
    emit TokenTraversed(subnode, chainId);
  }

  function estimateFeeForTraverseToken(uint16 chainId, bytes32 parentNode, string calldata label, address resolver, uint64 ttl) public view returns (uint256) {
    return _estimateFeeForTraverse(chainId, _getTokenPayload(parentNode, label, resolver, ttl));
  }    

  function _LzReceive(uint16 /*srcChain*/, bytes memory /*srcAddress*/, uint64 /*nonce*/, bytes memory payload) virtual internal override {
    uint256 traverseType = _getTraveseType(payload);
    if(traverseType == TRAVERSE_TOKEN){
      (, bytes32 parentNode, string memory label, address owner, address resolver, uint64 ttl, uint64 expiry) = abi.decode(payload, (uint256, bytes32, string, address, address, uint64, uint64));
      controller.setSubnodeRecord(parentNode, label, owner, resolver, ttl, 0, expiry);        
    }
  }
}