        uint256 oldMintCap = mintCap;
        require(
            _newMintCap != oldMintCap,
            "New mint cap is the same as the old one!"
        );
        mintCap = _newMintCap;

        emit NewMintCap(oldMintCap, _newMintCap);
    }

