import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract StagingMerkleClaimToken {

    using SafeERC20 for IERC20;

    address payable owner;
    address public immutable token;           // can we remove immutable?
    bytes32 public merkleRoot;                // removed immutable to make it updateable with function below

    // add deposit event to deposit ERC20 & increase balance (just send to deposit)
    event Deposit(address indexed from, uint256 indexed amount); 
    // add event to claim
    event Claim(address indexed claimer);

    
    // make merkleroot updateable BY OWNER
    function setMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    constructor(address _token, bytes32 _merkleRoot) payable {
        
        owner = payable(msg.sender);
        token = _token;             // token address to be supplied at contract create
        merkleRoot = _merkleRoot;        

    }


    function claim(
        // bytes32[] calldata merkleProof, 
        address receiver, 
        uint256 amount
        ) external {
        
        // This eliminated for staging
        // leaf validity is confirmed with sender address as local id
        // bytes32 leaf = keccak256(bytes.concat(keccak256(abi.encode(msg.sender, amount))));

        // require(
        //     !claimed[msg.sender],
        //     "BCard Claim: Address has already claimed tokens.");
        
        require(
            amount > 0,
            "BCard Claim: Amount must be greater than zero."
        );

        require(
            amount < IERC20(token).balanceOf(address(this)),
            "BCard Claim: Currently out of tokens, please stand by for a refill."
        );

        // This eliminated for staging
        // require(
        //     MerkleProof.verify(merkleProof, merkleRoot, leaf), 
        //     "BCard Claim: Invalid proof supplied"
        // );

        // this removed for OETH deployment due to fractional token requests.
        // require(
        //     amount == 1000000000000000000,
        //     "BCard STAGING: Single Token Claim for confimration only."
        // );

        // This eliminated for staging
        // set public flag as claimed
        // claimed[msg.sender] = true;

        IERC20(token).safeTransfer(receiver, amount);

        emit Claim(msg.sender);

    }

    // how can i get merkleProof array as bytes32 required for input? - web3 library
    function canClaim(address sender, bytes32[] calldata merkleProof, string memory amount)
        public 
        view 
        returns (bool) {

        bytes32 leaf = keccak256(bytes.concat(keccak256(abi.encode(sender, amount))));
        
        // we get a string of NAME which is the address plus amount to test against the merkle root
        return 
            MerkleProof.verify(
                merkleProof,
                merkleRoot,
                leaf
            );
    }

    // INTERNAL TOKEN MANAGEMENT

    // event emission for deposit receipt (etherscan event)
    receive() external payable {
        emit Deposit(msg.sender, msg.value);
    }

    // add EXTERNAL balance to check contract balance of TOKEN
    function getBalance() external view returns (uint256) {
        return IERC20(token).balanceOf(address(this));
    }

    // add withdraw function to withdraw tokens to owner account address
    function withdraw() external onlyOwner {
        // transfer all ERC20 tokens from contract to owner
        IERC20(token).transfer(msg.sender, IERC20(token).balanceOf(address(this)));

        // also withdraw any ETH deposited - THIS UPGRADE TESTED AND COINFIRMED
        uint256 amount = address(this).balance;
        require(amount > 0, "Nothing to withdraw; contract balance empty");
        
        address _owner = owner;
        (bool sent, ) = _owner.call{value: amount}("");
        require(sent, "Failed to send Ether");
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only the contract owner can call this function.");
        _;
    }


}

