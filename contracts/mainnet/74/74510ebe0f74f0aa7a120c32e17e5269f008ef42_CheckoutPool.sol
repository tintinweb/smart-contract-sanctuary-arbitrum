    PostOpMode internal _LAST_OP_MODE_;

    mapping(address => bool) internal _OPERATORS_;
    mapping(address => bool) internal _SIGNERS_;
    mapping(bytes32 => bool) internal _SPONSORED_USER_OP_HASHES_;

