    modifier onlyDispatcher() {
        if (!_dispatcherlisted[msg.sender]) {
            revert Unauthorized();
        }
        _;
    }

    /// @notice publicMint
    /// @param to address
    /// @param key uint256
    function publicMint(
        address to,
        uint256 key,
        bytes memory signedMsg
    ) public nonReentrant whenNotPaused {
       if(!_verify(key,signedMsg)) {
            revert VerificationFailed();
        }

        safeMint(to, key);
        nonce++;
        
    }

    // Defining the safeMint function
    function safeMint(
        address to,
        uint256 key
        
    ) private whenNotPaused {
        uint256 balance = balanceOf(to);

        if(balance > 0 ) {
            revert AlreadyExisted();
        }

        uint256 tokenId = _nextTokenId++;
        _safeMint(to, tokenId);
        _setTokenURI(tokenId, tokenIdMapLevel[key]);

        emit TokenIdLevel(tokenId,to, key);
    }

    function safeMintBatchByAddress(
        address[] memory to,
        uint256 key
    ) public onlyDispatcher whenNotPaused {
        for (uint256 i = 0; i < to.length; i++) {
            safeMint(to[i], key);
        }
    }

