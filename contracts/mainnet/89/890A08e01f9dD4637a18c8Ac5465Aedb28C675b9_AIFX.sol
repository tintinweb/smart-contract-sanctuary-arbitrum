    // upgradeLevel
    function setLevel(uint256 tokenId,uint256 key,bytes memory signedMsg) public  {
        if(!_verify(key,signedMsg)) {
            revert VerificationFailed();
        }

        address from = _ownerOf(tokenId);
        if(from != msg.sender){
            revert Unauthorized();
        }

        _setTokenURI(tokenId, tokenIdMapLevel[key]);
        nonce++;

        emit TokenIdLevel(tokenId,msg.sender, key);
    }



    // Defining the contractURI function
    function contractURI() public view returns (string memory) {
        return _contractURI;
    }


    function _verify(uint256 key, bytes memory signedMsg) private view returns (bool verified) {
        bytes32 hash = keccak256(abi.encodePacked(msg.sender, key,nonce));
        bytes32 prefixedHash = hash.toEthSignedMessageHash();
        address calculatedPublicKey = ECDSA.recover(prefixedHash, signedMsg);
        return (calculatedPublicKey == _publicKey);
    }

  

