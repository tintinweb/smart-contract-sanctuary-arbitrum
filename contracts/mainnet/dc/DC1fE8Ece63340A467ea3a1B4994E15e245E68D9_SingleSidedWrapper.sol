pragma solidity ^0.8.0;
pragma abicoder v2;

import "./interfaces/ISingleSidedWrapper.sol";
import "./interfaces/ISwapProxyForWrapper.sol";

import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@uniswap/v3-core/contracts/libraries/FullMath.sol";


contract SingleSidedWrapper is ISingleSidedWrapper, ReentrancyGuardUpgradeable, UUPSUpgradeable{

    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    uint256 public constant override MAX_MANAGEMENT_FEES = 25e6; // max 25% (1e8 is 100%)
    uint256 public override defaultManagementFees;

    mapping(address => uint256) public override managementFeesByPool; // 1e8 means 100%
    mapping(address => uint256) public override managementFeesByStrategy; // 1e8 means 100%

    // user to pending swap mapping
    mapping(address => PendingSwapAmount) public override pendingSwap;

    // factory address;
    IStrategyFactory public override defiedgeFactory;

    // governance address
    address public override governance;

    // pending governance
    address public override pendingGovernance;


    // swap proxy address
    address public override swapProxy;


    // strategy to default token mapping - by default deposit token is token0, change this to true if token1 should be deposit token
    mapping (address => bool) public override isToken1DefaultTokenForStrategy;

    // Modifiers
    modifier onlyGovernance() {
        require(msg.sender == governance, "NO");
        _;
    }

    modifier isValidStrategy(address _strategy) {
        require(defiedgeFactory.isValidStrategy(_strategy), "Invalid Strategy");
        _;
    }

    function initialize(address _factroy, address _governance) public initializer{
        __ReentrancyGuard_init();
        defiedgeFactory = IStrategyFactory(_factroy);
        governance = _governance;
    }

    function deposit(address _strategy, uint256 _amount, uint256 _minShare) external override nonReentrant isValidStrategy(_strategy){
        require(!pendingSwap[msg.sender].isPendingSwap, "Error: Pending Swap!");

        uint256 amount0;
        uint256 amount1;
        address defaultToken;

        IUniswapV3Pool _pool = IDefiEdgeStrategy(_strategy).pool();

        if(isToken1DefaultTokenForStrategy[_strategy]) {
            amount0 = 0;
            amount1 = _amount;
            defaultToken = _pool.token1();
        } else {
            amount0 = _amount;
            amount1 = 0;
            defaultToken = _pool.token0();
        }

        // transfer token from user to this contract
        SafeERC20.safeTransferFrom(IERC20(defaultToken), msg.sender, address(this), _amount);

        // mint deshare
        SafeERC20.safeIncreaseAllowance(IERC20(defaultToken), _strategy, _amount);
        IDefiEdgeStrategy(_strategy).mint(amount0, amount1, amount0, amount1, _minShare);

        uint256 _receivedShare = IDefiEdgeStrategy(_strategy).balanceOf(address(this));

        // transfer deshares to msg.sender address
        SafeERC20.safeTransfer(IERC20(_strategy), msg.sender, _receivedShare);
    }


    function withdraw(address _strategy, uint256 _shares, uint256 _amount0Min, uint256 _amount1Min, bool _claimAll) external override nonReentrant isValidStrategy(_strategy){
        require(!pendingSwap[msg.sender].isPendingSwap, "Error: Pending Swap!");

        // transfer shares from user to this contract
        SafeERC20.safeTransferFrom(IERC20(_strategy), msg.sender, address(this), _shares);

        // burn shares and withdraw tokens from strategy
        (uint256 collect0, uint256 collect1) = IDefiEdgeStrategy(_strategy).burn(_shares, _amount0Min, _amount1Min);

        LocalVariables_Withdraw memory vars;

        IUniswapV3Pool _pool = IDefiEdgeStrategy(_strategy).pool();
        vars.token0 = _pool.token0();
        vars.token1 = _pool.token1();

        if(isToken1DefaultTokenForStrategy[_strategy]) {
            vars.dstToken = vars.token1;
            vars.srcToken = vars.token0;
            vars.amountForDstToken = collect1;
            vars.amountForSrcToken = collect0;
        } else {
            vars.dstToken = vars.token0;
            vars.srcToken = vars.token1;
            vars.amountForDstToken = collect0;
            vars.amountForSrcToken = collect1;
        }

        // transfer the default (destination) token to msg.sender
        _transferTokens(_strategy, vars.dstToken, vars.amountForDstToken, msg.sender);

        if(_claimAll){
            // transfer the non default token to msg.sender
            _transferTokens(_strategy, vars.srcToken, vars.amountForSrcToken, msg.sender);
        } else {
            // store swap data if non default token amount is greater than 0
            if(vars.amountForSrcToken > 0){
                pendingSwap[msg.sender] = PendingSwapAmount({
                    strategy: _strategy,
                    srcToken: vars.srcToken,
                    dstToken: vars.dstToken,
                    inputAmount: vars.amountForSrcToken,
                    isPendingSwap: true
                });
            }
        }

        emit Withdraw(_strategy, _shares, collect0, collect1, _claimAll);

    }

    function swapAndClaim(address _strategy, bool isOneInchSwap, bytes calldata data, uint256 _minOutputAmount, bool _claimWithoutSwap) external override nonReentrant isValidStrategy(_strategy){
        PendingSwapAmount memory _swapAmount = pendingSwap[msg.sender];
        require(_swapAmount.isPendingSwap, "Error: No Pending Swap!");

        pendingSwap[msg.sender].isPendingSwap = false;
        
        if(_claimWithoutSwap) {
            // transfer the non default token to msg.sender
            _transferTokens(_strategy, _swapAmount.srcToken, _swapAmount.inputAmount, msg.sender);

            emit SwapAndClaim(_strategy, _swapAmount.srcToken, _swapAmount.dstToken, _swapAmount.inputAmount, _swapAmount.inputAmount, true);

        } else {
            // approve to swap proxy contract
            SafeERC20.safeIncreaseAllowance(IERC20(_swapAmount.srcToken), swapProxy, _swapAmount.inputAmount);

            uint256 tokenInBalanceBefore = IERC20(_swapAmount.srcToken).balanceOf(address(this));
            uint256 tokenOutBalanceBefore = IERC20(_swapAmount.dstToken).balanceOf(address(this));

            if(isOneInchSwap){
                ISwapProxyForWrapper(swapProxy).aggregatorSwap(_strategy, data);
            } else {
                // Interact with 1inch through contract call with data
                (bool success, bytes memory returnData) = address(swapProxy).call(data);

                // Verify return status and data
                if (!success) {
                    uint256 length = returnData.length;
                    if (length < 68) {
                        // If the returnData length is less than 68, then the transaction failed silently.
                        revert("swap");
                    } else {
                        // Look for revert reason and bubble it up if present
                        uint256 t;
                        assembly {
                            returnData := add(returnData, 4)
                            t := mload(returnData) // Save the content of the length slot
                            mstore(returnData, sub(length, 4)) // Set proper length
                        }
                        string memory reason = abi.decode(returnData, (string));
                        assembly {
                            mstore(returnData, t) // Restore the content of the length slot
                        }
                        revert(reason);
                    }
                }

            }

            uint256 tokenInBalanceAfter = IERC20(_swapAmount.srcToken).balanceOf(address(this));
            uint256 tokenOutBalanceAfter = IERC20(_swapAmount.dstToken).balanceOf(address(this));

            uint256 amountInFinal = tokenInBalanceBefore.sub(tokenInBalanceAfter);
            uint256 amountOutFinal = tokenOutBalanceAfter.sub(tokenOutBalanceBefore);

            require(amountInFinal <= _swapAmount.inputAmount, "TooMuchSent");
            require(amountOutFinal >= _minOutputAmount, "TooLittleReceived");

            // transfer swapped default token to msg.sender
            _transferTokens(_strategy, _swapAmount.dstToken, amountOutFinal, msg.sender);
            
            emit SwapAndClaim(_strategy, _swapAmount.srcToken, _swapAmount.dstToken, _swapAmount.inputAmount, amountOutFinal, false);
        }

    }

    function emergencySendPendingTokensForUser(address _user) external override onlyGovernance {
        PendingSwapAmount memory _swapAmount = pendingSwap[_user];
        require(_swapAmount.isPendingSwap, "Error: No Pending Swap!");

        pendingSwap[_user].isPendingSwap = false;

        // transfer the non default token to _user
        _transferTokens(_swapAmount.strategy, _swapAmount.srcToken, _swapAmount.inputAmount, msg.sender);

        emit SwapAndClaim(_swapAmount.strategy, _swapAmount.srcToken, _swapAmount.dstToken, _swapAmount.inputAmount, _swapAmount.inputAmount, true);
    }

    /**
     * @notice Toggle default token for strategy
     * @param _strategy Address of strategy
     */
    function toggleDefaultToken(address _strategy) external override onlyGovernance {
        isToken1DefaultTokenForStrategy[_strategy] = isToken1DefaultTokenForStrategy[_strategy] ? false : true;
        emit DefaultTokenChanged(_strategy, isToken1DefaultTokenForStrategy[_strategy]);
    }

    /**
     * @notice Changes protocol performance fees by per pool, per strategy or setup default performance fee
     * @param pool Address of the pool
     * @param strategy Address of the strategy
     * @param _feeRate New fee in 1e8 format
     */
    function changeManagementFees(address pool, address strategy, uint256 _feeRate) external override onlyGovernance {
        require(_feeRate <= MAX_MANAGEMENT_FEES, "IA"); // should be less than 100%

        if (pool != address(0)) {
            managementFeesByPool[pool] = _feeRate;
            emit ManagementFeesChanged(pool, _feeRate);
        }

        if (strategy != address(0)) {
            managementFeesByStrategy[strategy] = _feeRate;
            emit ManagementFeesChanged(strategy, _feeRate);
        }

        if (pool == address(0) && strategy == address(0)) {
            defaultManagementFees = _feeRate;
            emit ManagementFeesChanged(address(0), _feeRate);
        }
    }

    /**
     * @notice Get protocol performance fees by per pool, per strategy 
     * @param pool Address of the pool
     * @param strategy Address of the strategy
     * @return _feeRate New fee in 1e8 format
     */
    function getManagementFees(address pool, address strategy) external view override  returns(uint256 _feeRate) {
        return _getManagementFees(pool, strategy);
    }

    function _getManagementFees(address pool, address strategy) internal view returns(uint256 _feeRate) {
        uint256 _managementFeesByStrategy = managementFeesByStrategy[strategy];
        uint256 _managementFeesByPool = managementFeesByPool[pool];

        if (_managementFeesByStrategy > 0) {
            _feeRate = _managementFeesByStrategy;
        } else if (_managementFeesByPool > 0) {
            _feeRate = _managementFeesByPool;
        } else {
            _feeRate = defaultManagementFees;
        }
    }

    /**
     * @notice Change the governance address
     * @param _governance Address of the new governance
     */
    function changeGovernance(address _governance) external override onlyGovernance {
        pendingGovernance = _governance;
    }

    /**
     * @notice Change the governance
     */
    function acceptGovernance() external override {
        require(msg.sender == pendingGovernance);
        governance = pendingGovernance;
    }

    /**
     * @notice Change ALO swap proxy
     * @param _swapProxy swap proxy contract address
     */
    function changeSwapProxy(address _swapProxy) external override onlyGovernance {
        swapProxy = _swapProxy;
    }

    function _transferTokens(address _strategy, address _token, uint256  _amount, address _user) internal {
        address _pool = address(IDefiEdgeStrategy(_strategy).pool());
        uint256 _managementFeeRate = _getManagementFees(_pool, _strategy);

        if(_amount > 0){
            uint256 managementShare = 0;
            uint256 userShare = _amount;
            
            if(_managementFeeRate > 0){
                managementShare = FullMath.mulDiv(_amount, _managementFeeRate, 1e8);
                userShare = _amount.sub(managementShare);

                // transfer the token to _protocol
                SafeERC20.safeTransfer(IERC20(_token), defiedgeFactory.feeTo(), managementShare);
            }

            // transfer the token to _user
