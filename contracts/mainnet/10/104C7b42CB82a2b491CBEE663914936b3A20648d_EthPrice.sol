pragma solidity ^0.8.25;
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract EthPrice {

    using ECDSA for bytes32;
    using Strings for uint256;

    struct PriceData {
        uint256 price;
        uint256 timestamp;
        address signer;
        bytes signature;
    }

    PriceData[3] public priceHistory;

    uint256 public highestTimestamp = 0;

    constructor() {
        // Initialize price history array with default values
        priceHistory[0] = PriceData(0, 0, address(0), "");
        priceHistory[1] = PriceData(0, 0, address(0), "");
        priceHistory[2] = PriceData(0, 0, address(0), "");
    }

    function updatePrice(uint256 _price, uint256 _timestamp, address _signer, bytes memory _signature) public {
        require(_timestamp > highestTimestamp, "New timestamp must be greater than the highest timestamp");
        require(isValidSignature(_price, _timestamp, _signer, _signature), "Invalid signature");

        // Shift the existing history back by one index
        priceHistory[2] = priceHistory[1];
        priceHistory[1] = priceHistory[0];
        priceHistory[0] = PriceData(_price, _timestamp, _signer, _signature);
        highestTimestamp = _timestamp;
    }

    function isValidSignature(uint256 _price, uint256 _timestamp, address _signer, bytes memory _signature) internal pure returns (bool) {
        // Create the original message that was signed (price and timestamp concatenated)
        string memory message = string(abi.encodePacked(_price.toString(), _timestamp.toString()));
        // Create the prefixed message that replicates the off-chain signing process
        bytes32 prefixedHash = keccak256(abi.encodePacked(
            "\x19Ethereum Signed Message:\n",
            bytes(message).length.toString(),
            message
        ));

        // Recover the signer from the signature
        address recoveredSigner = ECDSA.recover(prefixedHash, _signature);

        // Check if the recovered signer matches the expected signer
        return (recoveredSigner == _signer);
    }
}

