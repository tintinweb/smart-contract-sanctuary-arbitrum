pragma solidity ^0.8.0;





interface IPayment {
    function payment(uint64 mainType) external view returns (address);
}

interface IPerformance {
    // agent => child-player's total weighted-dollars
    function weightedDollar(address agent) external view returns (uint256);

    // agent => child-player's account
    function level2nd(address agent) external view returns (uint64);

    // agent => grandchild-player's account
    function level3th(address agent) external view returns (uint64);
}

interface IShareCalc {
    function fib0() external view returns (uint256);

    function fib1() external view returns (uint256);

    function round() external view returns (uint256);

    function accShare() external view returns (uint256);

    function accDollar() external view returns (uint256);
}

interface IGamePool {
    function jackPool() external view returns (uint256);

    function gamePool() external view returns (uint256);

    function adjustPool() external view returns (uint256);
}

interface ISftShareSupply {
    function totalShare(uint256 slot) external view returns (uint256);

    function totalFT(uint64) external view returns (uint256);
}

interface IUserAccount {
    struct UserAccount {
        uint256 award; // award
        uint256 accumulated; // accumulated award
    }

    function accounts(address addr) external view returns (UserAccount memory);
}

contract PlatformBatchView is Ownable {
    address public platform;
    address public platformSFT;
    address public shareCalculator;
    address public agentPool;
    address public gamePool;

    struct UserAccount {
        uint256 award; // award
        uint256 accumulated; // accumulated award
    }

    constructor(
        address _platform,
        address _platformSFT,
        address _shareCalculator,
        address _agentPool,
        address _gamePool
    ) {
        platform = _platform;
        platformSFT = _platformSFT;
        shareCalculator = _shareCalculator;
        agentPool = _agentPool;
        gamePool = _gamePool;
    }

    function setAddress(
        address _platform,
        address _platformSFT,
        address _shareCalculator,
        address _agentPool,
        address _gamePool
    ) external onlyOwner {
        platform = _platform;
        platformSFT = _platformSFT;
        shareCalculator = _shareCalculator;
        agentPool = _agentPool;
        gamePool = _gamePool;
    }

    function slotSharePrice(uint256 slot) external view returns (uint256) {
        return
            (ISftShareSupply(platformSFT).totalFT(uint64(slot)) * (10 ** IERC3525(platformSFT).valueDecimals()) * 100) /
            ISftShareSupply(platformSFT).totalShare(slot);
    }

    // addr as a player
    function queryReward(
        address addr
    ) external view returns (uint256 gameAward, uint256 gameAcc, uint256 agentAward, uint256 agentAcc) {
        IUserAccount.UserAccount memory ua;

        ua = IUserAccount(gamePool).accounts(addr);
        gameAward = ua.award;
        gameAcc = ua.accumulated;

        ua = IUserAccount(agentPool).accounts(addr);
        agentAward = ua.award;
        agentAcc = ua.accumulated;
    }

    // addr as an agent
    function queryPerformance(
        address addr
    ) external view returns (uint256 count2nd, uint256 count3rd, uint256 amount2rd) {
        count2nd = IPerformance(platform).level2nd(addr);
        count3rd = IPerformance(platform).level3th(addr);
        amount2rd = IPerformance(platform).weightedDollar(addr);
    }

    function queryPoolInfo()
        external
        view
        returns (
            uint256 fib0,
            uint256 fib1,
            uint256 round,
            uint256 accShare,
            uint256 accDollar,
            uint256 jack,
            uint256 game,
            uint256 adjust
        )
    {
        fib0 = IShareCalc(shareCalculator).fib0();
        fib1 = IShareCalc(shareCalculator).fib1();
        round = IShareCalc(shareCalculator).round();
        accShare = IShareCalc(shareCalculator).accShare();
        accDollar = IShareCalc(shareCalculator).accDollar();

        jack = IGamePool(gamePool).jackPool();
        game = IGamePool(gamePool).gamePool();
        adjust = IGamePool(gamePool).adjustPool();
    }

    function queryAccumulatedShare(
        address addr,
        uint64 slot
    ) external view returns (uint256 totalAmount, uint256[] memory tokenIdArray, uint256[] memory balanceArray) {
        address sft = platformSFT;
        uint256 balance = IERC3525(sft).balanceOf(addr);
        tokenIdArray = new uint256[](balance);
        balanceArray = new uint256[](balance);

        if (balance > 0) {
            for (uint256 i = 0; i < balance; i++) {
                uint256 tokenId = IERC721Enumerable(sft).tokenOfOwnerByIndex(addr, i);
                if (IERC3525(sft).slotOf(tokenId) == slot) {
                    balanceArray[i] = IERC3525(sft).balanceOf(tokenId);
                    tokenIdArray[i] = tokenId;
                    totalAmount += balanceArray[i];
                }
            }
        }
    }
}