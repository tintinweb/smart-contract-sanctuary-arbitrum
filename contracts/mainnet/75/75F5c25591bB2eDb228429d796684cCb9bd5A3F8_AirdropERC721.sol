                abi.encode(
                    CLAIM_HASH,
                    claim.isBurning,
                    address(this),
                    claim.recipient,
                    claim.paymentToken,
                    claim.paymentAmount,
                    claim.collection,
                    keccak256(abi.encodePacked(claim.tokenIds))
                )
            );
    }
