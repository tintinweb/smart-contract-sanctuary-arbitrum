library VaultConfiguration {
    error INVALID_MIDDLEWARE_STRATEGY();
    error INVALID_LIMIT_MODE();
    error INVALID_TIMELOCK_DURATION();
    error INVALID_CREATOR_FEE();
    error INVALID_HARVEST_FEE();
