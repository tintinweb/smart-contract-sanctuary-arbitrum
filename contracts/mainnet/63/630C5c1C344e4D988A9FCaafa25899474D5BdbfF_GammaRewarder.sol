    /// @notice Checks whether `distribution` was live between `roundedEpochStart` and `roundedEpochEnd`
    function _isDistributionLiveBetweenBlocks(
        DistributionParameters memory distribution,
        uint256 startBlockNumber,
        uint256 endBlockNumber
    ) internal pure returns (bool) {
        return (startBlockNumber < distribution.endBlockNumber && distribution.startBlockNumber < endBlockNumber);
    }

    /// @notice Gets the list of all the distributions for `Hypervisor` that have been active between `startBlockNumber` and `epochEnd` (excluded)
    /// @dev If the `Hypervisor` parameter is equal to 0, then this function will return the distributions for all pools
    function _getDistributionsBetweenBlocks(
        address _hypervisor,
        uint256 _startBlockNumber,
        uint256 _endBlockNumber,
        uint256 _startGettingId,
        uint256 _amountOfGetting
    ) internal view returns (DistributionParameters[] memory, uint256) {
        uint256 sizeOfActiveDistributions; // Initialized to zero.
        uint256 distributionListLength = distributionList.length;
        uint256 amountOfGetting = _amountOfGetting > distributionListLength ? distributionListLength : _amountOfGetting;
        DistributionParameters[] memory activeDistributions = new DistributionParameters[](amountOfGetting);
        uint256 curGettingId = _startGettingId;

        while(curGettingId < distributionListLength) {
            DistributionParameters memory distribution = distributionList[curGettingId];
            if (
                _isDistributionLiveBetweenBlocks(distribution, _startBlockNumber, _endBlockNumber) &&
                (_hypervisor == address(0) || distribution.hypervisor == _hypervisor)
            ) {
                activeDistributions[sizeOfActiveDistributions] = distribution;
                sizeOfActiveDistributions += 1;
            }
            unchecked {
                ++curGettingId;
            }
            if(sizeOfActiveDistributions == amountOfGetting) break;
        }

        assembly {
            mstore(activeDistributions, sizeOfActiveDistributions)
        }

        return (activeDistributions, curGettingId);
    }
