        for(uint i = 0 ; i < users.length ; i++) {
            // // verifying proof
            // bytes32 leaf = keccak256(abi.encode(users[i], tokens[i], amounts[i]));
            // require(_verifyProof(leaf, proofs[i]), "Merkle Tree is not verified.");

            // Closing reentrancy gate here
            uint256 toSend = amounts[i] - claimed[users[i]][tokens[i]].amount;
            claimed[users[i]][tokens[i]] = Claim(SafeCast.toUint208(amounts[i]), uint48(block.timestamp), merkleRoot);
            

            IERC20(tokens[i]).safeTransfer(users[i], toSend);
            emit Claimed(users[i], tokens[i], toSend);
        }
    }

