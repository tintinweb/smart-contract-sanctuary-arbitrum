        uint256 tokenAavePriceInETH = getAaveTokenPriceInETH(_tokenAddr);
        uint256 ethPriceInUSD = uint256(getChainlinkPriceInUSD(ETH_ADDR));

        return wmul(tokenAavePriceInETH, ethPriceInUSD);
    }
