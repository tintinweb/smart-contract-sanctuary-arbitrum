    uint256 internal constant MAX_OPERATOR_PROTOCOL_FEE = 0.10e18; // 10%

    uint256 internal constant MAX_TOTAL_OPERATOR_PROTOCOL_FEE = 0.40e18; // 40%, must <= 1 - MAX_FEE - MAX_PROTOCOL_FEE

