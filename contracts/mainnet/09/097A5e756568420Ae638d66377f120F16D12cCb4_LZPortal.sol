pragma solidity ^0.8.25;

import { OApp, Origin, MessagingFee } from "@layerzerolabs/lz-evm-oapp-v2/contracts/oapp/OApp.sol";
import "./LZPortalLogic.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";

interface IPortalToken {
    function portalIn(uint256 _amount, address _from, address _wallet) external;

    function portalOut(uint256 _amount, address _wallet, address _to) external;
}

/**
 * LZPortal is to be deployed with the same address cross-chain
 * Therefore there is no constructor but instead an initialize function
 */
contract LZPortal is Ownable {
    event PortalOut(address from, address to, uint256 amount, bytes32 guid);

    event PortalIn(uint256 originChainId, address from, address to, uint256 amount, bytes32 guid);
    address public d8xToken; // address of the d8x token on that chain
    LZPortalLogic public logic; // address of the logic (different on different chains)

    constructor() {
        // using "borrowed" storage slot to prevent
        // other addresses from calling initialize
        d8xToken = msg.sender;
    }

    /**
     * @param _d8xToken address of the token
     * @param _endpoint address of the layer zero endpoint https://docs.layerzero.network/contracts/endpoint-addresses
     */
    function initialize(address _d8xToken, address _endpoint, address _owner) external {
        require(d8xToken == msg.sender, "wrong initializer");
        d8xToken = _d8xToken;
        transferOwnership(_owner);
        logic = new LZPortalLogic(_endpoint, address(this));
        logic.setDelegate(_owner);
    }

    function setPeer(uint32 _eid, bytes32 _peer) public onlyOwner {
        logic.setPeer(_eid, _peer);
    }

    function quote(
        uint32 _dstEid,
        address _recipient,
        uint256 _amount
    ) external view returns (uint256) {
        return logic.quote(_dstEid, _recipient, _amount);
    }

    // bridge out
    function portalOut(uint32 _dstEid, address _recipient, uint256 _amount) external payable {
        MessagingReceipt memory receipt = logic.portalOut{ value: msg.value }(
            _dstEid,
            _recipient,
            msg.sender,
            _amount
        );
        IPortalToken(d8xToken).portalOut(_amount, msg.sender, _recipient);
