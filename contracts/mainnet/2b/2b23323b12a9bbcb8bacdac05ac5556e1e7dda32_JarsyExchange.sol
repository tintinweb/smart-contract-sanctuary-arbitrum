import {ERC20} from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {Pausable} from "@openzeppelin/contracts/utils/Pausable.sol";

contract Asset is ERC20, Ownable, Pausable {
    // mapping to store the blacklisted address
    // blacklisted address can't transfer the token
    mapping(address => bool) public isBlacklisted;

    // the address of JarsyExchange contract
    address public jarsyExchange;

    // constructor to initialize the contract
    constructor(
        string memory _name,
        string memory _symbol,
        address _jarsyExchange
    ) ERC20(_name, _symbol) Ownable(_jarsyExchange) {
        jarsyExchange = _jarsyExchange;
    }

    // set the function of suspending contract transfers to block all transactions
    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    // function to add/remove the address to the blacklisted
    function setBlacklist(
        address _address,
        bool _blacklisted
    ) public onlyOwner {
        isBlacklisted[_address] = _blacklisted;
    }

    // mint the token
    function mint(address to, uint256 amount) public onlyOwner returns (bool) {
        _mint(to, amount);
        return true;
    }

    // burn the token
    function burn(address account, uint256 amount) public onlyOwner {
        _burn(account, amount);
    }

    function transfer(
        address to,
        uint256 value
    ) public override whenNotPaused returns (bool) {
        address owner = _msgSender();
        require(!isBlacklisted[owner], "Sender is blacklisted");
        require(!isBlacklisted[to], "Recipient is blacklisted");

        super._transfer(owner, to, value);

        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 value
    ) public override returns (bool) {
        require(!isBlacklisted[from], "Sender is blacklisted");
        require(!isBlacklisted[to], "Recipient is blacklisted");

        if (paused() && to != jarsyExchange) {
            revert("Contract is paused and recipient is not jarsyExchange");
        }

        address spender = _msgSender();
        _spendAllowance(from, spender, value);
        _transfer(from, to, value);

        return true;
    }
}

