pragma solidity 0.8.20;

import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {Asset} from "./Asset.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {Address} from "@openzeppelin/contracts/utils/Address.sol";

contract JarsyExchange is OwnableUpgradeable {
    error CanNotBeZero();

    using SafeERC20 for IERC20;
    using Address for address;

    // the USDC token for Token Sale
    address public usdcToken;

    /*//////////////////////////////////////////////////////////////
                               MODIFIERS
    //////////////////////////////////////////////////////////////*/

    modifier revertIfZero(uint256 amount) {
        if (amount == 0) {
            revert CanNotBeZero();
        }
        _;
    }

    /*//////////////////////////////////////////////////////////////
                               EVENTS
    //////////////////////////////////////////////////////////////*/

    // event for when a user buys asset
    event PaymentReceived(
        address indexed buyer,
        uint256 amount,
        address indexed asset
    );

    // event for when a user sells asset
    event AssetSold(
        address indexed asset,
        address indexed seller,
        uint256 amount
    );

    // event for when operator withraw USDC
    event Withdrawn(address indexed to, uint256 amount);

    // event for when owner deposit USDC
    event Deposited(address indexed owner, uint256 amount);

    // event for when operator mint asset to buyer
    event AssetMinted(
        address indexed asset,
        address indexed buyer,
        uint256 amount
    );

    // event for when operator refund USDC to seller
    event RefundReceived(
        address indexed seller,
        uint256 amount,
        address indexed asset
    );

    // event for when operator set blacklisted
    event Blacklisted(
        address indexed asset,
        address indexed account,
        bool blacklisted
    );

    constructor() {
        _disableInitializers();
    }

    //  Initializes the contract
    function initialize(
        address _owner,
        address _usdcToken
    ) external initializer {
        require(_usdcToken != address(0), "USDC token is the zero address");
        usdcToken = _usdcToken;
        __Ownable_init(_owner);
    }

    /*//////////////////////////////////////////////////////////////
                       GLOBAL PAUSE FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    function pause(address _asset) public onlyOwner {
        Asset(_asset).pause();
    }

    function unpause(address _asset) public onlyOwner {
        Asset(_asset).unpause();
    }

    // set Blacklist
    function setBlacklist(
        address _asset,
        address _address,
        bool _blacklisted
    ) public onlyOwner {
        Asset(_asset).setBlacklist(_address, _blacklisted);
        emit Blacklisted(_asset, _address, _blacklisted);
    }

    /*//////////////////////////////////////////////////////////////
                        BUY && MINT ASSET FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    // user buy asset with USDC
    function buy(
        address _asset,
        uint256 _amount
    ) external revertIfZero(_amount) {
        require(
            IERC20(usdcToken).balanceOf(msg.sender) >= _amount,
            "Insufficient balance"
        );
        require(
            IERC20(usdcToken).allowance(msg.sender, address(this)) >= _amount,
            "Insufficient allowance"
        );
        IERC20(usdcToken).safeTransferFrom(msg.sender, address(this), _amount);
        emit PaymentReceived(msg.sender, _amount, _asset);
    }

    // operator send asset to buyer
    function mintAsset(
        address _asset,
        address _recipient,
        uint256 _amount
    ) external onlyOwner revertIfZero(_amount) returns (bool) {
        Asset(_asset).mint(_recipient, _amount);
        emit AssetMinted(_asset, _recipient, _amount);

        return true;
    }

    /*//////////////////////////////////////////////////////////////
                    SELL REFUND && BURN ASSET FUNCTIONS
    //////////////////////////////////////////////////////////////*/

    // user sell asset
    function sell(
        address _asset,
        uint256 _amount
    ) external revertIfZero(_amount) {
        require(
            IERC20(_asset).balanceOf(msg.sender) >= _amount,
            "Insufficient balance"
        );
        require(
            IERC20(_asset).allowance(msg.sender, address(this)) >= _amount,
            "Insufficient allowance"
        );
        IERC20(_asset).safeTransferFrom(msg.sender, address(this), _amount);
        Asset(_asset).burn(address(this), _amount);

        emit AssetSold(_asset, msg.sender, _amount);
    }

    // operator returns USDC to seller
    function refund(
        address _asset,
        uint256 _amount,
        address _recipient
    ) external onlyOwner revertIfZero(_amount) {
        require(
            IERC20(usdcToken).balanceOf(address(this)) >= _amount,
            "Contract Insufficient balance"
        );
        IERC20(usdcToken).safeTransfer(_recipient, _amount);

        emit RefundReceived(_recipient, _amount, _asset);
    }

    /*//////////////////////////////////////////////////////////////
                    Owner deposit & withdraw FUNCTION
    //////////////////////////////////////////////////////////////*/

    // operator withdraws USDC from the contract
    function withdraw(
        uint256 _amount,
        address _to
    ) external onlyOwner revertIfZero(_amount) {
        require(
            IERC20(usdcToken).balanceOf(address(this)) >= _amount,
            "Contract Insufficient balance"
        );

        IERC20(usdcToken).safeTransfer(_to, _amount);

        emit Withdrawn(_to, _amount);
    }

    // operator deposit USDC to contract
    function deposit(uint256 _amount) external onlyOwner revertIfZero(_amount) {
        require(
            IERC20(usdcToken).balanceOf(msg.sender) >= _amount,
            "Insufficient balance"
        );
        require(
            IERC20(usdcToken).allowance(msg.sender, address(this)) >= _amount,
            "Insufficient allowance"
        );
        IERC20(usdcToken).safeTransferFrom(msg.sender, address(this), _amount);

        emit Deposited(msg.sender, _amount);
    }
}

