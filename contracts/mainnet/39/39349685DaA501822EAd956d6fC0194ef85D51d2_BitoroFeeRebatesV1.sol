pragma solidity 0.8.24;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

contract BitoroFeeRebatesV1 is Ownable, ReentrancyGuard {
    IERC20 public usdcToken;
    bytes32 public currentMerkleRoot;

    mapping(address => bool) public hasClaimed;

    event MerkleRootUpdated(bytes32 indexed newMerkleRoot);
    event Claimed(address indexed claimant, uint256 amount);
    event Funded(uint256 amount);

    constructor(address _usdcTokenAddress, address initialOwner) Ownable(initialOwner) {
        usdcToken = IERC20(_usdcTokenAddress);
    }

    // Allows the owner to deposit USDC into the contract for distribution
    function deposit(uint256 _amount) public onlyOwner {
        require(
            usdcToken.transferFrom(msg.sender, address(this), _amount),
            "Transfer failed."
        );
        emit Funded(_amount);
    }

    // Allows the owner to update the Merkle root to the new week's distribution
    function updateMerkleRoot(bytes32 _newMerkleRoot) public onlyOwner {
        currentMerkleRoot = _newMerkleRoot;
        emit MerkleRootUpdated(currentMerkleRoot);
    }

    // Function for a user to claim their USDC based on the Merkle proof
    function claimUSDC(
        uint256 _amount,
        bytes32[] calldata _merkleProof
    ) public {
        require(!hasClaimed[msg.sender], "You have already claimed your USDC.");
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender, _amount));
        require(
            MerkleProof.verify(_merkleProof, currentMerkleRoot, leaf),
            "Invalid or incorrect proof."
        );

        hasClaimed[msg.sender] = true;
        require(usdcToken.transfer(msg.sender, _amount), "Transfer failed.");
        emit Claimed(msg.sender, _amount);
    }

    // Optional: Allows the owner to withdraw unclaimed USDC after distribution is complete
    function recoverUnclaimedUSDC() public onlyOwner {
        uint256 contractBalance = usdcToken.balanceOf(address(this));
        usdcToken.transfer(msg.sender, contractBalance);
    }
}