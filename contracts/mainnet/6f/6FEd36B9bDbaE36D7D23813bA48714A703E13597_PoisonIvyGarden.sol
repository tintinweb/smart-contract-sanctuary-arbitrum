interface PoisonVoteToken {
    function mint(address _to, uint256 _amount) external returns (bool);
    function burn(address _from, uint256 _amount) external returns (bool);
    function balanceOf(address account) external view returns (uint256);

}

contract PoisonIvyGarden {
    using SafeERC20 for IERC20;

    struct TierInfo {
        uint256 timeInterval;
        uint256 tip;
    }

    struct LockBox {
        uint256 id;
        address beneficiary;
        uint256 balance;
        uint256 tip;
        uint256 releaseTime;
    }

    address public admin;
    IERC20 public PoisonIvy;
    PoisonVoteToken public PoisonVote;
    uint256 public totalBoxes = 0;

    TierInfo[] public tierInfo;

    mapping(address => LockBox[]) public lockBoxes;

    event Lock(
        address indexed sender,
        address indexed receiver,
        uint256 amount,
        uint256 tip,
        uint256 releaseTime
    );
    event Unlock(address indexed receiver, uint256 amount);

    constructor(IERC20 _PoisonIvy, PoisonVoteToken _PoisonVote) {
        admin = msg.sender;
        PoisonIvy = _PoisonIvy;
        PoisonVote = _PoisonVote;
    }

    function lock(
        address _beneficiary,
        uint256 _amount,
        uint256 id
    ) external returns (bool success) {
        require(_amount > 0, "0 not valid");
        require(
            _amount <= PoisonIvy.allowance(msg.sender, address(this)),
            "Allowance not high enough"
        );
        PoisonIvy.safeTransferFrom(msg.sender, address(this), _amount);

        TierInfo storage tier = tierInfo[id];
        totalBoxes = totalBoxes + 1;

        uint256 tip = (_amount * 10000000000) / tier.tip;
        uint256 releaseTime = block.timestamp + tier.timeInterval;

        lockBoxes[_beneficiary].push(
            LockBox({
                id: totalBoxes,
                beneficiary: _beneficiary,
                balance: _amount,
                tip: tip,
                releaseTime: releaseTime
            })
        );

        PoisonVote.mint(_beneficiary, _amount + tip);

        emit Lock(msg.sender, _beneficiary, _amount, tip, releaseTime);

        return true;
    }

    function unlock(uint256 id) external returns (bool success) {
        LockBox memory lockBox = getLockBox(msg.sender, id);

        require(lockBox.balance > 0);
        require(lockBox.beneficiary == msg.sender);
        require(lockBox.releaseTime <= block.timestamp);

        uint256 amount = lockBox.balance + lockBox.tip;
        lockBox.balance = 0;
        lockBox.tip = 0;
        updateLockBox(lockBox);

        require(
            PoisonVote.balanceOf(msg.sender) >= amount,
            "Not enough PoisonVote balance"
        );
        PoisonVote.burn(msg.sender, amount);

        PoisonIvy.safeTransfer(msg.sender, amount);

        emit Unlock(msg.sender, amount);
        return true;
    }

    function getLockBox(address account, uint256 LockBoxID)
        public
        view
        returns (LockBox memory)
    {
        LockBox[] memory accountLockBoxes = lockBoxes[account];
        LockBox memory LockBox_;
        for (uint256 i = 0; i < accountLockBoxes.length; i++) {
            if (accountLockBoxes[i].id == LockBoxID) {
                LockBox_ = accountLockBoxes[i];
            }
        }
        return LockBox_;
    }

    function updateLockBox(LockBox memory lockBox) internal {
        LockBox[] storage accountLockBoxes = lockBoxes[lockBox.beneficiary];
        for (uint256 i = 0; i < accountLockBoxes.length; i++) {
            if (accountLockBoxes[i].id == lockBox.id) {
                lockBoxes[lockBox.beneficiary][i] = lockBox;
            }
        }
    }

    function getNumLockBoxes(address account)
        public
        view
        returns (uint256 numSafes)
    {
        return lockBoxes[account].length;
    }

    function addTier(uint256 _timeInterval, uint256 _tip) external {
        require(msg.sender == admin, "Admin only");
        tierInfo.push(TierInfo({timeInterval: _timeInterval, tip: _tip}));
    }

    function setTierTip(uint _tip, uint id) external {
        require(msg.sender == admin, "Admin only");
        tierInfo[id].tip = _tip;
    }


}

