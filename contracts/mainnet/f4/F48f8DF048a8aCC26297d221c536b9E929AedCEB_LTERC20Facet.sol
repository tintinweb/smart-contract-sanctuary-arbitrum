            !rt.excluded.contains(sender) && !rt.excluded.contains(recipient)
        ) {
            IASReflectionFacet(address(this))._transferStandard(
                sender,
                recipient,
                amount
            );
        } else if (
            rt.excluded.contains(sender) && rt.excluded.contains(recipient)
        ) {
            IASReflectionFacet(address(this))._transferBothExcluded(
                sender,
                recipient,
                amount
            );
