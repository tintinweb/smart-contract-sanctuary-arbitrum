        address _token,
        address _stLocus,
        bytes32 _merkleRoot,
        address _treasury
    ) {
        token = IERC20(_token);
        merkleRoot = _merkleRoot;
        stLocus = ILSDepositaryFacet(_stLocus);
        treasury = _treasury;
        token.approve(address(stLocus), type(uint256).max);
    }

