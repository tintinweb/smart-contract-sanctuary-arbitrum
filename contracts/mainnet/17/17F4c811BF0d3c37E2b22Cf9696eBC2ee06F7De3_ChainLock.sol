    function getCumulativeTokenLockInfo(uint256 start, uint256 end)
    public
    view
    returns (CumulativeLockInfo[] memory lockInfos)
    {
        if (end > _lockedTokens.length()) {
            end = _lockedTokens.length();
        }
        if (start >= end) return lockInfos;
        lockInfos = new CumulativeLockInfo[](end - start);
        uint256 currentIndex = 0;
        for (uint256 i = start; i < end; i++) {
            lockInfos[currentIndex] = cumulativeLockInfo[_lockedTokens.at(i)];
            currentIndex++;
        }
    }

