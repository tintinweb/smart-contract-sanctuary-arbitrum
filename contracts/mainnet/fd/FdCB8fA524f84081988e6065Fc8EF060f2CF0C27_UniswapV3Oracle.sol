                    rate = rate.add(rate0.mul(w));
                    weight = weight.add(w);
                }
            } else {
                for (uint256 i = 0; i < _SUPPORTED_FEES_COUNT; i++) {
                    for (uint256 j = 0; j < _SUPPORTED_FEES_COUNT; j++) {
                        (uint256 rate0, uint256 w0) = _getRate(srcToken, connector, fees[i]);
                        if (w0 == 0) {
