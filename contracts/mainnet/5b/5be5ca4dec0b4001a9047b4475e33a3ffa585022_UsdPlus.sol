    function _calculateNewCurrentLimit(uint256 newMaxLimit, uint256 oldMaxLimit, uint256 currentLimit)
        internal
        pure
        returns (uint256)
    {
        if (newMaxLimit > oldMaxLimit) {
            return currentLimit + (newMaxLimit - oldMaxLimit);
