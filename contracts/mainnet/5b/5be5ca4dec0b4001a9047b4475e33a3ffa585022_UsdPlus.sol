        uint256 currentLimit = _getCurrentLimit(
            issuerLimits.mintLimitTimestamp,
            issuerLimits.mintRatePerSecond,
            issuerLimits.mintMaxLimit,
            issuerLimits.mintCurrentLimit
        );
