/**
 * @title Minter contract fo    r stFLIP
 * @notice Allows users to mint stFLIP 1:1 with native FLIP
 * Allows the rebaser to mint stFLIP fee
 */
contract OverseerV1 is Initializable, Ownership {

    uint256 constant MINIMUM_MINT_AMOUNT = 10**18;
    uint256 constant REWARD_REDEEM_THRESHOLD = 10**8;
    stSqd public stsqd;
    ERC20Permit public sqd;
    IStaking public staking;
    IRewardTreasury public rewardTreasury;


    error BelowMinimumMintAmount();
    error InsufficientAmountOut();
    error AprTooHigh(uint256 apr);
    error SupplyDecreaseTooHigh(uint256 decrease);
    constructor() {
        _disableInitializers();
    }

    struct Unstake {
        uint128 amount;
        uint128 sum;
        address user;
        bool completed;
    }

    struct PermitInfo {
        address owner;
        address spender;
        uint256 value;
        uint256 deadline;
        uint8 v;
        bytes32 r;
        bytes32 s;
    }

    struct Operator {
        address manager;
        string name;
        IWorkerManagerV1 workerManager;
        bool whitelisted;
        uint256 pendingFee;
        uint256 validatorFeeBps;
        uint256 workerAllowance;
    }

    Unstake[] public unstakes;
    Operator[] public operators;
    uint256 public unstakingAmount;
    uint256 public totalRedeemed;
    uint256 public syncInterval;
    uint256 public rewardFeeBps;
    uint256 public pendingFee;
    uint256 public lastRebaseTime;
    uint256 public slashThresholdBps;
    uint256 public aprThresholdBps;
    address public workerManagerImplementation;
    uint256 public totalOperatorPendingFee;
    address public proxyAdmin;
    IWorkerRegistration public workerRegistration;

    function initialize(address stsqd_, address gov_, address workerManagerImplementation_, address proxyAdmin_) initializer public {
        stsqd = stSqd(stsqd_);
        __AccessControlDefaultAdminRules_init(0, gov_);
        workerManagerImplementation = workerManagerImplementation_;
        proxyAdmin = proxyAdmin_;

        sqd = ERC20Permit(0x1337420dED5ADb9980CFc35f8f2B054ea86f8aB1);
        staking = IStaking(0xB31a0D39D2C69Ed4B28d96E12cbf52C5f9Ac9a51);
        rewardTreasury = IRewardTreasury(0x237Abf43bc51fd5c50d0D598A1A4c26E56a8A2A0);
        workerRegistration = IWorkerRegistration(0x36E2B147Db67E76aB67a4d07C293670EbeFcAE4E);
        syncInterval = 1 days;
        lastRebaseTime = block.timestamp;

        aprThresholdBps = 1000;
        slashThresholdBps = 1;
        sqd.approve(address(staking), type(uint256).max);

        rewardFeeBps = 500;

        unstakes.push(Unstake(0,0,address(0),true));
        operators.push(Operator(address(gov_),"null",IWorkerManagerV1(address(0)),false, 0, 0, 0));

        _grantRole(MANAGER_ROLE, gov_);
        _grantRole(GOVERNOR_ROLE, gov_);
        _grantRole(REBASER_ROLE, gov_);

    }


    /** Public mint function. Takes FLIP from users and returns stFLIP 1:1
     * @param to The address to mint stFLIP to
     * @param assets The amount of stFLIP to mint
     */
    function mint(address to, uint256 assets, bool permit, PermitInfo memory permitInfo) public returns (uint256) {
        if (assets < MINIMUM_MINT_AMOUNT) revert BelowMinimumMintAmount();

        if (permit) {
            sqd.permit(permitInfo.owner, permitInfo.spender, permitInfo.value, permitInfo.deadline, permitInfo.v, permitInfo.r, permitInfo.s);
        }

        sqd.transferFrom(msg.sender, address(this), assets);
        stsqd.mint(to, assets);
    }

    function burn(address to, uint256 assets) external returns (uint256) {
        return _burn(to, assets);
    }

    function _burn(address to, uint256 assets) internal returns (uint256) {
        require(assets > 1000);
        stsqd.burn(msg.sender, assets);

        uint256 currentBalance = sqd.balanceOf(address(this));

        if (currentBalance >= assets) {
            sqd.transfer(to, assets);

            return assets;
        } else {

            if (currentBalance > 0) {
                sqd.transfer(to, currentBalance);
                assets -= currentBalance;
            }

            uint128 previousSum = unstakes[unstakes.length - 1].sum;
            uint128 assets = SafeCast.toUint128(assets);
            unstakes.push(Unstake(previousSum + assets, assets, address(to), false));

            return currentBalance;
        }

    }

    function redeem(uint256 burnId) public returns (uint256) {
        require(_redeemable(burnId) == true);

        uint256 amount_ = unstakes[burnId].amount;
        address user_ = unstakes[burnId].user;

        totalRedeemed += amount_;
        unstakes[burnId].completed = true;

        sqd.transfer(user_, amount_);

        return amount_;
    }

    function _redeemable(uint256 burnId) internal view returns (bool) {
        uint256 sum_ = unstakes[burnId].sum;
        bool completed_ = unstakes[burnId].completed;
        uint256 totalRedeemed_ = totalRedeemed;
        uint256 difference = sum_ < totalRedeemed_ ? 0 : sum_ - totalRedeemed_;
        return completed_ == false && difference + pendingFee + totalOperatorPendingFee <= sqd.balanceOf(address(this));
    }

    function totalPendingUnstakes() external view returns (uint256) {
        return _totalPendingUnstakes();
    }

    function _totalPendingUnstakes() internal view returns (uint256) {
        return unstakes[unstakes.length - 1].sum - totalRedeemed;
    }

    function stakeToWorker(uint256[] memory workerIds, uint256[] memory amounts) external onlyRole(MANAGER_ROLE){
        uint256 length = workerIds.length;
        for (uint i = 0; i < length; i++) {
            staking.deposit(workerIds[i], amounts[i]);
        }

        require(sqd.balanceOf(address(this)) >= _totalPendingUnstakes() + pendingFee + totalOperatorPendingFee, "Insufficient balance for pending unstakes");
    }

    function unstakeFromWorker(uint256[] memory workerIds, uint256[] memory amounts) external onlyRole(MANAGER_ROLE){
        uint256 length = workerIds.length;
        for (uint i = 0; i < length; i++) {
            staking.withdraw(workerIds[i], amounts[i]);
        }
    }

    function rebase() external onlyRole(REBASER_ROLE) {

        address distributor = 0x4de282bD18aE4987B3070F4D5eF8c80756362AEa;
        rewardTreasury.claim(distributor);

        uint256 totalDeposited;

        for (uint operatorId = 1; operatorId < operators.length; operatorId++) {

            IWorkerManagerV1 operatorWorkerManager = operators[operatorId].workerManager;

            uint256[] memory ownedWorkers = workerRegistration.getOwnedWorkers(address(operatorWorkerManager));

            for (uint i = 0; i < ownedWorkers.length; i++) {
                (, , uint256 bond, , ,) = workerRegistration.workers(ownedWorkers[i]);
                totalDeposited += bond;
            }
            uint256 operatorRewards = operatorWorkerManager.claim(distributor);


            uint256 feeIncrement = operatorRewards * operators[operatorId].validatorFeeBps / 10000;
            operators[operatorId].pendingFee += feeIncrement;
            totalOperatorPendingFee += feeIncrement;
        }


        uint256[] memory workers = staking.delegates(address(this));

        for (uint i = 0; i < workers.length; i++) {
            (uint256 deposit, ) = staking.getDeposit(address(this), workers[i]);
            totalDeposited += deposit;
        }

        uint256 currentSupply = stsqd.totalSupply();
        uint256 newSupply = totalDeposited + sqd.balanceOf(address(this)) - pendingFee - totalOperatorPendingFee;

        uint256 feeIncrease = (newSupply - currentSupply) * rewardFeeBps / 10000;
        
        pendingFee += feeIncrease;

        newSupply -= feeIncrease;

        uint256 timeElapsed = block.timestamp - lastRebaseTime;

        uint256 apr = _validateSupplyChange(timeElapsed, currentSupply, newSupply);

        stsqd.syncSupply(newSupply, syncInterval);
        lastRebaseTime = block.timestamp;

    }

    function _validateSupplyChange(uint256 timeElapsed, uint256 currentSupply, uint256 newSupply) internal view returns (uint256) {
        uint256 apr;
        if (newSupply > currentSupply){
            apr = (newSupply * 10**18 / currentSupply - 10**18) * 10**18 / (timeElapsed * 10**18 / 365 days) / (10**18/10000);

            if (apr + 1 >= aprThresholdBps) revert AprTooHigh(apr + 1);
        } else {
            uint256 supplyDecrease = 10000 - (newSupply * 10000 / currentSupply);
            if (supplyDecrease >= slashThresholdBps) revert SupplyDecreaseTooHigh(supplyDecrease);
        }

        return apr;
    }

    function claimFee(address to, uint256 amount, bool max, bool receiveCxt) external onlyRole(FEE_RECIPIENT_ROLE) {
        uint256 pendingFee_ = pendingFee;
        uint256 amountToClaim = max ? pendingFee_ : amount;

        if (amountToClaim > pendingFee_) {
            revert();
        }

        if (receiveCxt) {
            sqd.transfer(msg.sender, amountToClaim);
        } else {
            stsqd.mint(msg.sender, amountToClaim);
        }

        pendingFee -= amountToClaim;

    }

    function getAllUnstakes() external view returns (Unstake[] memory) {
        return unstakes;
    }

    function _getUnstakeIds(address account) internal view returns (uint256[] memory) {

        uint256[] memory unstakeIds = new uint256[](unstakes.length);
        uint256 t;

        uint256 burnsLength = unstakes.length;
        for (uint256 i; i < burnsLength; ++i) {
            if (unstakes[i].user == account) {
                unstakeIds[t] = i;
                t++;
            }
        }

        uint256[] memory filteredUnstakeIds = new uint256[](t);
        for (uint256 i; i < t; ++i) {
            filteredUnstakeIds[i] = unstakeIds[i];
        }

        return filteredUnstakeIds;
    }

    function getUnstakes(
        address account
    ) external view returns (Unstake[] memory, uint256[] memory, bool[] memory) {
        uint256[] memory burnIds = _getUnstakeIds(account);
        Unstake[] memory userBurns = new Unstake[](burnIds.length);
        bool[] memory userRedeemables = new bool[](burnIds.length);

        uint256 burnsLength = burnIds.length;
        for (uint256 i; i < burnsLength; ++i) {
            userBurns[i] = unstakes[burnIds[i]];
            userRedeemables[i] = _redeemable(burnIds[i]);
        }

        return (userBurns, burnIds, userRedeemables);
    }

    function addOperator(address manager, string memory name, uint256 validatorFeeBps, uint256 workerAllowance) external onlyRole(MANAGER_ROLE) {
        TransparentUpgradeableProxy newWorkerManager = new TransparentUpgradeableProxy(workerManagerImplementation, proxyAdmin , "");
        IWorkerManagerV1(address(newWorkerManager)).initialize();

        operators.push(Operator(manager, name, IWorkerManagerV1(address(newWorkerManager)), true, 0, validatorFeeBps, workerAllowance));
    }

    function workerManagerWithdraw(uint256 operatorId, bytes calldata peerId) external  {
        if (operators[operatorId].manager != msg.sender) revert();

        operators[operatorId].workerManager.withdraw(peerId);
    }

    function workerManagerRegister(uint256 operatorId, bytes calldata peerId, string calldata metadata) external {
        if (operators[operatorId].manager != msg.sender) revert();
        
        uint256 bondAmount = workerRegistration.bondAmount();
        sqd.transfer(address(operators[operatorId].workerManager), bondAmount);
        operators[operatorId].workerManager.register(peerId, metadata);

        operators[operatorId].workerAllowance -= 1;
    }

    function workerManagerDeregister(uint256 operatorId, bytes calldata peerId) external{
        if (operators[operatorId].manager != msg.sender) revert();

        operators[operatorId].workerManager.deregister(peerId);
    }

    function workerManagerUpdateMetadata(uint256 operatorId, bytes calldata peerId, string memory metadata) external {
        if (operators[operatorId].manager != msg.sender) revert();

        operators[operatorId].workerManager.updateMetadata(peerId, metadata);
    }

    function workerManagerReturnExcessiveBond(uint256 operatorId, bytes calldata peerId) external {
        if (operators[operatorId].manager != msg.sender) revert();

        operators[operatorId].workerManager.returnExcessiveBond(peerId);
    }

    function operatorClaimFee(uint256 operatorId) external {
        if (operators[operatorId].manager != msg.sender) revert();

        uint256 fee = operators[operatorId].pendingFee;
        operators[operatorId].pendingFee = 0;
        totalOperatorPendingFee -= fee;

        sqd.transfer(msg.sender, fee);
    }
    
    function setWorkerManagerImplementation(address workerManagerImplementation_) external onlyRole(MANAGER_ROLE) {
        workerManagerImplementation = workerManagerImplementation_;
    }

    function setProxyAdmin(address proxyAdmin_) external onlyRole(MANAGER_ROLE) {
        proxyAdmin = proxyAdmin_;
    }
}

