/**
 * @title Minter contract fo    r stFLIP
 * @notice Allows users to mint stFLIP 1:1 with native FLIP
 * Allows the rebaser to mint stFLIP fee
 */
contract WorkerManagerV1 is Initializable, Ownership{

    uint256 constant MINIMUM_MINT_AMOUNT = 10**18;
    uint256 constant REWARD_REDEEM_THRESHOLD = 10**8;
    stSqd public stsqd;
    ERC20Permit public sqd;
    IStaking public staking;
    IRewardTreasury public rewardTreasury;
    OverseerV1 public overseer;
    IWorkerRegistration public workerRegistration;

    error NotOverseer();
    constructor() {
        _disableInitializers();
    }

    function initialize() external {
        overseer = OverseerV1(msg.sender);
        _grantRole(OVERSEER_ROLE, address(overseer));

        sqd = ERC20Permit(0x1337420dED5ADb9980CFc35f8f2B054ea86f8aB1);
        staking = IStaking(0xB31a0D39D2C69Ed4B28d96E12cbf52C5f9Ac9a51);
        rewardTreasury = IRewardTreasury(0x237Abf43bc51fd5c50d0D598A1A4c26E56a8A2A0);
        workerRegistration = IWorkerRegistration(0x36E2B147Db67E76aB67a4d07C293670EbeFcAE4E);

        sqd.approve(address(workerRegistration), type(uint).max);
        sqd.approve(msg.sender, type(uint).max);
    }

    modifier auth()  {
        if (!hasRole(OVERSEER_ROLE, msg.sender) && !overseer.hasRole(MANAGER_ROLE, msg.sender)) {
            revert NotOverseer();
        }
        _;
    }


    function withdraw(bytes calldata peerId) external auth() {
        workerRegistration.withdraw(peerId);
        sqd.transfer(address(overseer), sqd.balanceOf(address(this)));
    }

    function deregister(bytes calldata peerId) external auth() {
        workerRegistration.deregister(peerId);
        sqd.transfer(address(overseer), sqd.balanceOf(address(this)));
    }

    function register(bytes calldata peerId, string memory metadata) external auth() {
        workerRegistration.register(peerId, metadata);
    }

    function updateMetadata(bytes calldata peerId, string memory metadata) external auth() {
        workerRegistration.updateMetadata(peerId, metadata);
    }

    function returnExcessiveBond(bytes calldata peerId) external auth() {
        workerRegistration.returnExcessiveBond(peerId);

        sqd.transfer(address(overseer), sqd.balanceOf(address(this)));
    }

    function claim(address rewardsDistribution) external auth() returns (uint256) {
        rewardTreasury.claim(rewardsDistribution);
        uint256 reward = sqd.balanceOf(address(this));
        sqd.transfer(address(overseer), reward);
        return reward;
    }

    function retrieveFunds() external auth() {
        sqd.transfer(address(overseer), sqd.balanceOf(address(this)));
    }
    
}

